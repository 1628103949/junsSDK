<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">


            <EditText
                android:id="@+id/et_app_key"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="15dp"
                android:hint="请输入游戏appkey" />

            <EditText
                android:id="@+id/et_pay_amount"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="15dp"
                android:hint="请输入支付金额" />

            <EditText
                android:id="@+id/et_interval_time"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="15dp"
                android:hint="请输入心跳间隔(单位秒)"
                android:inputType="number" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_num"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:layout_margin="15dp"
                    android:layout_weight="2"
                    android:hint="设置未读数"
                    android:inputType="number" />

                <Button
                    android:id="@+id/btn_set_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置未读数" />


            </LinearLayout>


            <Button
                android:id="@+id/btn_portrait_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#ff808080"
                android:gravity="center"
                android:padding="10dp"
                android:text="切换成竖屏"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_landscape_screen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#ff808080"
                android:gravity="center"
                android:padding="10dp"
                android:text="切换成横屏"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_init"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#ff808080"
                android:gravity="center"
                android:padding="10dp"
                android:text="初始化"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#ff808080"
                android:gravity="center"
                android:padding="10dp"
                android:text="登录"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#ff808080"
                android:gravity="center"
                android:padding="10dp"
                android:text="支付"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="#ff808080"
                android:gravity="center"
                android:padding="10dp"
                android:text="退出登录"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            tools:text="初始化成功" />

    </LinearLayout>
</ScrollView>

