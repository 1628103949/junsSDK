<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/hyberry_fragment_bg"
        android:orientation="vertical">

        <com.huya.berry.login.common.widgets.CommonTopBar
            android:id="@+id/ctb_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/hyberry_common_frame"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_register_phone"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawableLeft="@drawable/hyberry_icon_accont"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="@string/hyberry_login_phone_number"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textColor="@color/hyberry_color_333333"
                    android:textColorHint="@color/hyberry_graycc"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_register_verify_code"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@drawable/hyberry_common_frame"
                    android:digits="@string/hyberry_alphabet_and_number"
                    android:drawableLeft="@drawable/hyberry_selector_code_icon"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="@string/hyberry_login_verify_code"
                    android:maxLength="6"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text=""
                    android:textColor="@color/hyberry_color_333333"
                    android:textColorHint="@color/hyberry_graycc"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_register_get_verify_code"
                    android:layout_width="88dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/hyberry_common_frame"
                    android:gravity="center"
                    android:text="@string/hyberry_login_get_verify_code"
                    android:textColor="@color/hyberry_color_333333"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/hyberry_common_frame"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_register_set_password"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="@string/hyberry_alphabet_and_number"
                    android:drawableLeft="@drawable/hyberry_icon_password"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:hint="@string/hyberry_input_pwd_tip"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:maxLines="1"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:textColor="@color/hyberry_color_333333"
                    android:textColorHint="@color/hyberry_graycc"
                    android:textSize="14sp" />


                <ImageView
                    android:id="@+id/iv_register_show_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="9dp"
                    android:src="@drawable/hyberry_icon_not_see" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/hyberry_common_checkbox"
                    android:drawablePadding="5dp"
                    android:paddingLeft="0dp"
                    android:text="@string/hyberry_is_agree_rule"
                    android:textColor="@color/hyberry_color_666666"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_register_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hyberry_login_rule"
                    android:textColor="@color/hyberry_color_4A90E2"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_register_privacy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hyberry_login_privacy"
                    android:textColor="@color/hyberry_color_4A90E2"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_login_and_register"
                android:layout_width="280dp"
                android:layout_height="38dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/hyberry_common_button_circle_bg"
                android:gravity="center"
                android:text="@string/hyberry_login_and_register"
                android:textColor="@color/hyberry_color_white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>