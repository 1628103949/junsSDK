<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/hyberry_fragment_bg"
        android:orientation="vertical">

        <com.huya.berry.login.common.widgets.CommonTopBar
            android:id="@+id/ctb_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/tv_login_tourist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:textColor="@color/hyberry_color_333333"
            android:textSize="16sp"
            android:textStyle="bold"
            tool:text="游客: HUYA345566" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/hyberry_login_tourist_tip"
            android:textColor="@color/hyberry_color_666666"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_login_tourist_certification"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/hyberry_common_button_circle_bg"
            android:gravity="center"
            android:text="@string/hyberry_login_tourist_certification"
            android:textColor="@color/hyberry_white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_login_tourist_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="47dp"
            android:text="@string/hyberry_login_tourist_enter"
            android:textColor="@color/hyberry_color_4A90E2"
            android:textSize="14sp" />
    </LinearLayout>

    </LinearLayout>

</FrameLayout>