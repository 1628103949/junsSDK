<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/hyberry_fragment_bg"
        android:orientation="vertical">
        <com.huya.berry.login.common.widgets.CommonTopBar
            android:id="@+id/ctb_title_bar"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"/>


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="253dp"
                      android:layout_marginLeft="15dp"
                      android:layout_marginRight="15dp"
                      android:orientation="vertical">
            <TextView android:layout_width="310dp"
                android:layout_height="40dp"
                android:gravity="left"
                android:lines="2"
                android:text="@string/hyberry_login_tips"
                android:textColor="@color/hyberry_color_666666"
                android:layout_marginTop="12dp"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/phone_tip"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="left"
                android:text="@string/hyberry_login_tips_vertify_phone"
                android:textColor="@color/hyberry_color_333333"
                android:textSize="16dp"
                android:layout_marginTop="13dp"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="10dp"
                          android:orientation="horizontal">
                <EditText android:id="@+id/edit_verify_code"
                          android:layout_width="0dp"
                          android:layout_height="36dp"
                          android:layout_weight="1"
                          android:background="@drawable/hyberry_common_frame"
                          android:drawableLeft="@drawable/hyberry_icon_code"
                          android:drawablePadding="8dp"
                          android:gravity="center_vertical"
                          android:hint="请输入验证码"
                          android:paddingLeft="8dp"
                          android:paddingRight="8dp"
                          android:text=""
                          android:textColor="@color/hyberry_color_333333"
                          android:textColorHint="@color/hyberry_color_CCCCCC"
                          android:textSize="14sp"
                          android:maxLength="6"
                          android:inputType="number"/>

                <TextView android:id="@+id/tv_get_verify_code"
                          android:layout_width="88dp"
                          android:layout_height="36dp"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp"
                          android:background="@drawable/hyberry_common_frame"
                          android:gravity="center"
                          android:text="获取验证码"
                          android:textColor="@color/hyberry_color_333333"
                          android:textSize="14sp"/>
            </LinearLayout>

            <TextView android:id="@+id/tv_login"
                      android:layout_width="280dp"
                      android:layout_height="38dp"
                      android:layout_marginTop="12dp"
                      android:background="@drawable/hyberry_comn_selector_corner_btn"
                      android:gravity="center"
                      android:text="登录"
                      android:textColor="@color/hyberry_color_white"
                      android:textSize="16sp"
            />
            <TextView
                android:id="@+id/not_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/hyberry_login_not_get_code"
                android:textColor="@color/hyberry_color_666666"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="37dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>