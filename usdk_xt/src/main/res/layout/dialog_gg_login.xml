<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_solid_4_ff24252e_ff2e2727_border_1_80ff7700"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="游戏登录"
            android:textColor="@color/FF222222"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_login_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="忘记密码？"
            android:textColor="@color/FF8E8E93"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/shape_solid_4_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/et_login_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/gg_ic_login_id"
                android:drawablePadding="10dp"
                android:hint="账号/手机号"
                android:maxLength="20"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/FF222222"
                android:textColorHint="@color/FF8E8E93"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_login_more"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/gg_ic_down"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:id="@+id/v_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/FFE1E1E1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@null"
                android:drawableLeft="@drawable/gg_ic_login_psw"
                android:drawablePadding="10dp"
                android:hint="密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/FF222222"
                android:textColorHint="@color/FF8E8E93"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_login_show_psw"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/gg_ic_login_nosee"
                android:scaleType="centerInside"
                android:paddingRight="12dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_login_login"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_solid_01aafd"
        android:text="进入游戏"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp">

        <TextView
            android:id="@+id/tv_login_register"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/gg_ic_login_fast"
            android:drawablePadding="4dp"
            android:text="快速注册"
            android:textColor="@color/FF8E8E93"
            android:textSize="10sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_login_phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/gg_ic_login_phone_orange"
            android:drawablePadding="4dp"
            android:text="手机注册"
            android:textColor="@color/FF8E8E93"
            android:textSize="10sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_login_account_register"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/gg_ic_login_account"
            android:drawablePadding="4dp"
            android:text="账号注册"
            android:textColor="@color/FF8E8E93"
            android:textSize="10sp"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>