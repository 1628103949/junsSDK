<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp"
    android:orientation="vertical"
    android:background="@drawable/shape_solid_4_ff24252e_ff2e2727_border_1_80ff7700">

    <TextView
        android:id="@+id/tv_change_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/gg_ic_back"
        android:text="修改密码"
        android:textColor="@color/FF222222"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:background="@color/alpha_33FFFFFF" />

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/shape_solid_4_white">

        <EditText
            android:id="@+id/et_scp_old_psw"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:drawableLeft="@drawable/gg_ic_login_psw"
            android:drawablePadding="10dp"
            android:maxLength="20"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="请输入旧密码"
            android:textColor="@color/FF222222"
            android:textColorHint="@color/FF8E8E93"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/FFE1E1E1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/et_scp_psw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableLeft="@drawable/gg_ic_login_psw"
                android:drawablePadding="10dp"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="请输入新密码"
                android:textColor="@color/FF222222"
                android:textColorHint="@color/FF8E8E93"
                android:textSize="12sp"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/iv_scp_show_psw"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/gg_ic_login_nosee"
                android:scaleType="centerInside"
                android:paddingRight="12dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/FFE1E1E1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/et_scp_psw_again"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableLeft="@drawable/gg_ic_login_psw"
                android:drawablePadding="10dp"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="请再次确认密码"
                android:textColor="@color/FF222222"
                android:textColorHint="@color/FF8E8E93"
                android:textSize="12sp"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/iv_scp_show_psw_again"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/gg_ic_login_nosee"
                android:scaleType="centerInside"
                android:paddingRight="12dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_scp_commit"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_solid_01aafd"
        android:text="确认密码"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="visible" />

</LinearLayout>
