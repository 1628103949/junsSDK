<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_solid_4_ff24252e_ff2e2727_border_1_80ff7700"
    android:padding="15dp">

    <TextView
        android:id="@+id/tv_sn_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提示"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/FF222222"/>

    <Button
        android:id="@+id/btn_sn_sure"
        android:layout_width="72dp"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_solid_01aafd"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_gravity="center" />

</LinearLayout>