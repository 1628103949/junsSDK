<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_solid_4_ff24252e_ff2e2727_border_1_80ff7700"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_bind_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/gg_ic_back"
            android:text="绑定手机"
            android:textColor="@color/FF222222"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_sbp_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="账号：2222222"
            android:textColor="@color/FF8E8E93"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:background="@color/alpha_33FFFFFF" />

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_solid_4_white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_sbp_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:drawableLeft="@drawable/gg_ic_login_phone"
            android:drawablePadding="10dp"
            android:hint="手机号"
            android:inputType="phone"
            android:maxLength="16"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/FF222222"
            android:textColorHint="@color/FF8E8E93"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/FFE1E1E1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/et_sbp_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableLeft="@drawable/gg_ic_login_code"
                android:drawablePadding="14dp"
                android:hint="短信验证码"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/FF222222"
                android:textColorHint="@color/FF8E8E93"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sbp_send_code"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:background="@drawable/selector_phone_login_code"
                android:gravity="center"
                android:minWidth="72dp"
                android:text="发送验证码"
                android:textColor="@color/white"
                android:textSize="11sp" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_sbp_bind"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_solid_01aafd"
        android:text="立即绑定"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="visible" />

</LinearLayout>
