<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_solid_4_ff24252e_ff2e2727_border_1_80ff7700"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_sda_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:text="检测到新版本需要更新"
        android:textColor="@color/FF222222"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/pb_sda_progress"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        style="?android:attr/progressBarStyleHorizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="20dp"
        android:background="@color/FF8E8E93" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_sda_exit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="退出游戏"
            android:textSize="14sp"
            android:textColor="@color/FF222222"
            android:gravity="center" />

        <View
            android:layout_width="1px"
            android:layout_height="48dp"
            android:background="@color/FF8E8E93" />

        <TextView
            android:id="@+id/tv_sda_update"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="更新游戏"
            android:textSize="14sp"
            android:textColor="@color/FF01AAFD"
            android:gravity="center" />
    </LinearLayout>



</LinearLayout>