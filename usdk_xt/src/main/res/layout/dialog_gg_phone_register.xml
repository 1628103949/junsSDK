<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_solid_4_ff24252e_ff2e2727_border_1_80ff7700">

    <TextView
        android:id="@+id/tv_phone_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/gg_ic_back"
        android:text="手机注册"
        android:textColor="@color/FF222222"
        android:textSize="18sp" />

    <View
        android:id="@+id/v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        android:background="@color/alpha_33FFFFFF" />

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:background="@drawable/shape_solid_4_white">

        <EditText
            android:id="@+id/et_pr_phone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:drawableLeft="@drawable/gg_ic_login_phone"
            android:drawablePadding="10dp"
            android:maxLength="16"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:hint="手机号"
            android:textColor="@color/FF222222"
            android:textColorHint="@color/FF8E8E93"
            android:textSize="12sp"
            android:inputType="phone" />

        <View
            android:id="@+id/v_line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/FFE1E1E1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_image_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:drawableLeft="@drawable/gg_ic_photocode"
                android:drawablePadding="12dp"
                android:maxLength="16"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="图片验证码"
                android:textColor="@color/FF222222"
                android:textColorHint="@color/FF8E8E93"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/iv_image_code"
                android:layout_width="72dp"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:id="@+id/v_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/FFE1E1E1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_pr_code"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@null"
                android:drawableLeft="@drawable/gg_ic_login_code"
                android:drawablePadding="14dp"
                android:maxLength="10"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="短信验证码"
                android:textColor="@color/FF222222"
                android:textColorHint="@color/FF8E8E93"
                android:textSize="12sp"
                android:inputType="number" />

            <TextView
                android:id="@+id/tv_pr_send_code"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:minWidth="72dp"
                android:text="发送验证码"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:background="@drawable/selector_phone_login_code"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <View
            android:id="@+id/v_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/FFE1E1E1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <EditText
                android:id="@+id/et_pr_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableLeft="@drawable/gg_ic_login_psw"
                android:drawablePadding="14dp"
                android:maxLength="20"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="密码（6-20位数字或密码）"
                android:textColor="@color/FF222222"
                android:textColorHint="@color/FF8E8E93"
                android:textSize="12sp"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/iv_pr_show_psw"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/gg_ic_login_nosee"
                android:scaleType="centerInside"
                android:paddingRight="12dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_pr_register"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_solid_01aafd"
        android:text="注册"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/cb_pr_check"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:button="@drawable/selector_fast_register_checkbox"
            android:checked="true" />

        <TextView
            android:id="@+id/tv_pr_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/FF8E8E93"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
