<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_solid_4_ff24252e_ff2e2727_border_1_80ff7700">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="是否确认切换账号？"
        android:textSize="17sp"
        android:textColor="@color/FF222222"
        android:layout_gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="24dp"
        android:background="@color/FF8E8E93" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_ssa_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="17sp"
            android:textColor="@color/FF222222"
            android:gravity="center" />

        <View
            android:layout_width="1px"
            android:layout_height="48dp"
            android:background="@color/FF8E8E93" />

        <TextView
            android:id="@+id/tv_ssa_true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="确认"
            android:textSize="17sp"
            android:textColor="@color/FF01AAFD"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>