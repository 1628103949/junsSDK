<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="340dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:background="@drawable/juns_realname_dialog_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:text="@string/juns_certification_tips"
                android:textColor="#747474"
                android:textSize="12sp" />
            <LinearLayout
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <TextView
                    android:id="@+id/show_realname_info"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:background="@drawable/juns_fw_btn_bg_tran"
                    android:text="@string/juns_show_realname_info"
                    android:textColor="#f7633b"
                    android:textSize="12sp"
                    android:visibility="gone"/>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:id="@+id/name_rl"
                    android:layout_width="285dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/juns_edit_bg">

                    <ImageView
                        android:id="@+id/name_img"
                        android:layout_width="43dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/juns_realname_icon" />

                    <com.juns.sdk.framework.view.EditText.ClearEditText
                        android:id="@+id/name_et"
                        android:layout_width="210dp"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="57dp"
                        android:layout_toRightOf="@id/name_img"
                        android:background="@drawable/juns_edit_bg"
                        android:hint="@string/juns_name_tips"
                        android:imeOptions="flagNoEnterAction"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="#333333"
                        android:textColorHint="#747474"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_card_rl"
                    android:layout_width="285dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/name_rl"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/juns_edit_bg">

                    <ImageView
                        android:id="@+id/id_card_img"
                        android:layout_width="43dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/juns_id_icon" />

                    <com.juns.sdk.framework.view.EditText.ClearEditText
                        android:id="@+id/id_card_et"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/id_card_img"
                        android:background="@drawable/juns_edit_bg"
                        android:hint="@string/juns_id_card_tips"
                        android:imeOptions="flagNoEnterAction"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="#333333"
                        android:textColorHint="#747474"
                        android:textCursorDrawable="@null"
                        android:textSize="14sp" />
                </RelativeLayout>

            </RelativeLayout>

            <ImageButton
                android:id="@+id/commit_btn"
                android:layout_width="285dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/juns_verify_txt"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/close_rl"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/juns_fw_btn_bg_tran">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/juns_close" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>