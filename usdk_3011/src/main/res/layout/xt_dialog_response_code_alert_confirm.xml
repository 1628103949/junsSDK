<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xt_dialog_bg_shape"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/xt_alert_dialog_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dip"
        android:text="提示"
        android:textColor="@color/xt_color_zi_black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/xt_color_dialog_bg" />


    <TextView
        android:id="@+id/xt_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:gravity="center"
        android:text="登录过期，请重新登录！"
        android:textColor="@color/xt_color_zi_black"
        android:textSize="13sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/xt_color_dialog_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dip"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xt_alert_dialog_tv_confirm_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dip"
            android:background="@drawable/xt_btn_rectangle_black_ring_shape"
            android:paddingBottom="6dip"
            android:paddingLeft="18dip"
            android:paddingRight="18dip"
            android:paddingTop="6dip"
            android:text="@string/xt_cancel"
            android:textColor="@color/xt_color_zi_black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/xt_alert_dialog_tv_confirm_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:background="@drawable/xt_btn_rectangle_orange_shape"
            android:paddingBottom="6dip"
            android:paddingLeft="18dip"
            android:paddingRight="18dip"
            android:paddingTop="6dip"
            android:text="@string/xt_determine"
            android:textColor="@color/xt_color_dialog_bg"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>