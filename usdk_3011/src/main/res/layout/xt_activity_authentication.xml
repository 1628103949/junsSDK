<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xt_color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/xt_authentication_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dip"
        android:layout_marginTop="12dip"
        android:drawableLeft="@drawable/xt_btn_back"
        android:drawablePadding="8dip"
        android:text="实名认证"
        android:textColor="@color/xt_color_zi_black"
        android:textSize="16sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/xt_authentication_first"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/xt_et_real_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="36dip"
            android:layout_marginRight="44dip"
            android:layout_marginTop="101dip"
            android:background="@null"
            android:hint="请填写真实姓名"
            android:singleLine="true"
            android:textColor="@color/xt_color_zi_black"
            android:textColorHint="@color/xt_color_zi_hui2"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="36dip"
            android:layout_marginRight="44dip"
            android:background="@color/xt_color_line_e1" />

        <EditText
            android:id="@+id/xt_et_id_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="36dip"
            android:layout_marginRight="44dip"
            android:layout_marginTop="25dip"
            android:background="@null"
            android:hint="请填写并确认证件号"
            android:singleLine="true"
            android:textColor="@color/xt_color_zi_black"
            android:textColorHint="@color/xt_color_zi_hui2"
            android:textSize="14sp" />



        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="36dip"
            android:layout_marginRight="44dip"
            android:layout_marginTop="2dip"
            android:background="@color/xt_color_line_e1" />


        <TextView
            android:id="@+id/xt_tv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="24dip"
            android:layout_marginRight="16dip"
            android:background="@drawable/xt_btn_round_orange_shape"
            android:paddingBottom="7dip"
            android:paddingLeft="27dip"
            android:paddingRight="27dip"
            android:paddingTop="7dip"
            android:text="认证"
            android:textColor="@color/xt_color_white"
            android:textSize="13sp" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/xt_authentication_two"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="67dip"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/xt_png_identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/xt_tv_verified_real_name"
            android:layout_marginTop="18dip"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/xt_color_zi_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="17dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="11sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/xt_color_zi_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/xt_tv_verified_id_card"
                android:textSize="11sp"
                android:textColor="@color/xt_color_zi_black"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>