<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xt_color_white"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="67dip"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/xt_png_identity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/xt_tv_verified_real_name"
        android:layout_marginTop="18dip"
        android:textSize="13sp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/xt_color_zi_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="17dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="11sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/xt_color_zi_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/xt_tv_verified_id_card"
            android:textSize="11sp"
            android:textColor="@color/xt_color_zi_black"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>