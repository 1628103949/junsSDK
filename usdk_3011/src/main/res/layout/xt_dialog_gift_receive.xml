<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xt_color_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/xt_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dip"
        android:text="领取成功"
        android:textColor="@color/xt_color_zi_black"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/xt_gift_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="26dip"
        android:text="礼包码：asdakjs45564"
        android:textColor="@color/xt_color_zi_black"
        android:textSize="11sp" />

    <View
        android:layout_width="1dip"
        android:layout_height="0dip"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/xt_gift_receive"
        android:layout_marginBottom="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dip"
        android:background="@drawable/xt_btn_down_bg"
        android:paddingBottom="8dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:paddingTop="8dip"
        android:text="复制礼包码"
        android:textColor="@color/xt_color_white"
        android:textSize="12sp" />


</LinearLayout>