<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/xt_switch_account_bg_shape"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/xt_img_switch_account_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xt_switch_account_loading" />

        <TextView
            android:id="@+id/xt_tv_switch_account_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dip"
            android:layout_marginLeft="17dip"
            android:layout_marginTop="17dip"
            android:text="登陆中..."
            android:textColor="@color/xt_color_theme"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/xt_btn_switch_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dip"
            android:background="@drawable/xt_switch_account_btn_shape"
            android:gravity="center"
            android:paddingBottom="6dip"
            android:paddingLeft="16dip"
            android:paddingRight="16dip"
            android:paddingTop="6dip"
            android:text="切换账号"
            android:textColor="@color/xt_color_theme"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>