<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/xt_iv_game_icon"
        android:layout_width="62dip"
        android:layout_height="62dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="11dip"
        android:layout_marginTop="15dip"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/xt_iv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_marginTop="15dip"
        android:src="@drawable/xt_transaction_tag" />

    <TextView
        android:id="@+id/xt_tv_game_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/xt_iv_game_icon"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+id/xt_iv_tag"
        android:layout_toRightOf="@+id/xt_iv_game_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/xt_color_login_select"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/xt_tv_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xt_tv_game_name"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="7dip"
        android:layout_toLeftOf="@+id/xt_iv_tag"
        android:layout_toRightOf="@+id/xt_iv_game_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="区服："
        android:textColor="@color/xt_color_login_normal"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/xt_tv_synopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xt_tv_server"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="7dip"
        android:layout_toLeftOf="@+id/xt_iv_tag"
        android:layout_toRightOf="@+id/xt_iv_game_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="简述："
        android:textColor="@color/xt_color_login_normal"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/xt_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xt_iv_game_icon"
        android:layout_marginLeft="11dip"
        android:layout_marginTop="10dip"
        android:text="累计消费:"
        android:textColor="@color/xt_color_login_normal"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/xt_tv_cumulative_consumption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xt_iv_game_icon"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/xt_text_view"
        android:text="¥0.00"
        android:textColor="#619df8"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xt_iv_game_icon"
        android:layout_marginLeft="11dip"
        android:layout_marginTop="10dip"
        android:layout_toLeftOf="@+id/xt_tv_price"
        android:text="售价:"
        android:textColor="@color/xt_color_login_normal"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/xt_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/xt_iv_game_icon"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:text="0.00"
        android:textColor="@color/xt_color_theme"
        android:textSize="12sp" />
</RelativeLayout>