<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/xt_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/xt_voucher_top_bg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/xt_tv_use_range"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dip"
            android:layout_marginRight="14dip"
            android:layout_weight="1"
            android:text="@string/xt_string_use_range"
            android:textColor="@color/xt_color_white"
            android:textSize="11sp" />

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dip"
            android:layout_marginRight="14dip"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/xt_tv_voucher_over"
                android:layout_toLeftOf="@+id/xt_tv_voucher_over"
                android:text="ï¿¥"
                android:textColor="@color/xt_color_white"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/xt_tv_voucher_over"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="00.00"
                android:textColor="@color/xt_color_white"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/xt_tv_voucher_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xt_tv_voucher_over"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dip"
                android:text=""
                android:textColor="@color/xt_color_white"
                android:textSize="9sp" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/xt_tv_voucher_validity_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xt_layout_top"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/xt_voucher_down_bg"
        android:gravity="center_vertical"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:layout_marginBottom="8dip"
        android:text="@string/xt_string_valid_period"
        android:textColor="@color/xt_color_voucher_validity_period"
        android:textSize="9sp" />
</RelativeLayout>
