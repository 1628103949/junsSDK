<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xt_dialog_bg_shape">

    <RelativeLayout
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/xt_main_notice_icon"
            android:layout_marginLeft="13dip"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/xt_tv_title"
            android:maxEms="11"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/xt_color_zi_black3"
            android:textSize="14sp" />
        <ImageView
            android:padding="10dip"
            android:id="@+id/xt_tv_confirm_cancel"
            android:src="@drawable/xt_close_gray"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/xt_color_line_e1"
        android:layout_marginTop="10dip"/>

        <WebView
            android:gravity="center"
            android:id="@+id/xt_tv_content"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />


    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dip"
        android:layout_marginBottom="22dip"
        android:orientation="horizontal">

        <!--<TextView-->
            <!--android:id="@+id/xt_tv_confirm_cancel"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginRight="8dip"-->
            <!--android:background="@drawable/xt_btn_rectangle_black_ring_shape"-->
            <!--android:paddingBottom="6dip"-->
            <!--android:paddingLeft="18dip"-->
            <!--android:paddingRight="18dip"-->
            <!--android:paddingTop="6dip"-->
            <!--android:text="@string/xt_cancel"-->
            <!--android:textColor="@color/xt_color_zi_black"-->
            <!--android:textSize="12sp"-->
            <!--android:textStyle="bold" />-->

        <TextView
            android:id="@+id/xt_tv_confirm_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:background="@drawable/xt_btn_rectangle_orange_shape"
            android:paddingBottom="6dip"
            android:paddingLeft="18dip"
            android:paddingRight="18dip"
            android:paddingTop="6dip"
            android:text="我知道了"
            android:textColor="@color/xt_color_white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>