<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/xt_iv_game_icon"
        android:layout_width="62dip"
        android:layout_height="62dip"
        android:layout_marginBottom="7dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="7dip"
        android:src="@drawable/xt_user_icon" />

    <TextView
        android:id="@+id/xt_tv_gift_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/xt_iv_game_icon"
        android:layout_marginRight="10dip"
        android:layout_toRightOf="@+id/xt_iv_game_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="《机械战纪-BT》新手礼包"
        android:textColor="@color/xt_color_login_select"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/xt_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xt_tv_gift_name"
        android:layout_marginRight="5dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/xt_iv_game_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/xt_string_activation_code"
        android:textColor="@color/xt_color_login_select"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/xt_tv_activation_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xt_tv_gift_name"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/xt_text_view"
        android:background="@drawable/xt_gift_activation_code_bg_shape"
        android:ellipsize="end"
        android:paddingBottom="2dip"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:paddingTop="3dip"
        android:singleLine="true"
        android:text="asda654das54d6"
        android:textColor="@color/xt_color_theme"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/xt_tv_valid_period"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xt_text_view"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@+id/xt_iv_game_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/xt_string_valid_period"
        android:textColor="@color/xt_color_login_normal"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/xt_tv_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:background="@drawable/xt_btn_round_orange_shape"
        android:paddingBottom="6dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:paddingTop="6dip"
        android:text="@string/xt_string_copy"
        android:textColor="@color/xt_color_white"
        android:textSize="12sp" />
</RelativeLayout>