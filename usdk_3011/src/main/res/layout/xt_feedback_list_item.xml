<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/xt_feedback_tv_status"
            android:gravity="center"
            android:layout_width="50dip"
            android:layout_height="19dip"
            android:layout_marginLeft="16dip"
            android:layout_marginTop="10dip"
            android:textColor="@color/xt_color_white"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/xt_feedback_tv_message"
            android:layout_toRightOf="@+id/xt_feedback_tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="10dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="我是标题"
            android:textColor="@color/xt_color_zi_black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/xt_feedback_ll"
            android:layout_marginTop="10dip"
            android:layout_below="@+id/xt_feedback_tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="0dip"
                android:layout_height="1dip"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/xt_feedback_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="16dip"
                android:text="2019-08-06 10:42:25"
                android:textColor="@color/xt_color_zi_hui3"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/xt_feedback_tv_line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_below="@+id/xt_feedback_ll"
            android:background="@color/xt_color_line_e1" />

    </RelativeLayout>


</LinearLayout>