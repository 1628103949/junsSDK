<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xt_color_white"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <EditText
            android:id="@+id/xt_et_level2_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="36dip"
            android:layout_marginRight="44dip"
            android:layout_marginTop="101dip"
            android:background="@null"
            android:hint="请输入安全密码"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/xt_color_zi_black"
            android:textColorHint="@color/xt_color_zi_hui2"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="36dip"
            android:layout_marginRight="44dip"
            android:background="@color/xt_color_line_e1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/xt_et_level2_repwd"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dip"
                android:layout_marginLeft="36dip"
                android:layout_marginTop="25dip"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请再次输入安全密码"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:singleLine="true"
                android:textColor="@color/xt_color_zi_black"
                android:textColorHint="@color/xt_color_zi_hui2"
                android:textSize="14sp" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="36dip"
            android:layout_marginRight="44dip"
            android:layout_marginTop="2dip"
            android:background="@color/xt_color_line_e1" />

        <TextView
            android:id="@+id/xt_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dip"
            android:layout_marginTop="8dip"
            android:textColor="@color/xt_color_zi_hui2"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dip"
            android:layout_marginRight="36dip"
            android:layout_marginTop="8dip"
            android:text="@string/xt_2password_rule"
            android:textColor="@color/xt_color_zi_hui2"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/xt_tv_set_level2_pwd_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dip"
            android:background="@drawable/xt_btn_round_orange_shape"
            android:paddingBottom="7dip"
            android:paddingLeft="27dip"
            android:paddingRight="27dip"
            android:paddingTop="7dip"
            android:text="确认"
            android:textColor="@color/xt_color_white"
            android:textSize="13sp" />


    </LinearLayout>
</LinearLayout>