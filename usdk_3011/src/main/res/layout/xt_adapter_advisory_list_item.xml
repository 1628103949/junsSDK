<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="103dip"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/xt_iv_game_icon"
        android:layout_width="148dip"
        android:layout_height="103dip"
        android:padding="16dip"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/xt_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dip"
            android:layout_marginTop="16dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/xt_color_zi_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/xt_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dip"
            android:layout_marginTop="6dip"
            android:ellipsize="end"
            android:maxLines="3"
            android:text=""
            android:textColor="@color/xt_color_zi_71"
            android:textSize="10sp" />

        <View
            android:layout_width="1dip"
            android:layout_height="0dip"
            android:layout_weight="1" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dip"
            android:layout_marginTop="6dip">

            <TextView
                android:id="@+id/xt_tv_game_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text=""
                android:visibility="invisible"
                android:textColor="@color/xt_color_zi_hui2"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/xt_tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dip"
                android:layout_marginRight="16dip"
                android:background="@drawable/xt_btn_round_blue_shape"
                android:paddingBottom="3dip"
                android:paddingLeft="12dip"
                android:paddingRight="12dip"
                android:paddingTop="3dip"
                android:text="资讯"
                android:textColor="@color/xt_color_white"
                android:textSize="10sp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>