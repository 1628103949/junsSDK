<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xt_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dip">

        <RelativeLayout
            android:id="@+id/xt_voucher_rl_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="16dip"
                android:layout_marginRight="16dip"
                android:src="@drawable/xt_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/xt_voucher_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择抵用劵"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/xt_voucher_tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="确定"
            android:textColor="@color/xt_color_zi_black"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/xt_color_line_e1" />


    <TextView
        android:id="@+id/xt_tv_no_voucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/xt_btn_rectangle_orange_ring_shape"
        android:gravity="center"
        android:paddingBottom="10dip"
        android:paddingTop="10dip"
        android:text="不使用抵用劵"
        android:textColor="@color/xt_color_theme"
        android:textSize="12sp" />

    <com.xiantu.paysdk.view.spring.SpringView
        android:id="@+id/xt_voucher_spinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/xt_color_white">

        <ListView
            android:id="@+id/xt_voucher_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:listSelector="@color/xt_color_white"
            android:scrollbars="none" />
    </com.xiantu.paysdk.view.spring.SpringView>
</LinearLayout>

