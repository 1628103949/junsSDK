<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/xt_active_tv_ll_top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/xt_color_hui_f2"
            android:gravity="bottom|center_horizontal"
            android:layout_height="49dip">
            <TextView
                android:layout_marginBottom="10dip"
                android:id="@+id/xt_active_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/xt_color_zi_hui3"
                android:textSize="11sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/xt_active_tv_status"
            android:layout_below="@+id/xt_active_tv_ll_top"
            android:gravity="center"
            android:layout_width="50dip"
            android:layout_height="19dip"
            android:layout_marginLeft="16dip"
            android:layout_marginTop="10dip"
            android:textColor="@color/xt_color_white"
            android:textSize="10sp"
            />
        <TextView
            android:id="@+id/xt_active_tv_title"
            android:layout_toRightOf="@+id/xt_active_tv_status"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="10dip"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xt_active_tv_ll_top"
            android:textColor="@color/xt_color_zi_black"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/xt_active_tv_desc"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="16dip"
            android:layout_marginRight="16dip"
            android:layout_marginTop="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xt_active_tv_title"
            android:textColor="@color/xt_color_zi_hui4"
            android:textSize="11sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/xt_active_tv_line"
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/xt_color_line_e1"
            android:layout_below="@+id/xt_active_tv_desc"
            android:layout_marginTop="7dip"
            />

        <LinearLayout
            android:id="@+id/xt_active_ll"
            android:layout_below="@+id/xt_active_tv_line"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/xt_active_tv_2det"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                android:text="查看详情"
                android:textColor="@color/xt_color_zi_hui4"
                android:textStyle="bold"
                android:textSize="10sp"
                />
            <View
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="1dip"/>
            <ImageView
                android:id="@+id/xt_active_tv_expiration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/xt_customer_for"
                android:layout_marginRight="16dip"
                android:layout_marginTop="8dip"
                android:layout_marginBottom="8dip"
                />
        </LinearLayout>


    </RelativeLayout>


</LinearLayout>