<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="7dip"
        android:background="@drawable/xt_wallet_details_item_bg_shape">

        <!--余额变动类型-->
        <TextView
            android:id="@+id/xt_tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="17dip"
            android:layout_toLeftOf="@+id/xt_tv_amount"
            android:text="福利币支出"
            android:textColor="@color/xt_color_login_select"
            android:textSize="12sp" />


        <!--变动金额-->
        <TextView
            android:id="@+id/xt_tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="17dip"
            android:text="+99.90"
            android:textColor="@color/xt_color_theme"
            android:textSize="12sp" />

        <!--金额支出收入方式-->
        <TextView
            android:id="@+id/xt_tv_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xt_tv_type"
            android:layout_marginBottom="16dip"
            android:layout_marginLeft="11dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="13dip"
            android:layout_toLeftOf="@+id/xt_tv_time"
            android:text="钱包充值金额入账"
            android:textColor="@color/xt_color_login_normal"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/xt_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/xt_tv_type"
            android:layout_marginBottom="16dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="13dip"
            android:text="2020.09.28 18:12:22"
            android:textColor="@color/xt_color_login_normal"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>