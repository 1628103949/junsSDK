<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xt_layout_no_data_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:id="@+id/xt_iv_no_data_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dip"
        android:src="@drawable/xt_no_data" />

    <TextView
        android:id="@+id/xt_tv_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xt_iv_no_data_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dip"
        android:text="暂无数据"
        android:textColor="@color/xt_color_login_normal"
        android:textSize="12sp" />


</RelativeLayout>