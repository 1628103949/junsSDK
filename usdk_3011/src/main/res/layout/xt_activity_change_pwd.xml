<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xt_color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:textColor="@color/xt_color_white">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="30dip"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dip"
            android:gravity="center">

            <ImageView
                android:layout_width="7dip"
                android:layout_height="12dip"
                android:src="@drawable/xt_btn_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/xt_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/xt_color_zi_black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/xt_color_line_e1" />

    <LinearLayout
        android:id="@+id/xt_input_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="36dip"
        android:layout_marginTop="66dip"
        android:orientation="vertical">

        <EditText
            android:id="@+id/xt_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/xt_old_password"
            android:singleLine="true"
            android:textColor="@color/xt_color_zi_black"
            android:textColorHint="@color/xt_color_zi_hui"
            android:textSize="14sp"
            android:inputType="textPassword"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/xt_input_layout1"
            android:layout_marginTop="10dip"
            android:background="@color/xt_color_line_e1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/xt_input_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="36dip"
        android:layout_marginTop="19dip"
        android:orientation="vertical">

        <EditText
            android:id="@+id/xt_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/xt_new_password"
            android:maxLength="12"
            android:singleLine="true"
            android:textColor="@color/xt_color_zi_black"
            android:textColorHint="@color/xt_color_zi_hui"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/xt_input_layout2"
            android:layout_marginTop="10dip"
            android:background="@color/xt_color_line_e1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/xt_input_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="36dip"
        android:layout_marginTop="19dip"
        android:orientation="vertical">

        <EditText
            android:id="@+id/xt_re_new_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="@string/xt_again_new_password"
            android:maxLength="12"
            android:textColor="@color/xt_color_zi_black"
            android:textColorHint="@color/xt_color_zi_hui"
            android:textSize="14sp"
            android:singleLine="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/xt_input_layout3"
            android:layout_marginTop="10dip"
            android:background="@color/xt_color_line_e1" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="36dip"
        android:layout_marginTop="8dip"
        android:text="@string/xt_password_rule"
        android:textColor="@color/xt_color_zi_hui2"
        android:textSize="10sp" />

    <Button
        android:id="@+id/xt_commit_change"
        android:layout_width="72dip"
        android:layout_height="30dip"
        android:layout_marginTop="24dip"
        android:background="@drawable/xt_btn_change_pwd_bg_shape"
        android:text="完成"
        android:textColor="@color/xt_color_white"
        android:textSize="15sp" />
</LinearLayout>