<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xt_dialog_bg_shape">

    <TextView
        android:id="@+id/xt_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="17dip"
        android:layout_marginTop="20dip"
        android:textColor="@color/xt_color_login_select"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/xt_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xt_tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="17dip"
        android:layout_marginRight="17dip"
        android:layout_marginTop="17dip"
        android:gravity="center"
        android:textColor="@color/xt_color_login_select"
        android:textSize="13sp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xt_tv_content"
        android:layout_marginBottom="17dip"
        android:layout_marginTop="17dip">

        <TextView
            android:id="@+id/xt_tv_confirm_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xt_layout_zfb_pay"
            android:layout_marginLeft="28dip"
            android:background="@drawable/xt_btn_round_f9_shape"
            android:paddingBottom="9dip"
            android:paddingLeft="26dip"
            android:paddingRight="26dip"
            android:paddingTop="9dip"
            android:text="@string/xt_cancel"
            android:textColor="@color/xt_color_login_normal"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/xt_tv_confirm_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/xt_layout_zfb_pay"
            android:layout_marginRight="28dip"
            android:background="@drawable/xt_btn_round_orange_shape"
            android:paddingBottom="9dip"
            android:paddingLeft="26dip"
            android:paddingRight="26dip"
            android:paddingTop="9dip"
            android:text="@string/xt_determine"
            android:textColor="@color/xt_color_white"
            android:textSize="14sp" />
    </RelativeLayout>


</RelativeLayout>