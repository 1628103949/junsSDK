<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xt_color_white"
    android:orientation="vertical">


    <EditText
        android:id="@+id/xt_et_real_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="44dip"
        android:layout_marginTop="101dip"
        android:background="@null"
        android:hint="请填写真实姓名"
        android:singleLine="true"
        android:textColor="@color/xt_color_zi_black"
        android:textColorHint="@color/xt_color_zi_hui2"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="44dip"
        android:background="@color/xt_color_line_e1" />

        <EditText
            android:id="@+id/xt_et_id_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="36dip"
            android:layout_marginRight="44dip"
            android:layout_marginTop="25dip"
            android:background="@null"
            android:hint="请填写并确认证件号"
            android:singleLine="true"
            android:textColor="@color/xt_color_zi_black"
            android:textColorHint="@color/xt_color_zi_hui2"
            android:textSize="14sp" />



    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="36dip"
        android:layout_marginRight="44dip"
        android:layout_marginTop="2dip"
        android:background="@color/xt_color_line_e1" />


    <TextView
        android:id="@+id/xt_tv_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="24dip"
        android:layout_marginRight="16dip"
        android:background="@drawable/xt_btn_round_orange_shape"
        android:paddingBottom="7dip"
        android:paddingLeft="27dip"
        android:paddingRight="27dip"
        android:paddingTop="7dip"
        android:text="认证"
        android:textColor="@color/xt_color_white"
        android:textSize="13sp" />


</LinearLayout>