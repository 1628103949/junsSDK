<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/ipay_dialog_protocol_bg"
              android:orientation="vertical"
              android:paddingBottom="@dimen/ipay_margin_20"
              android:paddingLeft="@dimen/ipay_margin_15"
              android:paddingRight="@dimen/ipay_margin_15"
              android:paddingTop="@dimen/ipay_margin_15">

    <TextView
        android:id="@+id/tv_privacy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/ipay_color_value_6"
        android:textSize="@dimen/ipay_text_size_20"/>


    <WebView
        android:id="@+id/wb_protocol"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/ipay_margin_15"
        android:layout_weight="1"
        android:background="@color/ipay_color_value_F3_F3_F3"/>

    <ListView
        android:id="@+id/list_protocol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginTop="@dimen/ipay_margin_5"
        android:listSelector="@color/ipay_transparent"/>

    <TextView
        android:id="@+id/tv_pass_protocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/ipay_margin_5"
        android:text="@string/ipay_btn_pass"
        android:background="@drawable/ipay_btn_protocol_shape"
        android:paddingLeft="@dimen/ipay_margin_30"
        android:paddingRight="@dimen/ipay_margin_30"
        android:paddingTop="@dimen/ipay_margin_5"
        android:paddingBottom="@dimen/ipay_margin_5"
        android:textColor="@color/ipay_protocol_pass_btn"
        android:textSize="@dimen/ipay_text_size_20"
        android:textStyle="bold"/>
</LinearLayout>