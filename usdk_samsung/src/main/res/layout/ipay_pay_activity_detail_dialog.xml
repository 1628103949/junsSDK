<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/ipay_act_coupon_bg"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_dialog_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/ipay_margin_11"
            android:padding="@dimen/ipay_margin_8"
            android:src="@drawable/ipay_dialog_coupon_title_close"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:paddingBottom="@dimen/ipay_margin_8"
            android:paddingTop="@dimen/ipay_margin_8"
            android:text="@string/iapy_activity_detail"
            android:textColor="@color/ipay_color_value_11_11_11"
            android:textSize="@dimen/ipay_text_size_18"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ipay_height_1"
        android:background="@color/ipay_color_value_3_1"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/ipay_margin_10"
        android:paddingLeft="@dimen/ipay_margin_25"
        android:paddingTop="@dimen/ipay_margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iapy_activity_date"
                android:textColor="@color/ipay_color_value_5_2"
                android:textSize="@dimen/ipay_text_size_12"/>

            <TextView
                android:id="@+id/tv_dialog_activity_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ipay_margin_15"
                android:text=""
                android:textColor="@color/ipay_color_value_66_66_66"
                android:textSize="@dimen/ipay_text_size_12"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ipay_margin_3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/iapy_activity_count"
                android:textColor="@color/ipay_color_value_5_2"
                android:textSize="@dimen/ipay_text_size_12"/>

            <TextView
                android:id="@+id/tv_dialog_activity_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ipay_margin_15"
                android:text=""
                android:textColor="@color/ipay_color_value_66_66_66"
                android:textSize="@dimen/ipay_text_size_12"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ipay_height_1"
        android:background="@color/ipay_color_value_3_1"
        android:visibility="gone"></View>

