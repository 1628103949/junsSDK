<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_marginTop="@dimen/ipay_margin_10"
              android:background="@drawable/ipay_act_coupon_item_bg"
              android:padding="@dimen/ipay_margin_15">

    <TextView
        android:id="@+id/tv_coupon_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:textColor="@color/ipay_color_value_17_97_ff"
        android:textSize="@dimen/ipay_text_size_12"/>

    <TextView
        android:id="@+id/tv_coupon_threshold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="满x元可用"
        android:textColor="@color/ipay_color_value_17_97_ff"
        android:textSize="@dimen/ipay_text_size_12"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ipay_margin_5"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iapy_app_rule"
            android:textColor="@color/ipay_color_value_5_2"
            android:textSize="@dimen/ipay_text_size_12"/>

        <TextView
            android:id="@+id/tv_coupon_app_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ipay_margin_15"
            android:textColor="@color/ipay_color_value_66_66_66"
            android:textSize="@dimen/ipay_text_size_12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ipay_margin_2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iapy_phone_rule"
            android:textColor="@color/ipay_color_value_5_2"
            android:textSize="@dimen/ipay_text_size_12"/>

        <TextView
            android:id="@+id/tv_coupon_model_limit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ipay_margin_15"
            android:textColor="@color/ipay_color_value_66_66_66"
            android:textSize="@dimen/ipay_text_size_12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ipay_margin_2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iapy_number_consumption"
            android:textColor="@color/ipay_color_value_5_2"
            android:textSize="@dimen/ipay_text_size_12"/>

        <TextView
            android:id="@+id/tv_coupon_consume_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ipay_margin_15"
            android:textColor="@color/ipay_color_value_66_66_66"
            android:textSize="@dimen/ipay_text_size_12"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ipay_margin_2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/iapy_validity"
            android:textColor="@color/ipay_color_value_5_2"
            android:textSize="@dimen/ipay_text_size_12"/>

        <TextView
            android:id="@+id/tv_valid_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ipay_margin_15"
            android:textColor="@color/ipay_color_value_66_66_66"
            android:textSize="@dimen/ipay_text_size_12"/>
    </LinearLayout>


</LinearLayout>