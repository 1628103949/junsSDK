<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/gr_homepage_part_account_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/gr_homepage_part_account_marginTop"
        android:background="@drawable/gr_gray_bg_round"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/gr_homepage_part_account_image_height"
            android:layout_height="@dimen/gr_homepage_part_account_image_height"
            android:layout_marginLeft="8dp"
            android:src="@drawable/gr_head" />

        <TextView
            android:id="@+id/gr_current_account"
            style="@style/gr_pay_text_clause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="md123456" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/gr_gray_bg_round"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/gr_personal_center_changepwd_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gr_homepage_part_personal_center_height"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/gr_homepage_part_nomal_textsize"
                android:text="修改密码"
                android:textColor="@color/gr_gray_color" />

            <ImageView
                android:layout_width="@dimen/gr_homepage_part_right_arrow"
                android:layout_height="@dimen/gr_homepage_part_right_arrow"
                android:src="@drawable/gr_right_arrow_big" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gr_gray_color" />

        <LinearLayout
            android:id="@+id/gr_personal_center_fcm_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gr_homepage_part_personal_center_height"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="实名认证"
                android:textSize="@dimen/gr_homepage_part_nomal_textsize"
                android:textColor="@color/gr_gray_color" />

            <TextView
                android:id="@+id/gr_personal_center_fcm_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gr_personal_center_fcm_no"
                android:textSize="@dimen/gr_homepage_part_nomal_textsize"
                android:textColor="@color/gr_gray_color" />

            <ImageView
                android:layout_width="@dimen/gr_homepage_part_right_arrow"
                android:layout_height="@dimen/gr_homepage_part_right_arrow"
                android:src="@drawable/gr_right_arrow_big" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/gr_gray_color" />

        <LinearLayout
            android:id="@+id/gr_personal_center_changebindphone_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/gr_homepage_part_personal_center_height"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="绑定手机"
                android:textSize="@dimen/gr_homepage_part_nomal_textsize"
                android:textColor="@color/gr_gray_color" />

            <TextView
                android:id="@+id/gr_personal_center_changebindphone_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gr_personal_center_bind_no"
                android:textSize="@dimen/gr_homepage_part_nomal_textsize"
                android:textColor="@color/gr_gray_color" />

            <ImageView
                android:layout_width="@dimen/gr_homepage_part_right_arrow"
                android:layout_height="@dimen/gr_homepage_part_right_arrow"
                android:src="@drawable/gr_right_arrow_big" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/gr_logout_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/gr_homepage_part_button_height"
        android:layout_marginBottom="@dimen/gr_homepage_part_button_marginBottom"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/gr_homepage_part_button_marginTop"
        android:background="@drawable/gr_btn_confirm_selector"
        android:text="切换账号(注销)"
        android:textColor="@color/gr_white"
        android:textSize="@dimen/gr_homepage_part_button_textsize" />

</merge>