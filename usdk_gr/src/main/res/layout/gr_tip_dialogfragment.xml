<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gr_login_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gr_white"
        android:gravity="center"
        android:paddingTop="18dp"
        android:text="@string/gr_bindphone_attention"
        android:textColor="@color/gr_black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/gr_tip_dialogfragment_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gr_white"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="13sp"
        android:text="@string/gr_bindphone_tips"
        android:textColor="@color/gr_black" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gr_white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gr_gray_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gr_white"
        android:gravity="center_horizontal|bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/gr_tip_dialogfragment_cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:text="@string/gr_bindphone_cancel"
            android:textColor="@color/gr_gray_color"
            android:textSize="16sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gr_gray_color" />

        <Button
            android:id="@+id/gr_tip_dialogfragment_confirm_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:text="@string/gr_bindphone_now"
            android:textColor="@color/gr_theme_color"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>