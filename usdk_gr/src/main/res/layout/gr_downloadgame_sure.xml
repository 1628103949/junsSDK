<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gr_pop_suredownload_background"
    android:orientation="vertical" >

    <com.gaore.mobile.defineview.RoundCornerRelayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff6288C7"
        android:padding="10dp" >

        <com.gaore.mobile.defineview.RoundCornerImageView
            android:id="@+id/gr_img_icon_suregame"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/gr_floatview_msg_check" />

        <TextView
            android:id="@+id/areyousure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/gr_img_icon_suregame"
            android:text="是否要下载："
            android:textColor="#FFFFFFFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/gr_tv_gamename_suregame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/areyousure"
            android:text="屠龙之刃？"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp" />
    </com.gaore.mobile.defineview.RoundCornerRelayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp" >

        <Button
            android:id="@+id/gr_download_cencal"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/gr_btn_cencaldownload"
            android:text="取消"
            android:textColor="#FFFFFFFF" />

        <Button
            android:id="@+id/gr_download_sure"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/gr_btn_personcenter_suggest"
            android:text="确定"
            android:textColor="#FFFFFFFF" />
    </LinearLayout>

</LinearLayout>