<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/gr_ysdk_pay_frame_part_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFC"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp" >

        <TextView
            android:id="@+id/gr_ysdk_pay_game_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="游戏币"
            android:textColor="@color/gr_black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/gr_ysdk_pay_rmb_coin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="￥100.00"
            android:textColor="@color/gr_black"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/gr_gray_color_ysdk" />

        <LinearLayout
            android:id="@+id/gr_ysdk_pay_frame_part_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:background="@color/gr_white"
            android:orientation="horizontal"
            android:padding="10dp" >

            <RelativeLayout
                android:id="@+id/gr_ysdk_pay_part_layout_weichat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/gr_ysdk_pay_part_img_weichat"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/gr_ysdk_weichat_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gr_ysdk_pay_part_img_weichat"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="微信支付"
                    android:textColor="@color/gr_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gr_ysdk_pay_part_layout_qqwallet"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/gr_ysdk_pay_part_img_qqwallet"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/gr_ysdk_qqwallet_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gr_ysdk_pay_part_img_qqwallet"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="QQ钱包支付"
                    android:textColor="@color/gr_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gr_ysdk_pay_part_layout_qqcoin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/gr_ysdk_pay_part_img_qqcoin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/gr_ysdk_qqcoin_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gr_ysdk_pay_part_img_qqcoin"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Q币"
                    android:textColor="@color/gr_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gr_ysdk_pay_part_layout_qqcard"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/gr_ysdk_pay_part_img_qqcard"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/gr_ysdk_qqcard_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gr_ysdk_pay_part_img_qqcard"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="QQ卡"
                    android:textColor="@color/gr_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gr_ysdk_pay_part_layout_phonecard"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/gr_ysdk_pay_part_img_phonecard"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/gr_ysdk_phonecard_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gr_ysdk_pay_part_img_phonecard"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="手机充值卡"
                    android:textColor="@color/gr_black" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gr_ysdk_pay_part_layout_alipay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical" 
                android:visibility="gone">

                <ImageView
                    android:id="@+id/gr_ysdk_pay_part_img_alipay"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/gr_alipay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/gr_ysdk_pay_part_img_alipay"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="支付宝"
                    android:textColor="@color/gr_black" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</merge>