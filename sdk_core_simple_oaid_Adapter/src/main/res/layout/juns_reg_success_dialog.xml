<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="280dp"
            android:layout_centerInParent="true"
            android:background="@drawable/juns_regsuccess_dialog_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="285dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="75dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/juns_edit_bg">

                    <ImageView
                        android:id="@+id/user_img"
                        android:layout_width="43dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/juns_account_txt_reg"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/user_name_tv"
                        android:layout_width="173dp"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="52dp"
                        android:layout_toRightOf="@id/user_img"
                        android:background="@drawable/juns_edit_bg"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="@string/juns_user_name_success"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pwd_rl"
                    android:layout_width="285dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/juns_edit_bg"
                    android:layout_marginTop="7dp">

                    <ImageView
                        android:id="@+id/pwd_img"
                        android:layout_width="43dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/juns_pwd_txt_reg"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/user_pwd_tv"
                        android:layout_width="210dp"
                        android:layout_height="38dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="52dp"
                        android:layout_toRightOf="@id/pwd_img"
                        android:background="@drawable/juns_edit_bg"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="@string/juns_user_pwd_success"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:layout_marginTop="5sp"
                    android:text="@string/juns_account_store_tips"
                    android:textColor="#747474"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/enter_game_btn"
                    android:layout_width="285dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/juns_enter_game"
                    android:scaleType="centerCrop" />

            </LinearLayout>

        </RelativeLayout>



</RelativeLayout>