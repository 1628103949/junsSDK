<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="300dp"
              android:paddingTop="10dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">
    <com.bsgamesdk.android.widget.APScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="100"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/bsgamesdk_id_loginInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <RelativeLayout
                android:id="@+id/bsgamesdk_id_usernameLayout"
                android:layout_width="250dp"
                android:layout_height="36dp"
                android:layout_marginBottom="10dp">

                <EditText
                    android:id="@+id/bsgamesdk_edit_username_login"
                    style="?attr/bsgamesdk_basic_editText_style"
                    android:layout_width="fill_parent"
                    android:completionThreshold="1"
                    android:dropDownHeight="200dp"
                    android:hint="@string/bsgamesdk_username_login_hit"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName"
                    android:maxLength="32"
                    android:textSize="12dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="70dp"

                    />
                <ImageView
                    android:layout_marginLeft="11dp"
                    android:layout_centerVertical="true"
                    android:layout_width="14dp"
                    android:layout_height="16dp"
                    android:src="@drawable/bsgamesdk_user_new"/>

                <ImageView
                    android:id="@+id/bsgamesdk_id_more_user"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/bsgamesdk_arrow_down"/>

                <ImageButton
                    android:id="@+id/bsgamesdk_login_usernameDel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="16dp"
                    android:layout_toLeftOf="@id/bsgamesdk_id_more_user"
                    android:background="@null"
                    android:contentDescription="@string/bsgamesdk_delbtn"
                    android:src="@drawable/bsgamesdk_pic_del"
                    android:visibility="gone"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bsgamesdk_id_passwordLayout"
                android:layout_width="250dp"
                android:layout_height="36dp">

                <EditText
                    android:textSize="12dp"
                    android:paddingLeft="30dp"
                    android:id="@+id/bsgamesdk_edit_password_login"
                    style="?attr/bsgamesdk_basic_editText_style"
                    android:hint="@string/bsgamesdk_password_login_hit"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="32"/>
                <ImageView
                    android:layout_marginLeft="11dp"
                    android:layout_centerVertical="true"
                    android:layout_width="14dp"
                    android:layout_height="16dp"
                    android:src="@drawable/bsgamesdk_lock"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/bsgamesdk_textview_login_toursitLogin"
                    style="?attr/bsgamesdk_text_no_image_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/bsgamesdk_text_99A2AA"
                    android:text="@string/bsgamesdk_login_touristLogin"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/bsgamesdk_textview_quickRegister"
                    style="?attr/bsgamesdk_text_no_image_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/bsgamesdk_text_99A2AA"
                    android:text="@string/bsgamesdk_quickReg"
                    android:visibility="gone"/>

                <TextView
                    android:textColor="@color/bsgamesdk_text_99A2AA"
                    android:id="@+id/bsgamesdk_textview_login_forgetPwd"
                    style="?attr/bsgamesdk_text_no_image_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_alignParentRight="true"
                    android:text="@string/bsgamesdk_login_forgetPwd"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <View
                android:visibility="visible"
                android:id="@+id/bsgamesdk_space_tourist"
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/bsgamesdk_buttonReg"
                    style="?attr/bsgamesdk_reg_button_style"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="36dp"
                    android:text="@string/bsgamesdk_register_title"/>
                <View
                    android:id="@+id/bsgamesdk_space"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_weight="1"
                    android:id="@+id/bsgamesdk_buttonLogin"
                    style="?attr/bsgamesdk_confirm_button_style"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:text="@string/bsgamesdk_login_title"/>
            </LinearLayout>
            <com.bsgamesdk.android.widget.CheckBoxAgreeLayout
                android:layout_marginBottom="20dp"
                android:layout_marginTop="12dp"
                android:layout_width="250dp"
                custom:bsgamesdk_checkBoxAgreeLayout_checkbox="hide"
                custom:bsgamesdk_checkBoxAgreeLayout_text="登录即代表您同意"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginTop="-10dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/bsgamesdk_ll_apple"
                android:layout_width="250dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_centerVertical="true"
                        android:layout_width="80dp"
                        android:layout_height="0.33dp"
                        android:background="#FFD8D8D8"/>
                    <TextView
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="其他方式登录"
                        android:textColor="#FF99A2AA"
                        android:textSize="10sp"/>
                    <View
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="80dp"
                        android:layout_height="0.33dp"
                        android:background="#FFD8D8D8"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/bsgamesdk_id_apple_login"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/bsgamesdk_apple"/>
            </LinearLayout>
        </LinearLayout>


    </com.bsgamesdk.android.widget.APScrollView>


</LinearLayout>