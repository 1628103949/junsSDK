<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="310dp"
              android:layout_height="250dp"
              android:paddingLeft="30dp"
              android:paddingRight="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="75dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bsgamesdk_tv_unpermitted"
                style="?attr/bsgamesdk_info_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:lineSpacingExtra="3dp"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"
        android:id="@+id/bsgamesdk_btn_tip_unpermittedMinor_comfirm"
        style="?attr/bsgamesdk_confirm_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bsgamesdk_text_common_comfirm"/>
</RelativeLayout>