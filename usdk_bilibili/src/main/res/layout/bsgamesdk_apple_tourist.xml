<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:background="@color/bsgamesdk_white"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingLeft="30dp"
              android:paddingRight="30dp">

    <com.bsgamesdk.android.widget.APScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="100"
        android:fillViewport="true">

        <LinearLayout
            android:paddingBottom="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="?attr/bsgamesdk_info_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="5dp"
                    android:text="@string/bsgamesdk_apple_id"
                    android:textColor="@color/bsgamesdk_text_999999"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/bsgamesdk_apple_tourist_name"
                    style="?attr/bsgamesdk_info_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@color/bsgamesdk_text_666666"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <TextView
                android:id="@+id/bsgamesdk_id_apple_tourist_tip"
                style="?attr/bsgamesdk_info_text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="5dp"
                android:text="@string/bsgamesdk_apple_tip"
                android:textColor="@color/bsgamesdk_btn_color"
                android:textSize="16sp"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/bsgamesdk_tv_apple_bili"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/bsgamesdk_apple_bili"
                android:textColor="@color/bsgamesdk_text_999999"
                android:textSize="12sp"/>

            <Button
                android:layout_marginTop="30dp"
                android:id="@+id/bagamesdk_apple_tourist_bind"
                style="?attr/bsgamesdk_confirm_button_style"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="16dp"
                android:text="@string/bsgamesdk_tourist_limit_bind"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/bagamesdk_apple_tourist_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/bsgamesdk_tourist_limit_change"
                android:textColor="@color/bsgamesdk_text_title_color"
                android:textSize="14sp"/>
        </LinearLayout>
    </com.bsgamesdk.android.widget.APScrollView>

</LinearLayout>