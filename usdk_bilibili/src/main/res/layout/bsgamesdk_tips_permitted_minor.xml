<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        style="?attr/bsgamesdk_info_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:text="@string/bsgamesdk_text_tip_permittedMinor" />

    <Button
        android:layout_marginBottom="30dp"
        android:id="@+id/bsgamesdk_btn_tip_permittedMinor_comfirm"
        style="?attr/bsgamesdk_confirm_button_style"
        android:layout_marginTop="44dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bsgamesdk_text_permittedMinor_comfirm" />
</LinearLayout>