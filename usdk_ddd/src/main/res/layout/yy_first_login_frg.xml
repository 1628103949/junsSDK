<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <com.yysy.yygamesdk.view.CommonTitleBar2
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="@string/app_name"
        app:titleBarDrawable="@drawable/yy_dialog_corner_top_bg"
        app:centerType="textView"
        app:rightType="imageButton"
        app:rightImageResource="@drawable/yy_icon_help"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/visitor_login_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/yy_icon_login_visitor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快速游戏"
                android:textColor="#00C85E"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/phone_login_iv"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/yy_icon_login_phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机登录"
                android:textColor="#00C85E"
                android:textSize="15sp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/account_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已有账号登录 >"
        android:layout_marginBottom="40dp"
        android:textSize="15sp"
        android:textColor="#00C85E"/>


</LinearLayout>