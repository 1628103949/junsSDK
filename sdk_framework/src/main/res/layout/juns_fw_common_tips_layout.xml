<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/tn_common_tl_content_rl"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/juns_fw_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tn_common_tl_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/juns_fw_common_tips"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tn_common_tl_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="@string/juns_fw_tiny_game"
            android:textColor="#000000"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/tn_common_tl_type1_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#858585" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <Button
                    android:id="@+id/tn_common_tl_cancel"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/juns_fw_btn_bg_tran"
                    android:text="@string/juns_fw_common_cancel"
                    android:textColor="#FB4F4F"
                    android:textSize="15dp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="#858585" />

                <Button
                    android:id="@+id/tn_common_tl_confirm"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/juns_fw_btn_bg_tran"
                    android:text="@string/juns_fw_common_confirm"
                    android:textColor="#FB4F4F"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tn_common_tl_type2_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/tn_common_tl_confirm2"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/juns_fw_btn_bg_tran"
                android:gravity="center"
                android:text="@string/juns_fw_common_confirm"
                android:textColor="#4B749D"
                android:textSize="15dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>