<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/function_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ld_dp_70"
        android:orientation="vertical"
        android:paddingStart="@dimen/ld_dp_15"
        android:paddingEnd="@dimen/ld_dp_15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/function_icon"
                android:layout_width="@dimen/ld_dp_26"
                android:layout_height="@dimen/ld_dp_26"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/function_title"
                style="@style/default_TextView"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/ld_dp_10"
                android:layout_marginTop="@dimen/ld_dp_1"
                android:includeFontPadding="false"
                android:textColor="#000000"
                android:textSize="@dimen/ld_sp_12"
                android:textStyle="bold" />

            <View
                android:id="@+id/function_hot"
                android:layout_width="@dimen/ld_dp_8"
                android:layout_height="@dimen/ld_dp_8"
                android:layout_marginLeft="@dimen/ld_dp_1"
                android:layout_marginBottom="@dimen/ld_dp_6"
                android:background="@drawable/ld_hot_bg"
                android:visibility="gone" />

            <TextView
                android:id="@+id/function_desc"
                style="@style/default_TextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:includeFontPadding="false"
                android:textColor="#666666"
                android:textSize="@dimen/ld_sp_9" />

            <ImageView
                android:layout_width="@dimen/ld_dp_12"
                android:layout_height="@dimen/ld_dp_12"
                android:layout_marginLeft="@dimen/ld_dp_4"
                android:src="@drawable/ld_right_img" />
        </LinearLayout>

        <View
            android:id="@+id/function_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#EFEFEF" />
    </LinearLayout>
</FrameLayout>