<resources>

    <style name="package_code_dialog_shadow" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="user_center_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="default_TextView">
        <item name="android:textSize">@dimen/ld_sp_13</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="charge_info_title">
        <item name="android:textSize">@dimen/ld_sp_15</item>
        <item name="android:textColor">#777777</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="charge_info_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/ld_dp_50</item>
        <item name="android:paddingRight">@dimen/ld_dp_50</item>
        <item name="android:layout_marginTop">@dimen/ld_dp_20</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="charge_info_port_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/ld_dp_20</item>
        <item name="android:paddingRight">@dimen/ld_dp_20</item>
        <item name="android:layout_marginTop">@dimen/ld_dp_30</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="yellow_line">
        <item name="android:layout_width">@dimen/ld_dp_2_5</item>
        <item name="android:layout_height">@dimen/ld_dp_9</item>
        <item name="android:background">#FFD00C</item>
    </style>

    <style name="dialog_button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ld_dialog_btn_bg</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="kkk_gift_dialog" parent="android:Theme.Dialog">

        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置背景模糊的透明度 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="radiostyle">
        <item name="android:textSize">12dip</item>
        <item name="android:textColor">#9E9E9E</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="KKKDialog" parent="android:Theme.Dialog">

        <!-- 背景颜色及透明程度 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="KKKDialogNoBg" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <!-- 是否背景模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 设置背景模糊的透明度-->
        <item name="android:backgroundDimAmount">0</item>
    </style>

    <style name="LoginStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Transparent">
        <item name="android:windowBackground">@color/framlaylout_color</item>
        <item name="android:windowIsTranslucent">true</item><!--activity窗口具有透明属性-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent
        </item><!--activity窗口切换效果-->
    </style>

    <style name="kkk_no_money_text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@drawable/ld_button_bg_while</item>
        <item name="android:paddingLeft">6sp</item>
        <item name="android:paddingRight">6sp</item>
        <item name="android:paddingTop">4sp</item>
        <item name="android:paddingBottom">4sp</item>
    </style>

    <style name="ld_dialog_base_button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ld_base_edittext_height</item>
        <item name="android:background">@drawable/ld_org_btn_selector</item>
        <item name="android:layout_marginTop">@dimen/ld_base_dialog_button_top</item>
        <item name="android:textSize">@dimen/ld_base_one_level_text_size_sp</item>
    </style>

    <style name="ld_dialog_base_edittext">
        <item name="android:layout_height">@dimen/ld_base_dialog_button_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/ld_dialog_base_edittext_bg</item>
        <item name="android:paddingLeft">@dimen/account_icon_margin_left</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/ld_edittext_cursor</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:textSize">@dimen/ld_base_one_level_text_size_sp</item>
    </style>

    <style name="ld_base_edittext">
        <item name="android:layout_height">@dimen/ld_base_layout_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/ld_dialog_base_edittext_bg</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">@dimen/ld_base_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:textSize">@dimen/ld_base_one_level_text_size</item>
    </style>

    <style name="ld_user_center_ui_edittext">
        <item name="android:layout_height">@dimen/ld_dp_30</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/ld_dialog_base_edittext_bg</item>
        <item name="android:paddingLeft">@dimen/ld_dp_10</item>
        <item name="android:paddingRight">@dimen/ld_dp_20</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#cccccc</item>
        <item name="android:textSize">@dimen/ld_sp_12</item>
    </style>

    <style name="ld_user_center_ui_button">
        <item name="android:textColor">#333333</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ld_dp_38</item>
        <item name="android:background">@drawable/ld_button_yellow_corners_bg</item>
        <item name="android:layout_marginTop">@dimen/ld_dp_30</item>
        <item name="android:textSize">@dimen/ld_sp_12</item>
    </style>

    <style name="ld_dialog_base_title_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/ld_base_title_size_sp</item>
    </style>

    <style name="ld_account_menu_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ld_dp_60</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingRight">@dimen/ld_base_padding</item>
        <item name="android:paddingLeft">@dimen/ld_base_padding</item>
    </style>

    <style name="ld_account_get_verify_code">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingTop">@dimen/ld_user_center_menu_layout_padding</item>
        <item name="android:paddingBottom">@dimen/ld_user_center_menu_layout_padding</item>
        <item name="android:paddingRight">@dimen/ld_base_dialog_padding</item>
        <item name="android:paddingLeft">@dimen/ld_base_dialog_padding</item>
    </style>

    <style name="base_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#F1F1F1</item>
        <item name="android:layout_marginLeft">15dp</item>
    </style>
</resources>