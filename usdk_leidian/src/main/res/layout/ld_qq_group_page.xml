<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/qidian_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/default_TextView"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="客服" />

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:src="@drawable/ld_dialog_base_back_img"
                android:visibility="invisible" />
        </FrameLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ld_dp_1"
            android:layout_marginLeft="@dimen/ld_dp_10"
            android:layout_marginTop="-1dp"
            android:layout_marginRight="@dimen/ld_dp_10"
            android:background="#EFEFEF" />

        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qr_code_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/ld_dp_30"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/ld_dp_110"
            android:layout_height="@dimen/ld_dp_110"
            android:scaleType="centerInside"
            android:src="@drawable/ld_qq_group_icon" />

        <TextView
            android:id="@+id/qq_group_text"
            style="@style/default_TextView"
            android:layout_marginTop="@dimen/ld_dp_20"
            android:textSize="@dimen/ld_sp_10" />

        <TextView
            android:id="@+id/desc_text"
            style="@style/default_TextView"
            android:layout_marginTop="@dimen/ld_dp_15"
            android:textColor="#7D7D7D"
            android:textSize="@dimen/ld_sp_8" />

        <Button
            android:id="@+id/copy_group_number"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/ld_dp_110"
            android:layout_height="@dimen/ld_dp_25"
            android:layout_marginTop="@dimen/ld_dp_30"
            android:background="@drawable/ld_button_yellow_corners_bg"
            android:padding="0dp"
            android:textColor="#000000"
            android:textSize="@dimen/ld_sp_10" />
    </LinearLayout>
</FrameLayout>