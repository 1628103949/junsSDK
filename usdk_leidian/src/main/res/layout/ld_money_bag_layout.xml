<?xml version="1.0" encoding="utf-8"?><!--项目-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F1F1F1" />

    <RelativeLayout
        android:id="@+id/ldbit_charge"
        android:background="#F5F4EB"
        style="@style/ld_account_menu_layout"
        android:layout_height="120dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ldBit_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="0 雷币"
                android:textColor="#333333"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/vip_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/ld_money_button_shape"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ld_vip_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0.5dp"
                        android:includeFontPadding="false"
                        android:text="畅心会员"
                        android:textColor="@color/new_text_color"
                        android:textSize="13sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ldbit_charge_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/ld_money_button_shape"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ld_charge_ldbit_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="0.5dp"
                        android:includeFontPadding="false"
                        android:text="雷币充值"
                        android:textColor="@color/new_text_color"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/ld_ldbit_deskripsi_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ld_ldbit_deskripsi_icon" />
    </RelativeLayout>

    <View style="@style/base_line" />

    <RelativeLayout
        android:id="@+id/coupons_layout"
        style="@style/ld_account_menu_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="优惠券"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/ld_base_one_level_text_size" />

        <ImageView
            android:id="@+id/ld_menu_spread_img"
            android:layout_width="@dimen/ld_base_right_img"
            android:layout_height="@dimen/ld_base_right_img"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ld_menu_spread_img" />

        <TextView
            android:id="@+id/coupons_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/ld_menu_spread_img"
            android:textColor="#acacac"
            android:textSize="@dimen/ld_base_one_level_text_size" />
    </RelativeLayout>

    <View style="@style/base_line" />

    <RelativeLayout
        android:id="@+id/charge_record_layout"
        style="@style/ld_account_menu_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="游戏充值记录"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/ld_base_one_level_text_size" />

        <ImageView
            android:layout_width="@dimen/ld_base_right_img"
            android:layout_height="@dimen/ld_base_right_img"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ld_menu_spread_img" />
    </RelativeLayout>

    <View style="@style/base_line" />

    <RelativeLayout
        android:id="@+id/ldbit_details_layout"
        style="@style/ld_account_menu_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="雷币明细"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/ld_base_one_level_text_size" />

        <ImageView
            android:layout_width="@dimen/ld_base_right_img"
            android:layout_height="@dimen/ld_base_right_img"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ld_menu_spread_img" />
    </RelativeLayout>

    <View style="@style/base_line" />
</LinearLayout>