<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/privilege_img"
        android:layout_width="@dimen/ld_dp_35"
        android:layout_height="@dimen/ld_dp_35"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/privilege_name"
        style="@style/default_TextView"
        android:layout_marginTop="@dimen/ld_dp_6"
        android:textColor="#333333"
        android:textSize="@dimen/ld_sp_9" />
</LinearLayout>