<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dialog_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ld_dialog_base_bg"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ld_dp_15"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="新消息"
                android:textColor="#131313"
                android:textSize="@dimen/ld_sp_17" />

            <ImageView
                android:id="@+id/dialog_close"
                android:layout_width="@dimen/ld_dp_28"
                android:layout_height="@dimen/ld_dp_28"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/ld_dp_6"
                android:layout_marginRight="@dimen/ld_dp_6"
                android:padding="@dimen/ld_dp_5"
                android:src="@drawable/ld_charge_close_img" />
        </FrameLayout>

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/ld_dp_10"
            android:layout_marginRight="@dimen/ld_dp_10"
            android:divider="@null"
            android:listSelector="#00000000"
            android:scrollbars="none" />
    </LinearLayout>
</FrameLayout>