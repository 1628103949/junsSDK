<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dialog_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ld_dialog_base_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ld_dp_20"
            android:layout_marginRight="@dimen/ld_dp_12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_tv"
                style="@style/default_TextView"
                android:layout_width="0dp"
                android:layout_marginTop="@dimen/ld_dp_13"
                android:visibility="invisible"
                android:layout_weight="1"
                android:gravity="left"
                android:text="是否要退出游戏？"
                android:textColor="#131313"
                android:textSize="@dimen/ld_sp_16" />

            <ImageView
                android:id="@+id/kkk_dialog_close"
                android:layout_width="@dimen/ld_dp_27"
                android:layout_height="@dimen/ld_dp_27"
                android:layout_marginTop="@dimen/ld_dp_8"
                android:padding="@dimen/ld_dp_5"
                android:src="@drawable/ld_charge_close_img" />
        </LinearLayout>

        <TextView
            android:id="@+id/exit_hint"
            style="@style/default_TextView"
            android:layout_height="@dimen/ld_dp_110"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="是否要退出游戏？"
            android:textColor="#131313"
            android:textSize="@dimen/ld_sp_16" />

        <LinearLayout
            android:id="@+id/qrcode_layout"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ld_dp_20"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_ad"
                android:layout_width="@dimen/ld_dp_180"
                android:layout_height="@dimen/ld_dp_180"
                android:scaleType="centerCrop"
                android:src="@drawable/tips_default_img" />

            <TextView
                style="@style/default_TextView"
                android:src="@drawable/ld_charge_close_img"
                android:text="扫码下载到手机继续玩"
                android:textColor="#666666"
                android:textSize="@dimen/ld_sp_10" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ld_dp_20"
            android:layout_marginTop="@dimen/ld_dp_35"
            android:layout_marginRight="@dimen/ld_dp_20"
            android:layout_marginBottom="@dimen/ld_dp_25"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/exit"
                android:layout_width="0dp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_height="@dimen/ld_dp_32"
                android:layout_weight="1"
                android:background="@drawable/ld_333333_button_bg"
                android:text="退出游戏"
                android:textColor="#333333"
                android:textSize="@dimen/ld_sp_11" />

            <Button
                android:id="@+id/download_app"
                android:layout_width="0dp"
                android:layout_height="@dimen/ld_dp_32"
                android:layout_marginLeft="@dimen/ld_dp_25"
                android:layout_weight="1"
                android:background="@drawable/ld_yellow_corners_button_bg"
                android:text="再玩会"
                android:textColor="#131313"
                android:textSize="@dimen/ld_sp_11" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
