<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ld_dp_45"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/ldbit_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ldbit_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="#333333"
                android:textSize="@dimen/ld_sp_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ld_dp_3"
                android:gravity="center"
                android:paddingLeft="@dimen/ld_dp_10"
                android:paddingRight="@dimen/ld_dp_10">

                <EditText
                    android:id="@+id/customize_et"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="0dp"
                    android:textColor="#949494"
                    android:textColorHint="#949494"
                    android:textCursorDrawable="@drawable/ld_ldbit_charge_et_cursor"
                    android:textSize="@dimen/ld_sp_10" />

                <TextView
                    android:id="@+id/money_tx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#949494"
                    android:textSize="@dimen/ld_sp_10" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>