<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dialog_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ld_dialog_base_bg"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/ld_dp_15"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="新优惠券"
                android:textColor="#131313"
                android:textSize="@dimen/ld_sp_17" />

            <ImageView
                android:id="@+id/dialog_close"
                android:layout_width="@dimen/ld_dp_28"
                android:layout_height="@dimen/ld_dp_28"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/ld_dp_6"
                android:layout_marginRight="@dimen/ld_dp_6"
                android:padding="@dimen/ld_dp_5"
                android:src="@drawable/ld_charge_close_img" />
        </FrameLayout>

        <ListView
            android:id="@+id/couponsView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/ld_dp_40"
            android:layout_marginTop="@dimen/ld_dp_10"
            android:layout_marginRight="@dimen/ld_dp_40"
            android:divider="@null"
            android:listSelector="#00000000"
            android:scrollbars="none" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/see_coupon"
                android:layout_width="@dimen/ld_dp_180"
                android:layout_height="@dimen/ld_dp_35"
                android:layout_gravity="bottom"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginTop="@dimen/ld_dp_10"
                android:layout_marginBottom="@dimen/ld_dp_25"
                android:background="@drawable/ld_button_yellow_corners_bg"
                android:gravity="center"
                android:paddingLeft="@dimen/ld_dp_40"
                android:paddingRight="@dimen/ld_dp_40"
                android:text="查看优惠券"
                android:textColor="#000000"
                android:textSize="@dimen/ld_sp_12" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>