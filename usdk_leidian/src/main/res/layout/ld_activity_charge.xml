<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <FrameLayout
        android:id="@+id/bg_layout"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ld_charge_layout_bg">

        <LinearLayout
            android:id="@+id/dialog_layout"
            android:layout_width="@dimen/ld_dp_400"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="@dimen/ld_dp_10">

            <LinearLayout
                android:id="@+id/charge_top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backView"
                    android:layout_width="@dimen/ld_dp_22"
                    android:layout_height="@dimen/ld_dp_22"
                    android:layout_marginLeft="@dimen/ld_dp_20"
                    android:adjustViewBounds="true"
                    android:gravity="start"
                    android:padding="@dimen/ld_dp_5"
                    android:scaleType="fitStart"
                    android:src="@drawable/ld_dialog_base_back_img" />

                <TextView
                    android:id="@+id/titleView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="游戏支付"
                    android:textColor="#333333"
                    android:textSize="@dimen/ld_sp_12" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/close_charge"
                        android:layout_width="@dimen/ld_dp_26"
                        android:layout_height="@dimen/ld_dp_26"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/ld_dp_10"
                        android:padding="@dimen/ld_dp_5"
                        android:src="@drawable/ld_charge_close_img" />
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/centerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>