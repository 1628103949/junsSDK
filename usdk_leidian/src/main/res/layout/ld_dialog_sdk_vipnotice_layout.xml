<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/dialog_content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ld_dialog_base_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="@dimen/ld_dp_28"
            android:layout_height="@dimen/ld_dp_28"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/ld_dp_6"
            android:layout_marginRight="@dimen/ld_dp_6"
            android:padding="@dimen/ld_dp_5"
            android:src="@drawable/ld_charge_close_img" />

        <ImageView
            android:id="@+id/top_img"
            android:layout_width="@dimen/ld_dp_80"
            android:layout_height="@dimen/ld_dp_80" />

        <TextView
            android:id="@+id/vip_desc"
            style="@style/default_TextView"
            android:layout_marginTop="@dimen/ld_dp_8"
            android:textColor="#131313"
            android:textSize="@dimen/ld_sp_16" />

        <TextView
            style="@style/default_TextView"
            android:layout_marginTop="@dimen/ld_dp_6"
            android:text="您将享受以下特权"
            android:textColor="#949494"
            android:textSize="@dimen/ld_sp_10" />

        <GridView
            android:id="@+id/privilege_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ld_dp_35"
            android:layout_marginTop="@dimen/ld_dp_10"
            android:layout_marginRight="@dimen/ld_dp_35"
            android:numColumns="auto_fit"
            android:scrollbars="none"
            android:stretchMode="columnWidth"
            android:verticalSpacing="@dimen/ld_dp_20" />

        <Button
            android:id="@+id/see_privilege"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ld_dp_35"
            android:layout_marginLeft="@dimen/ld_dp_35"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="@dimen/ld_dp_25"
            android:layout_marginRight="@dimen/ld_dp_35"
            android:layout_marginBottom="@dimen/ld_dp_15"
            android:background="@drawable/ld_button_yellow_corners_bg"
            android:text="查看特权"
            android:textColor="#000000"
            android:textSize="@dimen/ld_sp_12" />
    </LinearLayout>
</FrameLayout>