<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/ld_dialog_base_bg"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/tips_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/phone_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#333333"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="230dp"
        android:layout_height="@dimen/ld_base_dialog_button_height"
        android:layout_marginTop="10dp">

        <EditText
            android:id="@+id/phone_verify_code_et"
            style="@style/ld_dialog_base_edittext"
            android:digits="0123456789"
            android:hint="输入验证码"
            android:imeOptions="flagNoExtractUi"
            android:inputType="number"
            android:maxLength="6"
            android:textColorHint="#999999"
            tools:ignore="TextFields" />

        <TextView
            android:id="@+id/tips_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/new_text_color"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tips_cancel_btn"
            android:layout_width="105dp"
            android:layout_height="30dp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginRight="20dp"
            android:background="@drawable/ld_org_red_shape_chick"
            android:text="取消"
            android:textColor="@color/two_title"
            android:textSize="12sp" />

        <Button
            android:id="@+id/tips_confirm_btn"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:background="@drawable/ld_org_btn_selector"
            android:text="确定"
            android:textColor="#333333"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>