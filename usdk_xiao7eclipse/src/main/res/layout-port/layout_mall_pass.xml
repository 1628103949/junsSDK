<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:id="@+id/mall_pass_buy_luxury_fund_ll"
        android:layout_width="103dp"
        android:layout_height="27dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_luxury_fund"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/mall_pass_supreme_warMakes_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:includeFontPadding="false"
            android:textColor="@color/x7_white"
            android:textSize="9dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:includeFontPadding="false"
            android:textStyle="bold"
            android:textSize="9dp"
            android:textColor="@color/x7_white"
            android:text="@string/x7_mall_pass_supreme_warMakes"/>

    </LinearLayout>

    <TextView
        android:id="@+id/mall_pass_buy_luxury_fund_tv"
        android:layout_width="103dp"
        android:layout_height="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/x7_mall_custom_gift_had_btn_bg"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/x7_has_buy_gift"
        android:textSize="9dp"
        android:textColor="@color/x7_black_644f31"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/mall_pass_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:layout_marginTop="17dp"
        android:layout_marginStart="14dp">

        <View
            android:layout_width="2dp"
            android:layout_height="13dp"
            android:layout_marginBottom="1dp"
            android:background="@color/x7_orange_fbcc55"/>
        <!-- 特殊字体 -->
        <TextView
            android:id="@+id/mall_pass_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:includeFontPadding="false"
            android:textSize="16dp"
            android:textColor="@color/color_black_333333"/>

    </LinearLayout>

    <TextView
        android:id="@+id/mall_pass_activities_explain_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mall_pass_title_ll"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="9dp"
        android:textSize="12dp"
        android:textColor="@color/x7_black_644f31"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/mall_pass_activities_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mall_pass_activities_explain_tv"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="10dp"
        android:textSize="12dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/x7_black_644f31"
        android:includeFontPadding="false"/>

    <LinearLayout
        android:id="@+id/mall_pass_reward_title_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mall_pass_activities_time_tv"
        android:layout_marginTop="11dp"
        android:background="@color/x7_white">

        <!-- 特殊字体 -->
        <TextView
            android:id="@+id/mall_pass_chapter_tv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:textSize="10dp"
            android:text="@string/x7_mall_pass_chapter"
            android:background="@color/x7_orange_fbcc55"
            android:textColor="@color/color_black_333333"/>

        <TextView
            android:id="@+id/mall_pass_normal_warMakes_tv"
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:paddingTop="5dp"
            android:layout_marginStart="2dp"
            android:gravity="center"
            android:textSize="10dp"
            android:background="@color/x7_orange_f5de9d"
            android:text="@string/x7_mall_pass_normal_warMakes"
            android:textColor="@color/color_black_333333"/>

        <TextView
            android:id="@+id/mall_pass_supreme_warMakes_tv"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:textSize="10dp"
            android:background="@color/x7_orange_f5de9d"
            android:text="@string/x7_mall_pass_supreme_warMakes"
            android:textColor="@color/color_black_333333"/>

        <TextView
            android:id="@+id/mall_pass_receive_state_tv"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:paddingTop="5dp"
            android:gravity="center"
            android:textSize="10dp"
            android:background="@color/x7_orange_f5de9d"
            android:text="@string/x7_mall_pass_receive_state"
            android:textColor="@color/color_black_333333"/>

    </LinearLayout>
    
    <android.support.v7.widget.RecyclerView
        android:id="@+id/mall_pass_warMakes_reward_rc"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/mall_pass_reward_title_ll"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp"/>

    <LinearLayout
        android:id="@+id/mall_pass_end_line_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="18dp"
        android:background="@color/x7_white"
        android:visibility="gone">
<!--        特殊字体-->
        <TextView
            android:id="@+id/mall_pass_bottom_chapter_tv"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="@color/x7_black_644f31"
            android:includeFontPadding="false"
            android:background="@color/x7_orange_fbcc55"/>

        <LinearLayout
            android:layout_width="77dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="7dp"
            android:layout_marginStart="2dp"
            android:background="@color/x7_orange_f5de9d"
            android:gravity="center_horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mall_pass_bottom_normal_warMakes_rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:orientation="horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="7dp"
            android:layout_marginStart="2dp"
            android:background="@color/x7_orange_f5de9d"
            android:gravity="center_horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/mall_pass_bottom_supreme_warMakes_rc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:orientation="horizontal" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/x7_orange_f5de9d"
            android:layout_marginStart="2dp">

            <TextView
                android:id="@+id/mall_pass_bottom_receive_tv"
                android:layout_width="61dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:textSize="9dp"
                android:textColor="@color/x7_black_644f31"
                android:textStyle="bold"
                android:background="@drawable/received_port"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/mall_pass_end_line_shadow_ll"
        android:layout_width="313dp"
        android:layout_height="12dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="@+id/mall_pass_end_line_reward"
        app:layout_constraintEnd_toEndOf="@+id/mall_pass_end_line_reward"
        app:layout_constraintBottom_toTopOf="@+id/mall_pass_end_line_reward"
        android:background="@drawable/shape_mall_shadow"
        android:visibility="visible"/>

</android.support.constraint.ConstraintLayout>