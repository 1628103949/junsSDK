<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/x7_activity_bind_facebook_back_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/x7_act_title_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/x7_activity_bind_facebook_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:text="@string/x7_bind_account"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/x7_activity_bind_facebook_back_iv" />

    <TextView
        android:id="@+id/x7_activity_bind_facebook_hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:text="@string/x7_is_bind_account_to_facebook"
        android:textColor="@color/gray_ee"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/x7_activity_bind_facebook_title_tv" />

    <ListView
        android:id="@+id/x7_activity_bind_facebook_accounts_xlv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:divider="@null"
        app:layout_constraintBottom_toTopOf="@+id/x7_activity_bind_facebook_bind_tv"
        app:layout_constraintTop_toBottomOf="@+id/x7_activity_bind_facebook_hint_tv"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/x7_activity_bind_facebook_bind_tv"
        android:layout_width="205dp"
        android:layout_height="43dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/x7base_bg_solid_green_12cdb0_corner_100"
        android:gravity="center"
        android:text="@string/x7_bind"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/x7_activity_bind_facebook_new_account_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/x7_activity_bind_facebook_new_account_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        android:gravity="center"
        android:text="@string/x7_new_an_account"
        android:textColor="@color/text_green"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:layout_width="7dp"
        android:layout_height="10dp"
        android:src="@drawable/x7_jiantou_green_right11"
        app:layout_constraintBottom_toBottomOf="@+id/x7_activity_bind_facebook_new_account_tv"
        app:layout_constraintStart_toEndOf="@+id/x7_activity_bind_facebook_new_account_tv"
        app:layout_constraintTop_toTopOf="@+id/x7_activity_bind_facebook_new_account_tv" />
</android.support.constraint.ConstraintLayout>