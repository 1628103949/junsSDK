<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="40dp"
    android:paddingTop="20dp"
    android:paddingEnd="18dp">

    <ImageView
        android:layout_width="2dp"
        android:layout_height="13dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:background="@color/x7_orange_fbcc55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/x7_mall_fund_gift_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:textColor="@color/x7base_gray_33"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/x7_mall_fund_gift_explain_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="120dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/x7_black_644f31"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/x7_mall_fund_gift_title_tv" />

    <TextView
        android:id="@+id/x7_mall_fund_gift_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:textColor="@color/x7_black_644f31"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/x7_mall_fund_gift_explain_tv" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/x7_mall_fund_gift_time_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/x7_mall_fund_gift_time_tv" />

    <TextView
        android:id="@+id/x7_mall_fund_buy_gift_tv"
        android:layout_width="103dp"
        android:layout_height="27dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="13dp"
        android:background="@drawable/x7_mall_fund_gift_recharge"
        android:gravity="center"
        android:textColor="@color/base_white"
        android:textStyle="bold"
        android:textSize="11dp"
        app:layout_constraintBottom_toTopOf="@+id/x7_mall_fund_gift_time_rv"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>