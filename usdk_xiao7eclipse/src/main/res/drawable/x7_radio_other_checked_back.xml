<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="center" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#1ddd9b" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right|top" android:src="@drawable/x7_icon_selected_mark" />
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:gravity="center" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="#14cd8d" />
                    <corners android:radius="6dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
