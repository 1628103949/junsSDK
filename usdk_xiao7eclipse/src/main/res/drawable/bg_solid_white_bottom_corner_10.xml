<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#12cdb0" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="4dp"
        android:right="3dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF" />

            <corners
                android:radius="10dp" />
        </shape>
    </item>
</layer-list>