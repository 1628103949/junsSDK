<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/x7_ffffff_16_bg"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        >

        <ImageView
            android:id="@+id/dialog_IM_teamIcon_iv"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_marginTop="36dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/dialog_IM_teamIcon_iv"
            android:layout_alignBottom="@+id/dialog_IM_teamIcon_iv"
            android:layout_toRightOf="@+id/dialog_IM_teamIcon_iv"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_IM_teamName_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:includeFontPadding="false"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black_3"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/dialog_IM_teamNumber_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/black_9"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/dialog_IM_teamOwner_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="10"
                android:singleLine="true"
                android:layout_marginTop="3dp"
                android:textColor="@color/black_9"
                android:textSize="12dp" />


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="31dp"
        android:paddingRight="31dp"
        android:paddingTop="32dp"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/dialog_IM_teamIntroduce_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/x7_xml_groupInfo"
                    android:textColor="@color/text_green"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/dialog_IM_teamIntroduce_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:lineSpacingExtra="1dp"
                    android:textColor="@color/black_9"
                    android:textSize="13dp" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/x7_xml_goToExplain"
            android:textColor="@color/text_green"
            android:textSize="18dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/dialog_IM_joinExplain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/black_9"
            android:textSize="13dp"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_IM_joinApply_tv"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="@drawable/x7base_im_bg_solid_green_12cdb0_corner_50"
                android:gravity="center"
                android:text="@string/x7_xml_Enter"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/dialog_IM_joinCancel_tv"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@string/x7_MessageCenterActivity1_cancel"
                android:textColor="@color/color_grey_999999"
                android:textSize="17dp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>