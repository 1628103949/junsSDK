<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/dialog_playtogether_top_iv"
        android:layout_width="300dp"
        android:layout_height="88dp"
        android:background="@drawable/im_dialog_palytogether_top_yes_iv"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/dialog_playtogether_center_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/x7_ffffff_16_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_playtogether_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x7_xml_hint18"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:textColor="@color/color_12cdb0"
            android:textSize="21dp" />

        <TextView
            android:id="@+id/dialog_playtogether_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="31dp"
            android:layout_marginRight="31dp"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/black_8"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/dialog_playtogether_twoBtn_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_playtogether_ensure_btn"
                android:layout_width="267dp"
                android:layout_height="48dp"
                android:background="@drawable/x7base_im_bg_solid_green_12cdb0_corner_50"
                android:gravity="center"
                android:text="@string/x7_xml_hint19"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/dialog_playtogether_cancel_btn"
                android:layout_width="267dp"
                android:layout_height="48dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="@string/x7_MessageCenterActivity1_cancel"
                android:textColor="@color/color_grey_999999"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_playtogether_ikonw_btn"
            android:layout_width="267dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/x7base_im_bg_solid_green_12cdb0_corner_50"
            android:gravity="center"
            android:text="@string/x7_IM_xml_IKnow"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="15dp" />

    </LinearLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="32dp"
        android:layout_below="@+id/dialog_playtogether_center_ll"
        android:background="@drawable/x7_askprice_iv_bottom_bg"
        android:visibility="gone"
        />
</RelativeLayout>