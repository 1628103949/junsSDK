<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.netease.nim.uikit.x7.myview.X7Title
        android:id="@+id/act_verificationCodeLogin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/layout_userPhoneCode_actionTitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:layout_marginTop="20dp"
        android:text="欢迎登录小7手游"
        android:textColor="@color/black_3"
        android:textSize="24dp" />

    <include
        android:id="@+id/act_phoneNumberCode_layout2"
        layout="@layout/layout_user_username_ll" />

    <TextView
        android:id="@+id/userlogin_btn_login"
        android:layout_width="263dp"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:background="@drawable/x7_green_change_round_bg"
        android:gravity="center"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/userlogin_texthint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dip"
        android:paddingLeft="15dp"
        android:textColor="@color/black_6"
        android:textSize="12dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userlogin_forgetPassword_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:text="使用密码登录"
            android:textColor="@color/black_6"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/userlogin_findAccount_tv"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:text="用户名找回"
            android:gravity="right"
            android:textColor="@color/black_6"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_customer_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:text="为保证服务质量，建议您登录后咨询客服"
        android:textColor="@color/black_6"
        android:textSize="12dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/act_login_sendBroadcast_tv"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:background="@color/color_12cdb0"
        android:layout_marginTop="15dp"
        android:text="发送广播测试"/>
</LinearLayout>