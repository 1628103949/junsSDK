<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/X7_dialog_open_blessing_bag_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <com.netease.nim.uikit.common.ui.imageview.CircleImageView
            android:id="@+id/x7_dialog_blessing_bag_sender_avatar_iv"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nim_avatar_group"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/x7_dialog_blessing_bag_description_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/x7_send_blessing_bag_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:textColor="#ffff00"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/x7_dialog_blessing_bag_description_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/base_white"
                    android:textSize="13dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="115dp"
                android:layout_height="26dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/x7_im_super_blessing_bag_words" />

        </LinearLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/x7_dialog_blessing_bag_open_animation_cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp">

            <ImageView
                android:id="@+id/x7_dialog_blessing_bag_open_animation_background_iv"
                android:layout_width="360dp"
                android:layout_height="449dp"
                android:scaleType="centerCrop"
                android:src="@drawable/x7_im_super_blessing_bag_animation_background"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/x7_dialog_blessing_bag_open_animation_foreground_iv"
                android:layout_width="159dp"
                android:layout_height="187dp"
                android:layout_marginTop="135dp"
                android:src="@drawable/x7_im_super_blessing_bag_animation_foreground"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/x7_dialog_blessing_bag_open_tv"
                android:layout_width="156dp"
                android:layout_height="39dp"
                android:layout_marginBottom="84dp"
                android:background="@drawable/x7_im_super_blessing_bag_open"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/x7_im_receive_new"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>

</RelativeLayout>