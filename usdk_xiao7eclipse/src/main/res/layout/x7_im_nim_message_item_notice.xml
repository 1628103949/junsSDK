<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/x7_im_nim_message_item_notice_rootView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/x7_bg_white_ffffff_7"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="2dp">

    <TextView
        android:id="@+id/x7_im_nim_message_item_notice_noticeTitle_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxWidth="@dimen/max_text_bubble_width"
        android:singleLine="true"
        android:textColor="@color/black_4"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/x7_im_nim_message_item_notice_noticeContent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:includeFontPadding="false"
        android:lineSpacingExtra="5dp"
        android:maxWidth="@dimen/max_text_bubble_width"
        android:textColor="@color/black_9"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/x7_im_nim_message_item_notice_clickNotice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:includeFontPadding="false"
        android:padding="10dp"
        android:text="@string/im_x7_xml_details"
        android:textColor="@color/text_green"
        android:textSize="11dp" />
</LinearLayout>