<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x7_addSmallAccount_width"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_solid_white_corner_10"
    android:orientation="vertical"
    android:paddingBottom="20dp">

    <EditText
        android:id="@+id/selfselection_gift_dialog_area_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="7dp"
        android:background="@null"
        android:gravity="left"
        android:hint="@string/x7base_selfselection_gift_dialog_area"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:textSize="14dp" />

    <View
        android:layout_width="200dp"
        android:layout_height="0.7dip"
        android:layout_gravity="center"
        android:layout_marginBottom="19dp"
        android:background="@color/x7base_gray_f3" />

    <EditText
        android:id="@+id/selfselection_gift_dialog_name_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="7dp"
        android:background="@null"
        android:gravity="left"
        android:hint="@string/x7base_selfselection_gift_dialog_name"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:textSize="14dp" />

    <View
        android:layout_width="200dp"
        android:layout_height="0.7dip"
        android:layout_gravity="center"
        android:layout_marginBottom="19dp"
        android:background="@color/x7base_gray_f3" />

    <EditText
        android:id="@+id/selfselection_gift_dialog_id_et"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="14dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="7dp"
        android:background="@null"
        android:gravity="left"
        android:hint="@string/x7base_selfselection_gift_dialog_id"
        android:paddingTop="4dip"
        android:paddingBottom="4dip"
        android:textSize="14dp" />

    <View
        android:id="@+id/id_line_tv"
        android:layout_width="200dp"
        android:layout_height="0.7dip"
        android:layout_gravity="center"
        android:layout_marginBottom="19dp"
        android:background="@color/x7base_gray_f3" />

    <EditText
        android:id="@+id/selfselection_gift_dialog_words_et"
        style="@style/X7EditTextWithBackStyle"
        android:layout_width="217dp"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/x7_f5f_corner_5"
        android:gravity="left"
        android:textColor="@color/black"
        android:hint="@string/x7base_selfselection_gift_dialog_word" />

    <LinearLayout
        android:id="@+id/rl_sure_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_switch_account_hint"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="83dp"
            android:layout_height="34dp"
            android:background="@drawable/x7_edt_back_2"
            android:text="@string/x7_cancel"
            android:textColor="#fff"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="83dp"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/x7_btn_back_selected_2"
            android:text="@string/x7base_selfselection_gift_dialog_commit"
            android:textColor="#fff"
            android:textSize="16dp" />

    </LinearLayout>

</LinearLayout>
