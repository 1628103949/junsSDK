<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_f2_10_bg"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <com.netease.nim.uikit.x7.myview.iv.RoundImageView
            android:id="@+id/myView_yunXin_teamIcon_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"
            android:background="#f2f2f2"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/myView_yunXin_teamName_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/black_3"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/myView_yunXin_teamIcon_iv" />

        <TextView
            android:id="@+id/myView_yunXin_messageContent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:textColor="@color/black_8"
            android:textSize="12dp"
            app:layout_constraintLeft_toRightOf="@+id/myView_yunXin_teamIcon_iv"
            app:layout_constraintTop_toBottomOf="@+id/myView_yunXin_teamName_tv" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
