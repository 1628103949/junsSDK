<?xml version="1.0" encoding="utf-8"?><!--限定使用此layout 的父布局为相对布局-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_switch_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/x7_add_small_account"
        android:textColor="#12cdb0"
        android:textSize="18dp" />

    <com.smwl.smsdk.myview.NestedScrollViewWithMaxHeight
        android:id="@+id/x7_scroll_for_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:maxHeight="130dp"
        android:layout_below="@+id/tv_switch_account_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_switch_account_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/x7_text_gray"
            android:textSize="14sp" />
    </com.smwl.smsdk.myview.NestedScrollViewWithMaxHeight>
</merge>