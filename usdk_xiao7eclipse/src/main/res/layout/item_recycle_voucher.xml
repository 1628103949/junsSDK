<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:id="@+id/item_recycle_voucher_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:background="@drawable/x7_item_recycle_voucher_bg"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="4dp"
        android:paddingTop="3dp"
        android:paddingBottom="7dp">

        <TextView
            android:id="@+id/item_recycle_voucher_price_icon_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/item_recycle_voucher_price_tv"
            android:text="¥"
            android:textColor="@color/color_12cdb0"
            android:textSize="9dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/item_recycle_voucher_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="5"
            android:textColor="@color/color_12cdb0"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/item_purchase_plat_money_iv"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_alignBaseline="@+id/item_recycle_voucher_price_tv"
            android:layout_marginLeft="2dp"
            android:layout_toEndOf="@+id/item_recycle_voucher_price_tv"
            android:baseline="6dp"
            android:src="@drawable/x7_bi_small"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_recycle_voucher_require_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_recycle_voucher_price_tv"
            android:layout_centerHorizontal="true"
            android:text="满10066可用"
            android:textColor="@color/color_12cdb0"
            android:textSize="8dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_recycle_voucher_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_alignEnd="@+id/item_recycle_voucher_rl"
        android:background="@drawable/x7base_ff9900_round_bg"
        android:layout_marginEnd="-4dp"
        android:paddingHorizontal="4dp"
        android:text="x3"
        android:textColor="@color/white"
        android:textSize="8dp" />

</RelativeLayout>
