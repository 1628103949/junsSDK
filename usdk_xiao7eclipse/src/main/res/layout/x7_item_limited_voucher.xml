<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="80dp"
    android:background="@drawable/bg_orange_gradient_ecd5a2_f6ebd3_10"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_limited_coupon_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/x7_red_ff0055"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_limited_coupon_surplus_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/x7_black_404040"
        android:textSize="7dp" />

    <TextView
        android:layout_width="65dp"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/bg_brown_d0ae72_corner_30"
        android:gravity="center"
        android:text="@string/x7_limited_purchase"
        android:textColor="@color/x7_yellow_f6ead2"
        android:textSize="8dp" />

</LinearLayout>