<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="275dp"
    android:layout_height="wrap_content"
    android:background="@drawable/x7_bg_white_ffffff_7"
    android:paddingHorizontal="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/dialog_receive_gift_code_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/x7_bg_gray_f9f9f9_6"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:textColor="@color/x7base_gray_99"
        android:textSize="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_receive_gift_code_copy_tv"
        android:layout_width="56dp"
        android:layout_height="30dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/x7_bg_solid_12cdb0_corner_5"
        android:gravity="center"
        android:text="@string/x7_copy"
        android:textColor="@color/x7_white"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="@id/dialog_receive_gift_code_tv"
        app:layout_constraintEnd_toEndOf="@id/dialog_receive_gift_code_tv"
        app:layout_constraintTop_toTopOf="@id/dialog_receive_gift_code_tv" />

    <LinearLayout
        android:id="@+id/dialog_receive_gift_code_explain_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/dialog_receive_gift_code_tv">

        <TextView
            android:id="@+id/dialog_receive_gift_code_explain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/x7_text_black3"
            android:textSize="13dp"
            app:layout_constraintTop_toBottomOf="@id/dialog_receive_gift_code_tv" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_receive_gift_code_hint_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="24dp"
        android:textColor="@color/x7base_gray_99"
        android:textIsSelectable="true"
        android:textSize="10dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/dialog_receive_gift_code_explain_ll" />

    <LinearLayout
        android:id="@+id/dialog_receive_gift_code_jump_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_receive_gift_code_hint_tv">

        <TextView
            android:id="@+id/dialog_receive_gift_code_jump_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/x7_open_gift_link"
            android:textColor="@color/x7base_green_12cdb0"
            android:textSize="13dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/dialog_receive_gift_code_arrow_iv"
            android:layout_width="6dp"
            android:layout_height="9dp"
            android:layout_marginStart="11dp"
            android:src="@drawable/x7_jiantou_green_right15"
            android:visibility="visible" />

    </LinearLayout>


    <TextView
        android:id="@+id/dialog_receive_gift_code_close_tv"
        android:layout_width="83dp"
        android:layout_height="34dp"
        android:layout_marginTop="31dp"
        android:background="@drawable/x7_bg_solid_12cdb0_corner_5"
        android:gravity="center"
        android:text="@string/x7_close"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_receive_gift_code_jump_ll" />

</android.support.constraint.ConstraintLayout>