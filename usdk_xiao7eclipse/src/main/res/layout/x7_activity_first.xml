<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/x7_background_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:layout_height="100dip"
                android:layout_gravity="center"
                android:background="#6600ee00"
                android:text="@string/x7_first_page_after_open_game"
                android:textColor="#ff0000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/x7_station"
                android:textColor="@color/x7_red_cf4851"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/choose_screenOrientation_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#028376"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/x7_fixed_vertical_screen"
                    android:textColor="@color/x7_text_black0" />

                <TextView
                    android:id="@+id/choose_screenOrientation_port"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="#12cdb0"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/x7_fixed_horizon_screen"
                    android:textColor="@color/x7_text_black0" />

                <TextView
                    android:id="@+id/choose_screenOrientation_sensor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="#12cdb0"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/x7_auto_rotation"
                    android:textColor="@color/x7_text_black0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_visitor_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#12cdb0"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="删除账号信息"
                    android:textColor="@color/x7_text_black0" />

                <TextView
                    android:id="@+id/frame_kit_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="20dp"
                    android:background="@color/x7base_green_12cdb0"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="FrameKit测试"
                    android:textColor="@color/black" />

            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="云游戏 : 输入手机号/用户名然后去登录:"/>
            <EditText
                android:id="@+id/enter_username_et"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:hint="输入云游戏要登录的账号" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/go"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#000066"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/x7_to_login"
                android:textColor="#ff0000"
                android:textSize="20sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/x7_Permission_prompt"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff5555" />
</LinearLayout>


