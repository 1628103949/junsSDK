<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="MissingDefaultResource">

        <include layout="@layout/x7_activity_title_with_right_btn" />


        <TextView
            android:id="@+id/tv_tools_real_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:gravity="center"
            android:text="66989.50å…ƒ"
            android:textColor="#ff0000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_xchanger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/x7_text_black6" />

        <RelativeLayout
            android:id="@+id/rl_good_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/x7_solid_gray_f2_corner_5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="25dp"
            android:paddingRight="20dp"
            android:paddingBottom="25dp">

            <TextView
                android:id="@+id/tv_buy_buy_tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/x7_buy_goods"
                android:textColor="@color/x7_text_black3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_prepay_buy_tools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/tv_buy_buy_tools"
                android:textColor="@color/x7_text_black3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_voucher_pay_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_prepay_buy_tools"
                android:layout_alignRight="@+id/tv_buy_buy_tools"
                android:layout_marginTop="10dp"
                android:text="@string/x7_voucher"
                android:textColor="@color/x7_text_black3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_voucher_pay_left"
                android:layout_toRightOf="@+id/tv_voucher_pay_left"
                android:drawableRight="@drawable/x7_rightjiantou"
                android:drawablePadding="5dp"
                android:paddingRight="10dip"
                android:textColor="@color/x7_text_red"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_price_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_voucher"
                android:layout_alignRight="@+id/tv_buy_buy_tools"
                android:layout_marginTop="10dp"
                android:text="@string/x7_actual_price"
                android:textColor="@color/x7_text_black3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_prepay_tool_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_price_left"
                android:layout_toRightOf="@+id/tv_price_left"
                android:gravity="left"
                android:textColor="@color/x7_text_black3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_rebate_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_prepay_tool_price"
                android:layout_alignRight="@+id/tv_buy_buy_tools"
                android:layout_marginTop="10dp"
                android:text="@string/x7_rebate"
                android:textColor="@color/x7_text_black3"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_prepay_pingtaibi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_rebate_left"
                android:layout_toRightOf="@+id/tv_rebate_left"
                android:gravity="right"
                android:textColor="@color/x7_text_black3"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_balance_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_rebate_left"
                android:layout_alignRight="@+id/tv_buy_buy_tools"
                android:layout_marginTop="10dp"
                android:text="@string/x7_residue_sum"
                android:textColor="@color/x7_text_black3"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_prepay_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_balance_left"
                android:layout_toRightOf="@+id/tv_balance_left"
                android:textColor="@color/x7_text_black3"
                android:textSize="14sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_month_guid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/x7_solid_fcf9e5_corner_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_card_type"
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:background="@drawable/x7_solid_f90_corner_8"
                android:ems="1"
                android:gravity="center"
                android:paddingVertical="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_4"
                android:text="@string/x7_month_card_text"
                android:textColor="@color/base_white"
                android:textSize="8dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <TextView
                    android:id="@+id/tv_current_coupon_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="#333333"
                    android:textSize="11dp" />

                <ImageView
                    android:id="@+id/iv_guide_to_dialog"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_toRightOf="@+id/tv_current_coupon_price"
                    android:padding="5dp"
                    android:src="@drawable/x7_question" />

                <TextView
                    android:id="@+id/tv_coupon_all_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_current_coupon_price"
                    android:layout_alignLeft="@+id/tv_current_coupon_price"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text=""
                    android:textColor="#ff9900"
                    android:textSize="8dp" />

            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_card_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textColor="#ff9900"
                android:textSize="11dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/x7_plate_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginEnd="6dp"
                android:baselineAlignBottom="true"
                android:src="@drawable/x7_bi_small"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/cb_month_card"
                android:layout_width="18dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:button="@drawable/x7_month_guid_selection_for_agreement"
                android:buttonTintMode="src_in"
                android:checked="false" />

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_choose_pay_method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/x7_choose_pay_way"
            android:textColor="@color/x7_text_black0"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rg_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal" />

        <Button
            android:id="@+id/btn_to_pay"
            style="@style/X7BtnClickStyleNew"
            android:layout_marginTop="8dp"
            android:text="@string/x7_recharge" />

        <TextView
            android:id="@+id/tv_customer_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/x7_text_green"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_pay_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|bottom"
            android:paddingBottom="20dp"
            android:text="@string/x7_xml_payHint1"
            android:textColor="@color/gray_66"
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>