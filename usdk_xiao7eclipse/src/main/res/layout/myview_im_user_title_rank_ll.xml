<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="34dp">

    <LinearLayout
        android:id="@+id/myView_im_user_title_rank_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:includeFontPadding="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myView_im_user_rank_tv"
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/myView_im_user_integral_tv"
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textSize="10dp" />

        <RelativeLayout
            android:layout_width="116dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/myView_im_user_rank_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:paddingHorizontal="5dp"
                android:paddingVertical="3dp"
                android:textSize="10dp" />
        </RelativeLayout>

    </LinearLayout>

    <!--用户当前群聊等级标识-->
    <LinearLayout
        android:id="@+id/user_current_group_rank_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_border_color_99eee1"
        android:visibility="gone">

        <TextView
            android:layout_width="11dp"
            android:layout_height="match_parent"
            android:background="@color/color_12cdb0"
            android:gravity="center"
            android:includeFontPadding="false"
            android:lineSpacingExtra="-1dp"
            android:text="@string/x7_current_group_integral_rank"
            android:textColor="@color/base_white"
            android:textSize="6dp" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>