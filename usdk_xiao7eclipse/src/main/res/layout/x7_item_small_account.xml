<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_small_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/x7_bg_black_solid_52000000_corner_9"
        android:gravity="center_vertical"
        android:minWidth="600dp"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_switch_account"
            android:layout_width="35dp"
            android:layout_height="23dp"
            android:layout_marginLeft="11dp"
            android:background="@drawable/x7_account_manager_change"
            android:gravity="center"
            android:text="@string/x7_switch"
            android:textColor="#fff"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/small_account_os_type_iv"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/account_os_type_andorid"/>

        <TextView
            android:id="@+id/tv_small_account_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/iv_sell_account"
            android:layout_width="35dp"
            android:layout_height="23dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/x7_account_manager_sell2"
            android:gravity="center"
            android:text="@string/x7base_sell_account"
            android:textColor="#fff"
            android:textSize="12dp"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/iv_recycle_account"
            android:layout_width="35dp"
            android:layout_height="23dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/x7_account_manager_sell2"
            android:gravity="center"
            android:text="@string/x7base_recycle_account"
            android:textColor="#fff"
            android:textSize="12dp"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/iv_modify_small_account"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/x7_switch_account2" />

        <TextView
            android:id="@+id/tv_sell_state"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/x7_account_manager_sell"
            android:gravity="center"
            android:textColor="@color/x7_white"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>