<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="274dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginStart="40dp"
        android:textSize="11dp"
        android:textColor="@color/black_3"
        android:text="@string/x7_sure_to_bind_this_account"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/x7_bg_solid_f9_corner_12">
        <ImageView
            android:id="@+id/dialog_facebook_bind_account_avatar_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/dialog_facebook_bind_account_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="11dp"
            android:textColor="@color/black_3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="30dp">
        <Button
            android:id="@+id/dialog_facebook_bind_account_sure_btn"
            android:layout_width="83dp"
            android:layout_height="34dp"
            android:background="@drawable/x7_bg_12cdb0_radius_9_bg"
            android:text="@string/x7_sure_to_add"
            android:textColor="@color/white"
            android:textSize="15dp" />
        <Button
            android:id="@+id/dialog_facebook_bind_account_cancel_btn"
            android:layout_width="83dp"
            android:layout_height="34dp"
            android:background="@color/white"
            android:text="@string/x7_cancel"
            android:layout_marginStart="10dp"
            android:textColor="@color/text_green"
            android:textSize="15dp" />


    </LinearLayout>


</LinearLayout>