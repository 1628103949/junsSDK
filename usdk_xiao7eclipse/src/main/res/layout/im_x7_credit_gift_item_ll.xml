<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="168dp"
    android:background="@drawable/shadow_new_quan_1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/credit_gift_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:textSize="17dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/credit_gift_look"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="#ff12dcb0"
            android:singleLine="true"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/credit_gift_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:text=""
            android:textColor="#ff333333"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="10dp"
            app:layout_constraintEnd_toStartOf="@+id/credit_gift_look"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/credit_gift_title" />

        <TextView
            android:id="@+id/credit_gift_demand"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="#ff333333"
            android:includeFontPadding="false"
            android:textSize="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/credit_gift_time" />

        <TextView
            android:id="@+id/credit_gift_look"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@drawable/x7base_bg_green_12cdb0_6"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@id/credit_gift_time"
            android:text="@string/im_AdvancedTeamInfoActivity_check"
            android:textColor="#ffffffff"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/credit_gift_surplus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/credit_gift_look"
            app:layout_constraintStart_toStartOf="@+id/credit_gift_look"
            app:layout_constraintTop_toBottomOf="@+id/credit_gift_look"
            app:layout_constraintBottom_toBottomOf="@+id/credit_gift_demand"
            android:layout_marginTop="6dp"
            android:textSize="9dp"
            android:textColor="#ff666666"
            android:text=""/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/x7_bg_gray_f5f5f5_corner_7"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <TextView
                android:id="@+id/credit_gift_already"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_solid_green_12cdb0_corner_10"
                android:gravity="end|center_vertical"
                android:paddingRight="7dp"
                android:text=""
                android:textColor="#ffffffff"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/credit_gift_unget"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start|center_vertical"
                android:paddingLeft="7dp"
                android:text=""
                android:textColor="#ff12dcb0"
                android:textSize="9dp" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

</LinearLayout>