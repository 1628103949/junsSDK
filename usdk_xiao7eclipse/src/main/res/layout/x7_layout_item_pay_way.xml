<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/pay_way_icon_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@id/pay_way_check_tv"
        android:layout_toEndOf="@+id/pay_way_icon_iv">

        <LinearLayout
            android:id="@+id/pay_way_name_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pay_way_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/white"
                android:singleLine="true"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/first_arrow_iv"
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:src="@drawable/x7_jiantou_green_right15"
                android:visibility="gone" />

            <TextView
                android:id="@+id/pay_channel_first_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/color_12cdb0"
                android:textSize="14dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/second_arrow_iv"
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:src="@drawable/x7_jiantou_green_right15"
                android:visibility="gone" />

            <TextView
                android:id="@+id/pay_channel_second_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/color_12cdb0"
                android:textSize="14dp"
                android:visibility="gone" />


        </LinearLayout>

        <ImageView
            android:id="@+id/pay_way_badge_iv"
            android:layout_width="24dp"
            android:layout_height="12dp"
            android:layout_alignEnd="@id/pay_way_name_ll"
            android:layout_alignBottom="@id/pay_way_name_ll"
            android:layout_marginBottom="3dp"
            android:scaleType="fitStart"
            android:visibility="gone" />

        <TextView
            android:id="@+id/pay_way_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pay_way_name_ll"
            android:layout_marginTop="1dp"
            android:textColor="#fffdfd"
            android:textSize="8dp"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/pay_way_check_tv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:src="@drawable/x7_selector_pay_way_item_gray" />

    <View
        android:id="@+id/pay_way_item_bottom_line"
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:layout_alignEnd="@id/pay_way_check_tv"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/pay_way_icon_iv"
        android:background="#33ffffff" />

</RelativeLayout>
