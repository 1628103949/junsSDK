<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_register_forget"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/x7_userLogin"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="left"
        android:textColor="#11ccb1"
        android:textSize="13dp"
        android:text="@string/x7_password_login" />

    <View
        android:id="@+id/x7_userLogin_view"
        android:layout_width="1dp"
        android:layout_height="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="11dp"
        android:visibility="gone"
        android:background="@color/x7_vertical_divider_line" />

    <TextView
        android:id="@+id/x7_registerAccount"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#11ccb1"
        android:text="@string/registerAccount"
        android:textSize="13dp"
        />

    <View
        android:id="@+id/x7_registerAccount_view"
        android:layout_width="1dp"
        android:layout_height="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="11dp"
        android:background="@color/x7_vertical_divider_line"
        />

    <TextView
        android:id="@+id/x7_forgetPassword"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:clickable="true"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="right"
        android:text="@string/x7_forgetPassword"
        android:textSize="13dp"
        android:textColor="#11ccb1"
        />
</LinearLayout>