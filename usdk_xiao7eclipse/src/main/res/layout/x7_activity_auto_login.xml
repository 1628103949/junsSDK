<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/x7_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:src="@drawable/x7_icon" />
    <TextView
        android:id="@+id/tv_auto_login_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/x7_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="73dp"
        android:textSize="26dp"
        android:text="x7Demo"
        android:textColor="#f90" />

    <TextView
        android:id="@+id/tv_auto_login_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_auto_login_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:textSize="12dp"
        android:text="@string/x7_auto_loading"
        android:textColor="@color/color_black_ff999999" />

    <ImageView
        android:id="@+id/iv_auto_loading"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/tv_auto_login_state"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:contentDescription="TODO"
        android:src="@drawable/x7_auto_loding_animation" />

    <TextView
        android:id="@+id/tv_version_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:textSize="12dp"
        android:text="version"
        android:textColor="@color/x7base_gray_99" />

    <Button
        android:id="@+id/btn_switch_account"
        style="@style/X7BtnClickStyleNew"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="26dp"
        android:layout_above="@+id/tv_version_name"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="28dp"
        android:padding="10dp"
        android:text="@string/x7_switch_account" />

</RelativeLayout>
