<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <com.netease.nim.uikit.x7.myview.X7Title
        android:id="@+id/act_joinIMVerify_title"
        android:layout_width="match_parent"
        android:minHeight="45dp"
        android:background="@color/transparent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/act_joinIMVerify_applyMessage_et"
            android:background="@drawable/x7_gray_10_bg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_grey_555555"
            android:textColorHint="@color/color_gray_bfc2c5"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="16dip"
            android:hint=""
            android:textSize="@dimen/sp_14"
            android:minHeight="60dp"
            android:imeOptions="actionDone|flagNoExtractUi" />
    </LinearLayout>


</LinearLayout>
