<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/x7base_white"
    android:fitsSystemWindows="true">

    <com.smwl.x7market.component_base.myview.other.X7Title
        android:id="@+id/topTitle"
        android:layout_width="match_parent"
        android:minHeight="45dp"
        android:layout_height="wrap_content" />

    <com.smwl.x7market.myview.XListView
        android:id="@+id/act_x7VideoList_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:listSelector="@color/x7base_white"
        android:cacheColorHint="@color/x7base_white" />

</LinearLayout>
