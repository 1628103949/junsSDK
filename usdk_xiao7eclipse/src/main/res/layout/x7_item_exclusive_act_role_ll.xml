<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_role_info_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="3dp"
    android:background="@drawable/x7_choose_role_item_bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="13dp">

    <TextView
        android:id="@+id/item_role_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/x7_sure"
        android:textColor="@color/black_6"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/item_role_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:gravity="center"
        android:text="@string/x7_sure"
        android:textColor="@color/black_9"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/item_role_area_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/x7_sure"
        android:textColor="@color/black_9"
        android:textSize="10dp" />
</LinearLayout>
