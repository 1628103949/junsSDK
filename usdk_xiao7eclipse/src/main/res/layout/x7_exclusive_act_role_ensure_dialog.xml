<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x7_addSmallAccount_width"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_solid_white_corner_10"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/role_ensure_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:text="@string/x7_exclusive_acts_role_ensure"
        android:textColor="@color/color_12cdb0"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/role_ensure_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/role_ensure_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="@null"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/role_ensure_edit_iv"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:layout_alignTop="@+id/role_ensure_name_tv"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/role_ensure_name_tv"
        android:src="@drawable/x7_edit_role_info_icon" />

    <TextView
        android:id="@+id/role_ensure_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/role_ensure_name_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="14dp" />


    <TextView
        android:id="@+id/role_ensure_area_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/role_ensure_id_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="14dp" />


    <LinearLayout
        android:id="@+id/rl_sure_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/role_ensure_area_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="83dp"
            android:layout_height="34dp"
            android:gravity="center"
            android:text="@string/x7_cancel"
            android:textColor="@color/color_12cdb0"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_sure"
            android:layout_width="83dp"
            android:layout_height="34dp"
            android:layout_marginLeft="26dp"
            android:background="@drawable/x7_btn_back_selected_2"
            android:text="@string/x7_affirm"
            android:textColor="@color/base_white"
            android:textSize="16dp" />

    </LinearLayout>

</RelativeLayout>
