<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/x7_bg_black_corners_20">

    <TextView
        android:id="@+id/suspension_hint_content_tv"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:text="@string/x7_suspension_hint_for_web"
        android:textColor="@color/x7_white"
        android:layout_marginTop="27dp"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/suspension_hint_cancel_tv"
        android:layout_width="126dp"
        android:layout_height="42dp"
        android:layout_marginBottom="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="27dp"
        android:text="@string/x7_cancel"
        android:gravity="center"
        android:textColor="@color/x7_white"
        android:background="@drawable/x7_corner_6_solid_ff9000"
        app:layout_constraintTop_toBottomOf="@+id/suspension_hint_content_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/suspension_hint_ensure_tv"
        android:layout_width="126dp"
        android:layout_height="42dp"
        android:layout_marginEnd="27dp"
        android:text="@string/x7_affirm"
        android:gravity="center"
        android:textColor="@color/x7_white"
        android:background="@drawable/x7_corner_6_solid_12cdb0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/suspension_hint_cancel_tv"
        app:layout_constraintBottom_toBottomOf="@+id/suspension_hint_cancel_tv"/>
</android.support.constraint.ConstraintLayout>