<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:background="@drawable/x7_ffffff_16_bg">

    <RelativeLayout
        android:id="@+id/dialog_x7Report_hint1_rl"
        android:layout_width="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_height="30dip">

        <CheckBox
            android:id="@+id/dialog_x7Report_hint1_cb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/message_delete_select_bg"
            android:button="@null"
            android:clickable="false"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dialog_x7Report_hint1_cb"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/x7_MessageListPanelEx_report_hint1"
            android:textColor="@color/black_3"
            android:textSize="16dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/dialog_x7Report_hint2_rl"
        android:layout_width="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_height="30dip">

        <CheckBox
            android:id="@+id/dialog_x7Report_hint2_cb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/message_delete_select_bg"
            android:button="@null"
            android:clickable="false"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dialog_x7Report_hint2_cb"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/x7_MessageListPanelEx_report_hint2"
            android:textColor="@color/black_3"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_x7Report_hint3_rl"
        android:layout_width="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_height="30dip">

        <CheckBox
            android:id="@+id/dialog_x7Report_hint3_cb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/message_delete_select_bg"
            android:button="@null"
            android:clickable="false"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dialog_x7Report_hint3_cb"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/x7_MessageListPanelEx_report_hint3"
            android:textColor="@color/black_3"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_x7Report_hint4_rl"
        android:layout_width="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_height="30dip">

        <CheckBox
            android:id="@+id/dialog_x7Report_hint4_cb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/message_delete_select_bg"
            android:button="@null"
            android:clickable="false"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dialog_x7Report_hint4_cb"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/x7_MessageListPanelEx_report_hint4"
            android:textColor="@color/black_3"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dialog_x7Report_hint5_rl"
        android:layout_width="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_height="30dip">

        <CheckBox
            android:id="@+id/dialog_x7Report_hint5_cb"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/message_delete_select_bg"
            android:button="@null"
            android:clickable="false"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/dialog_x7Report_hint5_cb"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:text="@string/x7_MessageListPanelEx_report_hint5"
            android:textColor="@color/black_3"
            android:textSize="16dp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/dialog_x7Report_content_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_f2_10_bg"
        android:hint="@string/x7_MessageListPanelEx_report_inputReason"
        android:padding="10dp"
        android:textSize="15dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/black_6"
        android:maxLines="2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">



        <TextView
            android:id="@+id/dialog_x7Report_ensure_btn"
            android:layout_width="267dp"
            android:layout_height="47dp"
            android:background="@drawable/x7base_im_bg_solid_green_12cdb0_corner_50"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="@string/ok"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/dialog_x7Report_cancel_btn"
            android:layout_width="267dp"
            android:layout_height="35dip"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_grey_999999"
            android:textSize="14dp" />

    </LinearLayout>
</LinearLayout>
