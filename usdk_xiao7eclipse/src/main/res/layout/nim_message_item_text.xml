<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="top"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/nim_message_item_text_left_wing"
        android:layout_width="18dp"
        android:layout_height="40dp"
        android:src="@drawable/x7_bg_month_card_user_left_wing"
        android:visibility="visible"/>

    <ImageView
        android:id="@+id/nim_message_item_text_left_xiao7"
        android:layout_width="8dp"
        android:layout_height="42dp"
        android:layout_marginEnd="-1px"
        android:layout_marginRight="-1px"
        android:src="@drawable/x7_bg_month_card_user_left_xiao7"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/nim_message_item_text_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/x7_bg_month_card_user_text_body"
        android:gravity="center_vertical|left"
        android:includeFontPadding="false"
        android:lineSpacingExtra="3dip"
        android:maxWidth="200dp"
        android:minHeight="42dp"
        android:paddingStart="14dp"
        android:paddingTop="12dp"
        android:paddingEnd="14dp"
        android:paddingBottom="12dp"
        android:textColor="@color/color_black_b3000000"
        android:textSize="16dp" />

    <ImageView
        android:id="@+id/nim_message_item_text_right_yueka"
        android:layout_width="8dp"
        android:layout_height="42dp"
        android:layout_marginStart="-1px"
        android:layout_marginLeft="-1px"
        android:visibility="visible"
        android:src="@drawable/x7_bg_month_card_user_rigth_yueka" />

    <ImageView
        android:id="@+id/nim_message_item_text_right_wing"
        android:layout_width="18dp"
        android:layout_height="40dp"
        android:src="@drawable/x7_bg_month_card_user_right_wing"
        android:visibility="visible"/>

</LinearLayout>