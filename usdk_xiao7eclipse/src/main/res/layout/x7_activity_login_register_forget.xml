<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_register_forget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingEnd="0dp">

    <TextView
        android:id="@+id/x7_userLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:gravity="left"
        android:text="@string/x7_phoneLogin"
        android:textColor="@color/x7_text_green"
        android:textSize="13dp" />

    <View
        android:id="@+id/x7_userLogin_view"
        android:layout_width="1dp"
        android:layout_height="13dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/x7_vertical_divider_line" />

    <TextView
        android:id="@+id/x7_registerAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/registerAccount"
        android:textColor="@color/x7_text_green"
        android:textSize="13dp" />

    <View
        android:id="@+id/x7_registerAccount_view"
        android:layout_width="1dp"
        android:layout_height="13dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="11dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/x7_vertical_divider_line" />

    <TextView
        android:id="@+id/x7_forgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:gravity="right"
        android:text="@string/x7_forgetPassword"
        android:textColor="@color/x7_text_green"
        android:textSize="13dp" />
</LinearLayout>