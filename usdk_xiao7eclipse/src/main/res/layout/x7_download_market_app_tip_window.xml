<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingTop="5dp"
    android:clickable="true"
    android:focusable="true"
    android:paddingStart="9dp">

    <ImageView
        android:id="@+id/arrow_up"
        android:layout_width="17dp"
        android:layout_height="8dp"
        android:layout_alignEnd="@+id/content_layout"
        android:layout_marginRight="35dp"
        android:scaleType="fitCenter"
        android:src="@drawable/x7_k3" />

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="173dp"
        android:layout_height="64dp"
        android:layout_below="@+id/arrow_up"
        android:background="@drawable/x7_k2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="47dp"
            android:layout_height="37dp"
            android:scaleType="centerInside"
            android:src="@drawable/x7_vast_welfare" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:lineSpacingExtra="5dp"
            android:text="@string/x7_download_app_tip"
            android:textColor="@color/white"
            android:textSize="11dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/content_layout"
        android:layout_alignStart="@+id/content_layout"
        android:layout_marginTop="-10dp"
        android:layout_marginStart="-10dp"
        android:padding="4dp"
        android:src="@drawable/x7_icon_close" />


</RelativeLayout>
