<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/history_picture_iv"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/history_video_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/x7_history_video_play_icon"
        app:layout_constraintBottom_toBottomOf="@id/history_picture_iv"
        app:layout_constraintLeft_toLeftOf="@id/history_picture_iv"
        app:layout_constraintRight_toRightOf="@id/history_picture_iv"
        app:layout_constraintTop_toTopOf="@id/history_picture_iv" />
</android.support.constraint.ConstraintLayout>
