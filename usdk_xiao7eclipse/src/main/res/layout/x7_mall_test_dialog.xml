<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="300dp"
    android:background="@color/base_white"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="roleId:" />

                <EditText
                    android:id="@+id/tv_mall_role_id"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:hint="商城角色信息 id"
                    android:inputType="number"
                    android:maxLength="3"
                    android:padding="5dp"
                    android:text="121"
                    android:textColor="@color/black"
                    android:textColorHint="@color/base_black_9"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="roleCE:" />

                <EditText
                    android:id="@+id/tv_mall_role_ce"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:hint="商城角色信息 ce"
                    android:inputType=""
                    android:padding="5dp"
                    android:text="2000"
                    android:textColor="@color/black"
                    android:textColorHint="@color/base_black_9"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="roleStage:" />

                <EditText
                    android:id="@+id/tv_mall_role_stage"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:hint="商城角色信息 stage"
                    android:inputType=""
                    android:padding="5dp"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textColorHint="@color/base_black_9"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="roleLevel:" />

                <EditText
                    android:id="@+id/tv_mall_role_level"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:hint="商城角色信息 level"
                    android:inputType=""
                    android:padding="5dp"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textColorHint="@color/base_black_9"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="roleName:" />

                <EditText
                    android:id="@+id/tv_mall_role_name"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:hint="商城角色信息 name"
                    android:inputType=""
                    android:padding="5dp"
                    android:text="疯了的珠子"
                    android:textColor="@color/black"
                    android:textColorHint="@color/base_black_9"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="roleRechargeAmount:" />

                <EditText
                    android:id="@+id/tv_mall_role_recharge_amount"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:hint="商城角色信息 recharge_amount"
                    android:inputType=""
                    android:padding="5dp"
                    android:text="43.32"
                    android:textColor="@color/black"
                    android:textColorHint="@color/base_black_9"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="serverId:" />

                <EditText
                    android:id="@+id/tv_mall_server_id"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:hint="serverId"
                    android:inputType=""
                    android:padding="5dp"
                    android:text="15678"
                    android:textColor="@color/black"
                    android:textColorHint="@color/base_black_9"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="serverName:" />

                <EditText
                    android:id="@+id/tv_mall_server_name"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:hint="server_name"
                    android:inputType=""
                    android:padding="5dp"
                    android:text="国服蔡文姬"
                    android:textColor="@color/black"
                    android:textColorHint="@color/base_black_9"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/get_mall_data_tv"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/x7base_bg_green_12cdb0_7"
                android:gravity="center"
                android:text="@string/x7_mall_get_data"
                android:textColor="@color/base_white"
                android:textSize="15dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>