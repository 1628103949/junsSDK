<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/turntable_lottery_record_dialog_cl"
        android:layout_width="310dp"
        android:layout_height="226dp"
        android:background="@drawable/x7_bg_f3efe8_orange_corner_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.smwl.smsdk.myview.StrokeTextView
            android:id="@+id/turntable_lottery_record_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/x7_mall_turntable_record_dialog_title"
            android:textSize="14dp"
            android:textColor="@color/base_white"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:stroke_width="3dp"
            app:stroke_color="#745427"
            android:textStyle="bold"/>
        
        <android.support.v7.widget.RecyclerView
            android:id="@+id/turntable_lottery_record_content_rv"
            android:layout_width="270dp"
            android:layout_height="130dp"
            android:layout_marginTop="18dp"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@color/x7_brown_D6C59A"
            android:scrollbarSize="2dp"
            android:scrollbarTrackVertical="@color/x7_white_E9E3D8"
            android:fadeScrollbars="false"
            android:scrollbarStyle="outsideOverlay"
            app:layout_constraintTop_toBottomOf="@+id/turntable_lottery_record_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/turntable_lottery_record_close_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/x7_mall_close_icon"
        app:layout_constraintTop_toTopOf="@id/turntable_lottery_record_dialog_cl"
        app:layout_constraintBottom_toTopOf="@+id/turntable_lottery_record_dialog_cl"
        app:layout_constraintStart_toEndOf="@+id/turntable_lottery_record_dialog_cl"
        app:layout_constraintEnd_toEndOf="@id/turntable_lottery_record_dialog_cl"/>
</android.support.constraint.ConstraintLayout>