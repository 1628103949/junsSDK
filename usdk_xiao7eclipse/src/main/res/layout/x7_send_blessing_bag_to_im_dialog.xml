<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x7_addSmallAccount_width"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/x7_send_blessing_bag_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="28dp"
        android:text=""
        android:textColor="@color/base_black_6"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/x7_send_blessing_bag_no_prompt_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/x7_send_blessing_bag_content_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:button="@drawable/x7_checkbox_circle_button"
        android:paddingLeft="5dp"
        android:text="@string/x7_no_longger_remind"
        android:textColor="@color/x7base_gray_99"
        android:textSize="12dp" />

    <RelativeLayout
        android:id="@+id/rl_sure_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/x7_send_blessing_bag_no_prompt_cb"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="31dp">

        <TextView
            android:id="@+id/x7_im_send_blessing_bag_shutdown_tv"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:background="@drawable/x7_btn_back_selected_2"
            android:gravity="center"
            android:text="@string/x7_sure_to_add"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/x7_im_send_blessing_bag_cancle_tv"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/x7_edt_back_3"
            android:gravity="center"
            android:text="@string/x7_cancel"
            android:textColor="@color/x7base_gray_99"
            android:textSize="16dp" />

    </RelativeLayout>

</RelativeLayout>
