<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/ll_sdk_money_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="11dp"
        android:background="@drawable/x7_voucher">

        <TextView
            android:id="@+id/tv_voucher_validity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="有效期:6月25-30日"
            android:textColor="@color/x7_white"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/tv_voucher_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_voucher_validity"
            android:layout_marginTop="30dp"
            android:layout_toLeftOf="@+id/tv_voucher_num"
            android:includeFontPadding="false"
            android:text="@string/x7_RMB_symbol"
            android:textColor="@color/x7_text_yellow"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_voucher_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_voucher_validity"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="1000"
            android:textColor="@color/x7_text_yellow"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/iv_voucher_plat_money"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginBottom="7dp"
            android:src="@drawable/x7_bi_small"
            android:visibility="gone"
            android:layout_alignBottom="@+id/tv_voucher_num"
            android:layout_toRightOf="@+id/tv_voucher_num"/>

        <TextView
            android:id="@+id/tv_voucher_price_ladder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_voucher_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:includeFontPadding="false"
            android:text="dasdsadsad"
            android:textColor="@color/x7_white"
            android:textSize="13dp" />

        <!-- <TextView
            android:id="@+id/tv_voucher_expiration_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_voucher_price_ladder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/x7_white"
            android:textSize="8dp" />-->


        <TextView
            android:id="@+id/tv_voucher_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_voucher_price_ladder"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:background="@drawable/x7_text_back_voucher_ed"
            android:gravity="center"
            android:text="@string/x7_get_voucher"
            android:textColor="#9bfcd6"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>