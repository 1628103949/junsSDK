<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/x7_bg_black_52000000_corner_12"
        android:layout_marginEnd="3dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/x7_item_facebook_bind_account_avatar_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/nim_image_default"/>

        <TextView
            android:id="@+id/x7_item_facebook_bind_account_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="14dp"
            android:textColor="@color/white" />
    </LinearLayout>
    <ImageView
        android:id="@+id/x7_item_facebook_bind_account_check_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/check_icon_43"
        android:layout_marginTop="5dp"

        android:layout_alignParentEnd="true"/>

</RelativeLayout>