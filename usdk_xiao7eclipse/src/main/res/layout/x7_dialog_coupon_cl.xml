<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coupon_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|center_horizontal"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/dialog_x7coupon_rootView_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/x7_ffffff_16_bg">

        <TextView
            android:id="@+id/dialog_x7coupon_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center_vertical"
            android:text="送您群专享代金券"
            android:textColor="@color/help_color"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:id="@+id/dialog_x7coupon_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:scrollbarSize="2dp"
            android:scrollbarThumbVertical="@drawable/bg_vertical_scrollbar"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toTopOf="@+id/dialog_x7coupon_receive_tv"
            app:layout_constraintTop_toBottomOf="@+id/dialog_x7coupon_title_tv">

            <include layout="@layout/act_coupon_rl" />

        </ScrollView>

        <TextView
            android:id="@+id/dialog_x7coupon_receive_tv"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/receive"
            android:textColor="@color/color_12cdb0"
            android:textSize="@dimen/text_size_17"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>