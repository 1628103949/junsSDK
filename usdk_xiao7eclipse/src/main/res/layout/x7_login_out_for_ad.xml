<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <com.smwl.smsdk.myview.MyRoundImageView
        android:id="@+id/iv_ad_for_login_out"
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:layout_margin="6dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/iv_ad_for_login_out"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_login_out_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/x7_cancel"
            android:textColor="@color/x7_white" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/x7_white" />

        <TextView
            android:id="@+id/tv_login_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/x7_login_out"
            android:textColor="@color/x7_white" />


    </LinearLayout>

</RelativeLayout>