<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/pay_channel_item_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/x7_bg_solid_19ffffff_corner_5">

        <TextView
            android:id="@+id/pay_channel_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <LinearLayout
            android:id="@+id/pay_channel_cost_and_fee_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="21dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/pay_channel_cost_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:textColor="#ffff00"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/pay_channel_fee_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:textColor="@color/x7base_gray_99"
                android:textSize="10dp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/pay_channel_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/red_yuan_bj"
        android:includeFontPadding="false"
        android:paddingLeft="7dp"
        android:paddingTop="3dp"
        android:paddingRight="7dp"
        android:paddingBottom="3dp"
        android:textColor="@color/base_white"
        android:textSize="10dp"
        android:visibility="gone" />
</FrameLayout>