<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_root_float_ad_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rl_floating_view"
        android:layout_marginStart="23dp"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_float_ad_left"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/x7_bg_solid_99000000_corner_7"
            android:paddingEnd="14dp">

            <LinearLayout
                android:id="@+id/ll_float_ad_content_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="37dp"
                android:layout_marginEnd="3dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_float_ad_title_dot_left"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/x7_shape_white_round"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_float_ad_title_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxWidth="303dp"
                        android:text=""
                        android:textColor="@color/base_white"
                        android:textSize="18dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_float_ad_desc_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxWidth="303dp"
                    android:text=""
                    android:textColor="@color/x7_color_f9f9f9"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_float_ad_left"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/x7_account_manager_sell"
                    android:text="@string/x7_float_ad_check_more_details"
                    android:textColor="@color/base_white" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_float_ad_game_icon_left"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@+id/ll_float_ad_content_left"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_float_ad_select_left"
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/iv_float_ad_game_icon_left"
                android:src="@drawable/x7_account_arrow"
                android:visibility="gone" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_float_ad_delete_left"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="-15dp"
            android:layout_marginTop="-4dp"
            android:layout_toEndOf="@+id/rl_float_ad_left"
            android:padding="4dp"
            android:src="@drawable/x7_icon_close_gray" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_float_ad_round_background_left"
        android:layout_width="26dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/rl_floating_view"
        android:layout_centerVertical="true"
        android:layout_marginStart="-3dp"
        android:background="@drawable/x7_half_round_left_99000000_bg"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_root_float_ad_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-26dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_float_ad_right"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/x7_bg_solid_99000000_corner_7"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_float_ad_select_right"
                android:layout_width="6dp"
                android:layout_height="10dp"
                android:layout_marginStart="11dp"
                android:src="@drawable/x7_account_arrow_left" />

            <ImageView
                android:id="@+id/iv_float_ad_game_icon_right"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="9dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_float_ad_content_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="37dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_float_ad_title_dot_right"
                        android:layout_width="4dp"
                        android:layout_height="4dp"
                        android:layout_marginEnd="6dp"
                        android:background="@drawable/x7_shape_white_round"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tv_float_ad_title_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxWidth="303dp"
                        android:text=""
                        android:textColor="@color/base_white"
                        android:textSize="18dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_float_ad_desc_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxWidth="303dp"
                    android:text=""
                    android:textColor="@color/x7_color_f9f9f9"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_float_ad_right"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/x7_account_manager_sell"
                    android:text="@string/x7_float_ad_check_more_details"
                    android:textColor="@color/base_white" />

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_float_ad_delete_right"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="-4dp"
            android:padding="4dp"
            android:src="@drawable/x7_icon_close_gray" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_float_ad_round_background_right"
        android:layout_width="26dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/rl_floating_view"
        android:layout_centerVertical="true"
        android:layout_marginStart="23dp"
        android:background="@drawable/x7_half_round_right_99000000_bg"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_floating_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_toEndOf="@+id/rl_root_float_ad_right">

        <LinearLayout
            android:id="@+id/ll_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/x7_floating_hint_left"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_floating_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/x7_manager_small_account"
                android:textColor="@color/x7_text_black3"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_close_floating_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:padding="5dp"
                android:text="x"
                android:textColor="@color/x7_text_green" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/normal_floating_with_tips_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_floating_view"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/iv_message_hint_left"
                android:src="@drawable/x7_float" />

            <!--1.群聊添加前的提示，比如代金券，礼包等，用的是图片-->
            <ImageView
                android:id="@+id/iv_message_hint_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_floating_view"
                android:layout_marginRight="-20dp"
                android:contentDescription="TODO"
                android:minWidth="20dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:scaleType="fitCenter"
                android:visibility="gone" />


            <ImageView
                android:id="@+id/iv_message_hint_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_floating_view"
                android:layout_marginStart="-20dp"
                android:layout_toEndOf="@+id/iv_floating_view"
                android:contentDescription="TODO"
                android:gravity="center"
                android:minWidth="30dp"
                android:minHeight="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:visibility="gone" />

            <!--2.群聊加入后-->

            <TextView
                android:id="@+id/tv_newMessage_hint_left"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignTop="@+id/iv_floating_view"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/iv_floating_view"
                android:background="@drawable/x7_un_read_msg"
                android:gravity="center"
                android:minWidth="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=""
                android:textColor="@color/x7_white"
                android:textSize="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_newMessage_hint_right"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_alignTop="@+id/iv_floating_view"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="3dp"
                android:layout_toEndOf="@+id/iv_floating_view"
                android:background="@drawable/x7_un_read_msg"
                android:gravity="center"
                android:minWidth="25dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text=""
                android:textColor="@color/x7_white"
                android:textSize="10dp"
                android:visibility="gone" />
        </RelativeLayout>

        <com.smwl.smsdk.myview.floating.BlessingBagTipsFloatingRl
            android:id="@+id/blessing_bag_floating_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

    </RelativeLayout>

</RelativeLayout>