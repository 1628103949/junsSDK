<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/x7_dialog_receive_blessing_bag_cl"
        android:layout_width="282dp"
        android:layout_height="490dp"
        android:background="@drawable/bg_solid_white_corner_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/x7_dialog_receive_blessing_bag_record_cl"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/x7_im_bg_solid_dc4949_top_left_right_corner_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/x7_dialog_receive_blessing_bag_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text=""
                android:textColor="#ffff00"
                android:textSize="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/x7_dialog_send_blessing_bag_tv"
                app:layout_constraintStart_toStartOf="@+id/guideline2" />

            <TextView
                android:id="@+id/x7_dialog_send_blessing_bag_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="@string/x7_im_receive_send_blessing_bag"
                android:textColor="@color/base_white"
                android:textSize="12dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/x7_dialog_receive_blessing_bag_desc_tv"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toEndOf="@+id/x7_dialog_receive_blessing_bag_desc_tv"
                app:layout_constraintTop_toTopOf="@+id/x7_dialog_receive_blessing_bag_desc_tv" />

            <ImageView
                android:id="@+id/x7_dialog_receive_blessing_bag_rule_iv"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="7dp"
                android:layout_marginLeft="7dp"
                android:padding="3dp"
                android:src="@drawable/x7_dialog_receive_blessing_bag_rule"
                app:layout_constraintBottom_toBottomOf="@+id/x7_dialog_send_blessing_bag_tv"
                app:layout_constraintStart_toEndOf="@+id/x7_dialog_send_blessing_bag_tv"
                app:layout_constraintTop_toTopOf="@+id/x7_dialog_send_blessing_bag_tv" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="141dp" />
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/x7_dialog_receive_blessing_bag_record_cl">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="10dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/x7_im_red_triangle" />

            <TextView
                android:id="@+id/x7_dialog_blessing_bag_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="@string/x7_im_blessing_bag_content"
                android:textColor="@color/base_black_3"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/x7_dialog_receive_blessing_bag_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:text="满6减5代金券 * 1"
                android:textColor="@color/base_black_3"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/x7_dialog_receive_blessing_bag_review_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:includeFontPadding="false"
                android:text="(可在个人中心查看)"
                android:textColor="#8f8e8e"
                android:textSize="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="25dp"
                android:includeFontPadding="false"
                android:text="@string/x7_im_quick_reply"
                android:textColor="@color/x7base_gray_33"
                android:textSize="10dp" />

            <com.netease.nim.uikit.x7.myview.FlowLayout
                android:id="@+id/x7_dialog_receive_blessing_bag_thanks_fl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="27dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="25dp"
                android:includeFontPadding="false"
                android:text="@string/x7_im_receive_record"
                android:textColor="@color/x7base_gray_33"
                android:textSize="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <include
                android:id="@+id/best_luck_king_cl"
                layout="@layout/x7_im_blessing_bag_receive_record_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="37dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/x7_dialog_receive_blessing_bag_recording_rc"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_gravity="start"
                android:layout_marginStart="37dp"
                android:layout_marginEnd="10dp" />
        </LinearLayout>


    </android.support.constraint.ConstraintLayout>

    <com.netease.nim.uikit.common.ui.imageview.CircleImageView
        android:id="@+id/x7_dialog_receive_blessing_bag_avatar_iv"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nim_avatar_group"
        app:layout_constraintBottom_toTopOf="@+id/x7_dialog_receive_blessing_bag_cl"
        app:layout_constraintEnd_toEndOf="@+id/x7_dialog_receive_blessing_bag_cl"
        app:layout_constraintStart_toStartOf="@+id/x7_dialog_receive_blessing_bag_cl"
        app:layout_constraintTop_toTopOf="@+id/x7_dialog_receive_blessing_bag_cl" />

    <TextView
        android:id="@+id/x7_dialog_receive_blessing_bag_know_tv"
        android:layout_width="133dp"
        android:layout_height="44dp"
        android:background="@drawable/x7_im_bg_solid_dc4949_corner_50"
        android:gravity="center"
        android:text="@string/iknow"
        android:textColor="@color/base_white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/x7_dialog_receive_blessing_bag_cl"
        app:layout_constraintEnd_toEndOf="@+id/x7_dialog_receive_blessing_bag_cl"
        app:layout_constraintStart_toStartOf="@+id/x7_dialog_receive_blessing_bag_cl"
        app:layout_constraintTop_toBottomOf="@+id/x7_dialog_receive_blessing_bag_cl" />

</android.support.constraint.ConstraintLayout>