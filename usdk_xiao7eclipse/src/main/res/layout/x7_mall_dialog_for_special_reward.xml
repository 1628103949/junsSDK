<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="274dp"
    android:layout_height="198dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/x7_mall_turntable_special_reward_dialog_bg">
    <android.support.constraint.Guideline
        android:id="@+id/first_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03"/>

    <android.support.constraint.Guideline
        android:id="@+id/second_guide_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.93" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/turntable_special_reward_icon_cl"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_marginTop="52dp"
        app:layout_constraintStart_toStartOf="@+id/first_guide_line"
        app:layout_constraintEnd_toEndOf="@+id/second_guide_line"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/x7_mall_turntable_special_reward_dialog_icon_bg">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/bg_mall_gift"
            app:layout_constraintTop_toTopOf="@+id/turntable_special_reward_icon_border_iv"
            app:layout_constraintStart_toStartOf="@+id/turntable_special_reward_icon_border_iv"
            app:layout_constraintEnd_toEndOf="@+id/turntable_special_reward_icon_border_iv"
            app:layout_constraintBottom_toBottomOf="@+id/turntable_special_reward_icon_border_iv"/>

        <ImageView
            android:id="@+id/turntable_special_reward_icon_content_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="@+id/turntable_special_reward_icon_border_iv"
            app:layout_constraintStart_toStartOf="@+id/turntable_special_reward_icon_border_iv"
            app:layout_constraintEnd_toEndOf="@+id/turntable_special_reward_icon_border_iv"
            app:layout_constraintBottom_toBottomOf="@+id/turntable_special_reward_icon_border_iv"/>

        <com.smwl.smsdk.myview.StrokeTextView
            android:id="@+id/turntable_special_reward_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8dp"
            android:textColor="@color/x7_white"
            android:layout_marginBottom="1dp"
            android:layout_marginEnd="3dp"
            app:layout_constraintEnd_toEndOf="@id/turntable_special_reward_icon_content_iv"
            app:layout_constraintBottom_toBottomOf="@+id/turntable_special_reward_icon_content_iv" />

        <ImageView
            android:id="@+id/turntable_special_reward_icon_border_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/mall_border"/>

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/turntable_special_reward_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8dp"
        android:ellipsize="end"
        android:ems="4"
        android:gravity="center"
        android:textColor="@color/x7_black_644f31"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/first_guide_line"
        app:layout_constraintEnd_toEndOf="@+id/second_guide_line"/>

    <com.smwl.smsdk.myview.StrokeTextView
        android:id="@+id/turntable_special_reward_know_tv"
        android:layout_width="72dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:background="@drawable/x7_mall_turntable_dialog_button_bg"
        android:text="@string/x7_mall_turntable_record_dialog_known"
        android:textColor="@color/base_white"
        android:textSize="11dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/first_guide_line"
        app:layout_constraintEnd_toEndOf="@+id/second_guide_line"
        app:stroke_width="1dp"
        app:stroke_color="@color/x7_orange_9d7227"
        android:textStyle="bold"
        />

</android.support.constraint.ConstraintLayout>