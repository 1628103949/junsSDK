<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.smwl.smsdk.myview.expand.DisplayTextView
        android:id="@+id/openAll_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lineSpacingExtra="5dip"
        android:textColor="@color/x7_white"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/openAll_sousuoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_below="@+id/openAll_content_tv"
        android:text="@string/x7_sdk_GameTopicDetailAct_packUp"
        android:textColor="@color/x7_color_0c7cb0"
        android:textSize="11sp" />

</RelativeLayout>