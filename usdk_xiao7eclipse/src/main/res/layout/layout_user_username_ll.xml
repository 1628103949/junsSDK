<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--手机号码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="15dip">

        <EditText
            android:id="@+id/userlogin_et_username"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@+id/userlogin_iv_username_clear"
            android:background="@drawable/feedback_edittext_kuang"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ@.-+"
            android:hint="请输入用户名或手机号"
            android:inputType="textEmailAddress"
            android:textColor="@color/black_6"
            android:textColorHint="@color/color_split_line_cccccc"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/userlogin_iv_username_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:src="@drawable/et_delete"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="33dp"
        android:background="@color/line_e5e5e5" />

    <!--验证码-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="33dp"
        android:layout_marginTop="10dip">

        <EditText
            android:id="@+id/userlogin_et_userpassword"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_toLeftOf="@+id/userlogin_iv_password_clear"
            android:background="@drawable/feedback_edittext_kuang"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/black_6"
            android:textColorHint="@color/black_9"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/userlogin_iv_password_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:paddingBottom="10dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:paddingTop="10dip"
            android:src="@drawable/et_delete"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="33dp"
        android:background="@color/line_e5e5e5" />
</LinearLayout>
