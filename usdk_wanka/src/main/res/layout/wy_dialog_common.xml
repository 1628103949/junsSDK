<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wy_shape_dialog"
    android:orientation="vertical">


    <TextView
        android:id="@id/wy_common_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center_horizontal"
        android:paddingTop="12dp"
        android:text="@string/wy_warm_prompt"
        android:textColor="@color/wy_black_text_color"
        android:textSize="16sp" />


    <TextView
        android:id="@id/wy_common_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp"
        android:lineSpacingExtra="3dp"
        android:scrollbars="none"
        android:textColor="@color/wy_font_common_1"
        android:textSize="15sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/wy_common_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:orientation="horizontal">

        <TextView
            android:id="@id/wy_common_dialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/wy_bg_dialog_white"
            android:gravity="center"
            android:text="@string/wy_game_cancel"
            android:textColor="@color/wy_font_common_2"
            android:textSize="15sp" />

        <View
            android:id="@id/wy_common_dialog_view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/wy_common_background" />

        <TextView
            android:id="@id/wy_common_dialog_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/wy_bg_dialog_white"
            android:gravity="center"
            android:text="@string/wy_game_confirm"
            android:textColor="@color/wy_font_blue"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>