<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/wy_fragment_fist_login_ly"
    android:layout_width="@dimen/wy_iv_wk_game_width"
    android:layout_height="@dimen/wy_iv_wk_game_height"
    android:layout_marginTop="10dp"
    android:layout_gravity="center">



    <LinearLayout
        android:id="@id/wy_please_select_the_login_method_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center">

        <ImageView
            android:id="@id/wk_game_iv"
            android:layout_width="@dimen/wy_iv_wk_game_width"
            android:layout_height="@dimen/wy_iv_wk_game_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible"/>

        <TextView
            android:id="@id/wy_title_tv"
            android:layout_width="@dimen/wy_iv_wk_game_width"
            android:layout_height="@dimen/wy_iv_wk_game_height"
            android:gravity="center"
            android:textColor="#444444"
            android:textSize="25sp"
            android:maxLines="1"
            android:visibility="gone"/>


    </LinearLayout>


</RelativeLayout>