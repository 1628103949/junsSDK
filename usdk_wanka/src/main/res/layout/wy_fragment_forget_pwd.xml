<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@id/wy_root_ll"
        android:layout_width="@dimen/wy_fragment_common_width"
        android:layout_height="@dimen/wy_fragment_common_nologo_height"
        android:background="@drawable/wy_shape_corner"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <include layout="@layout/wy_include_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@id/wy_customer_service_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="visible">


                    <ImageView
                        android:id="@id/wy_customer_icon_iv"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:clickable="true"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/wy_iv_service" />

                    <Button
                        android:id="@id/wy_contact_customer"
                        style="@style/wy_btn_common"
                        android:layout_width="80dp"
                        android:layout_height="25dp"
                        android:background="@drawable/wy_selector_btn_deep_green"
                        android:text="@string/wy_contact_customer" />

                    <LinearLayout
                        android:id="@id/wy_please_call_customer_q_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@id/wy_please_call_customer_q_iv"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/wy_iv_service_q" />

                        <TextView
                            android:id="@id/wy_please_call_customer_q_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/wy_contact_customer_q"
                            android:textSize="13sp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@id/wy_please_call_customer_phone_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="10dp"

                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@id/wy_please_call_customer_phone_iv"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/wy_iv_service_phone" />

                        <TextView
                            android:id="@id/wy_please_call_customer_phone_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/wy_contact_customer_service"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@id/wy_please_call_customer_service_iv"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/wy_iv_service_time" />

                        <TextView
                            android:id="@id/wy_please_call_customer_service_tv"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/wy_contact_customer_time"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>