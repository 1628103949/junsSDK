<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@id/wy_float_menu_left_tv"
        style="@style/wy_float_item_style"
        android:layout_width="wrap_content"
        android:layout_marginRight="5.0dip"
        android:background="@drawable/wy_float_menu_bg"
        android:textColor="@color/wy_rad_text_color"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@id/wy_float_menu_main_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="45.0dip"
        android:layout_marginBottom="200.0dip"
        >

        <ImageView
            android:id="@id/wy_floating_icon_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:src="@drawable/wy_iv_float_whale">

        </ImageView>

        <TextView
            android:id="@id/wy_float_menu_dot_tv"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="35dp"
            android:background="@drawable/wy_float_dot_icon"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageView
        android:id="@id/wy_read_left_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/wy_float_menu_main_ll"
        android:layout_toEndOf="@+id/wy_float_menu_main_ll"
        android:visibility="invisible"/>

    <ImageView
        android:id="@id/wy_read_right_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/wy_float_menu_main_ll"
        android:layout_toEndOf="@+id/wy_float_menu_main_ll"
        android:visibility="invisible"/>

    <TextView
        android:id="@id/wy_float_menu_right_tv"
        style="@style/wy_float_item_style"
        android:layout_width="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:background="@drawable/wy_float_menu_bg"
        android:textColor="@color/wy_rad_text_color"
        android:visibility="gone" />

</RelativeLayout>