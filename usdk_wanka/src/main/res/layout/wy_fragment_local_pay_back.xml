<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/wy_pay_ll"
    android:layout_width="@dimen/wy_dialog_common_width"
    android:layout_height="@dimen/wy_dialog_common_height"
    android:layout_gravity="center"
    android:background="@drawable/wy_shape_corner"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@id/wy_close_pay_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="5dp"
                android:padding="3dp"
                android:src="@drawable/wy_iv_close_ball" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--4中支付方式-->
            <LinearLayout
                android:id="@id/wy_pay_type_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--微信-->
                    <LinearLayout
                        android:id="@id/wy_wechat_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@id/wy_wx_pay_im"
                            android:layout_width="@dimen/wy_iv_pay_logo_width"
                            android:layout_height="@dimen/wy_iv_pay_logo_height"
                            android:layout_gravity="center" />
                        <TextView
                            android:id="@id/wy_wx_pay_tx"
                            style="@style/wy_tv_pay_method"
                            android:layout_gravity="center" />
                    </LinearLayout>
                    <!--支付宝-->
                    <LinearLayout
                        android:id="@id/wy_alipay_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@id/wy_ali_pay_im"
                            android:layout_width="@dimen/wy_iv_pay_logo_width"
                            android:layout_height="@dimen/wy_iv_pay_logo_height"
                            android:layout_gravity="center" />
                        <TextView
                            android:id="@id/wy_ali_pay_tx"
                            style="@style/wy_tv_pay_method"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <!--万娱平台币-->
                    <LinearLayout
                        android:id="@id/wy_platfrom_currency_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@id/wy_wy_platfrom_currency_pay_im"
                            android:layout_width="@dimen/wy_iv_pay_logo_width"
                            android:layout_height="@dimen/wy_iv_pay_logo_height"
                            android:layout_gravity="center" />
                        <TextView
                            android:id="@id/wy_wy_platfrom_currency_tx"
                            style="@style/wy_tv_pay_method"
                            android:layout_gravity="center" />
                    </LinearLayout>

                    <!--其他支付方式-->
                    <LinearLayout
                        android:id="@id/wy_other_pay_ll"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@id/wy_other_pay_im"
                            android:layout_width="@dimen/wy_iv_pay_logo_width"
                            android:layout_height="@dimen/wy_iv_pay_logo_height"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@id/wy_other_pay_tx"
                            style="@style/wy_tv_pay_method"
                            android:layout_gravity="center" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>