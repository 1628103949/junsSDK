<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="296dp"
        android:layout_height="156dp"
        android:background="@drawable/com_tencent_ysdk_icon_close_pop_view_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:text="确定要关闭悬浮球"
                android:textColor="#d9000000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="此次不再显示悬浮球，重启可恢复"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="#0a000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/com_tencent_ysdk_icon_confirm_close"
                    android:layout_width="147.5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="坚持关闭"
                    android:textColor="#a6000000"
                    android:textSize="16sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#0a000000" />

                <TextView
                    android:id="@+id/com_tencent_ysdk_icon_cancel_close"
                    android:layout_width="147.5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="继续使用"
                    android:textColor="#ff0080ff"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/com_tencent_ysdk_ll_close_floating_ball_not_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/com_tencent_ysdk_close_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/com_tencent_ysdk_icon_close_check_box_normal" />

        <TextView
            android:id="@+id/com_tencent_ysdk_close_icon_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="以后不再询问"
            android:textColor="#a6ffffff"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>