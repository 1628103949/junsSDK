<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/com_lenovo_game_white"
    android:orientation="vertical"
    >
    <ImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/com_lenovo_game_web_error" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/com_lenovo_game_web_no_find"
        android:textColor="@color/com_lenovo_game_black"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/com_lenovo_game_web_no_find_des"
        android:textColor="@color/com_lenovo_game_gray"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        />
    <TextView
        android:id="@+id/com_lenovo_game_error_retry"
        android:layout_width="81dp"
        android:layout_height="30dp"
        android:text="@string/com_lenovo_game_web_error_retry"
        android:textColor="@color/com_lenovo_game_gray"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textSize="14sp"
        android:background="@drawable/com_lenovo_corner_gray_22_bg"
        />
</LinearLayout>