<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="@null"
    android:orientation="vertical" >

    <RelativeLayout
        android:background="@drawable/com_lenovo_lsf_roundconner_white_upper"
        android:id="@+id/lenovodialog_titlelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/lenovodialog_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="24dp"
            android:paddingTop="24dp"
            android:textColor="#4D4D4D"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lenovodialog_tiplayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:background="@color/com_lenovo_lsf_appcolor"
        android:paddingBottom="32dp"
        android:minHeight="40dp" >

        <TextView
            android:id="@+id/lenovodialog_tip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#4D4D4D"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lenovodialog_extralayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="@dimen/com_lenovo_lsf_dialog_extraview_bottom"
        android:background="@color/com_lenovo_lsf_appcolor"
        android:orientation="vertical"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_marginBottom="0dp"
        android:background="@drawable/com_lenovo_lsf_roundconner_white_lowwer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/lenovodialog_cancel"
            android:layout_width="wrap_content"
            android:minWidth="64dp"
            android:includeFontPadding="false"
            android:layout_height="36dp"
            android:layout_toLeftOf="@+id/lenovodialog_ok_cancel_mid"
            android:background="@drawable/com_lenovo_lsf_textview_ripple_white"
            android:clickable="true"
            android:gravity="center"
            android:focusable="true"
            android:text="@string/com_lenovo_lsf_lenovouser_btn_cancel"
            android:textColor="@drawable/com_lenovo_lsf_dialog_button_text_field_selector"
            android:layout_marginBottom="8dp"
            android:textSize="14sp" />

        <View
            android:id="@+id/lenovodialog_ok_cancel_mid"
            android:layout_width="8dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/lenovodialog_ok"
            android:visibility="invisible"
            android:background="#d1d1d1" />

        <TextView
            android:id="@+id/lenovodialog_ok"
            android:layout_width="wrap_content"
            android:minWidth="64dp"
            android:includeFontPadding="false"
            android:layout_height="36dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/com_lenovo_lsf_textview_ripple_white"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/com_lenovo_lsf_change_string_confirm"
            android:textColor="@drawable/com_lenovo_lsf_dialog_button_text_field_selector"
            android:layout_marginBottom="8dp"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>