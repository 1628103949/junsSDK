<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/com_lenovo_lsf_appcolor"
    android:orientation="vertical"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/com_lenovo_lsf_appcolor"
            android:orientation="vertical">

            <TextView

                android:id="@+id/tv_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/com_lenovo_lsf_input_imgcode"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/tv_dialog_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/com_lenovo_lsf_string_voice_code_subtitle"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_gravity="center"
                />

            <LinearLayout

                android:id="@+id/ll_img_type"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="10dp">

                <EditText
                    android:id="@+id/et_image_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    android:background="@drawable/com_lenovo_lsf_edittext_background_selector"
                    android:gravity="center_vertical"
                    android:maxLength="5"
                    android:privateImeOptions="actionNone"
                    android:textColor="#4d4d4d"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_imag_virfycode"
                    android:layout_width="106dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:contentDescription="@null" />


            </LinearLayout>

            <TextView
                android:id="@+id/tv_dialog_error"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textAppearance="@style/com_lenovo_lsf_text.error" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <TextView
                        android:id="@+id/tv_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/com_lenovo_lsf_textview_ripple_white"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="@string/com_lenovo_lsf_login_entrance_onekey_logining_dialog_cancle"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_confirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/com_lenovo_lsf_textview_ripple_white"
                        android:paddingBottom="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="10dp"
                        android:text="@string/com_lenovo_lsf_change_string_confirm"
                        android:textColor="@color/com_lenovo_lsf_next_button"
                        android:textSize="14sp" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>