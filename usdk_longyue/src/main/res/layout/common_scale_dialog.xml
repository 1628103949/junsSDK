<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_dialog_bg">

    <ImageView
        android:id="@+id/iv_dialog_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_back" />

    <ImageView
        android:id="@+id/iv_dialog_close"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:layout_margin="15dp"
        android:src="@drawable/ic_close_black"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_dialog_help"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:layout_margin="15dp"
        android:src="@drawable/ic_help_black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_dialog_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:layout_margin="15dp"
        android:text="Ver.1.1.0"
        android:textColor="#ff787878"
        android:textSize="10.0sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_top_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:layout_margin="15dp"
        android:text="遇到问题"
        android:textColor="#ff787878"
        android:textSize="13.0sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/common_title_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:src="@drawable/ic_logo" />

        <TextView
            android:id="@+id/common_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="使用手机升级用户账号"
            android:textColor="#ff000000"
            android:textSize="15.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_dialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/common_title_ly"
        android:layout_marginTop="10dp"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/common_scale_btn_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_dialog_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:visibility="visible">

        <Button
            android:id="@+id/common_submit"
            style="@style/CommonSubmitBtn"
            android:text="确认激活" />

        <TextView
            android:id="@+id/tv_bind_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#ff787878"
            android:textSize="12.0sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/common_bottom_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>