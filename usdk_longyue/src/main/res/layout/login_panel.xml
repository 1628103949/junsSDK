<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <include
        android:id="@+id/item_username"
        layout="@layout/layout_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <include
        android:id="@+id/item_password"
        layout="@layout/layout_edit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/item_username"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_diy_btn"
        android:text="登录"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:textColor="#ff787878"
            android:textSize="13.0sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/login_index_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="遇到问题"
            android:textColor="#ff787878"
            android:textSize="13.0sp"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>