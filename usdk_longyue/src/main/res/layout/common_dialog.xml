<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_dialog_logo"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/img_logo" />

        <LinearLayout
            android:id="@+id/view_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_bottom_corner"
            android:orientation="vertical" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_dialog_back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="15dp"
        android:src="@drawable/ic_back_white" />

    <ImageView
        android:id="@+id/iv_dialog_help"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end"
        android:layout_margin="15dp"
        android:src="@drawable/ic_help_white" />
</FrameLayout>