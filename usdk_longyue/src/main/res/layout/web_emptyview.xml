<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/web_loading_now"
        android:textSize="18sp"
        android:layout_centerInParent="true"
        android:id="@+id/tv_empty_hide"
        android:textColor="@color/black"
        />

    <ImageView
        android:contentDescription="加载错误"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/web_loading_error"
        android:layout_above="@+id/tv_empty_hide"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:id="@+id/iv_empty_pic"
        android:visibility="gone"
        />

    <ProgressBar
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:id="@+id/pb_empty_load"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_empty_hide"
        android:layout_marginBottom="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:text="@string/reload"
        android:id="@+id/tv_empty_reload"
        android:layout_below="@+id/tv_empty_hide"
        android:layout_marginTop="6dp"
        android:background="@drawable/blue_white_90"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textColor="@color/blue"
        android:visibility="gone"
        />

</RelativeLayout>