<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_lantern_toast_content_dialog_root"
    android:layout_width="325dp"
    android:layout_height="270dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center">
        <TextView
            android:id="@+id/lantern_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:text=""
            android:ellipsize="end"
            android:textColor="#333333"
            android:textSize="20sp"/>
    </LinearLayout>


    <TextView
        android:id="@+id/lantern_news_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"
        android:maxLines="7"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:scrollbars="none"
        android:text=""
        android:textColor="#333333"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/lantern_news_content_confirm_btn"
            android:layout_width="240dp"
            android:layout_height="35dp"
            android:background="@drawable/lantern_toast_content_btn_selector"
            android:text="知道了"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </LinearLayout>



</LinearLayout>