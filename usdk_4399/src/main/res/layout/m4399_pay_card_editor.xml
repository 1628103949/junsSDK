<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/m4399_pay_spacing_v"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/m4399.Pay.Label.Card"
            android:text="@string/m4399_pay_card_serial" />

        <EditText
            android:id="@+id/m4399_pay_card_serial"
            style="@style/m4399.Pay.Card.Editor"
            android:hint="@string/m4399_pay_card_input_serial"
            android:imeOptions="actionNext"
            tools:ignore="Autofill" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/m4399_pay_spacing_v_half"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/m4399.Pay.Label.Card"
            android:text="@string/m4399_pay_card_code" />

        <EditText
            android:id="@+id/m4399_pay_card_code"
            style="@style/m4399.Pay.Card.Editor"
            android:hint="@string/m4399_pay_card_input_code"
            android:imeOptions="actionDone"
            tools:ignore="Autofill" />
    </LinearLayout>
</LinearLayout>