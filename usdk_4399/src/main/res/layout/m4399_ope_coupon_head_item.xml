<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/m4399_ope_coupon_state_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/m4399_ope_ripple_rectangle_white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="18dp"
        android:paddingTop="15dp"
        android:paddingRight="18dp"
        android:paddingBottom="15dp"
        android:text="@string/m4399_ope_coupon_un_use_now"
        android:textColor="#333333"
        android:textSize="15sp" />

    <ToggleButton
        android:id="@+id/m4399_ope_coupon_state_radio"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/m4399_ope_coupon_state_radio"
        android:clickable="false"
        android:textOff=""
        android:textOn="" />
</LinearLayout>
