<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/m4399.Pay.Page">

    <include layout="@layout/m4399_ope_support_nav_bar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/m4399_activity_spacing_h"
        android:layout_marginRight="@dimen/m4399_activity_spacing_h"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@id/m4399_progress_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            tools:ignore="ContentDescription"
            tools:src="@drawable/m4399_ope_avatar_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:lineSpacingMultiplier="1"
            android:text="@string/m4399_pay_inquiring_order_state"
            android:textColor="@color/m4399_ope_color_primary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/m4399_pay_inquiry_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="13sp"
            tools:text="正在查询订单状态，请耐心等候（3s）" />
    </LinearLayout>
</FrameLayout>