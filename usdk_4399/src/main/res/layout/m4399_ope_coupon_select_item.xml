<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/m4399_item_view_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/m4399_ope_ripple_rectangle_white"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m4399_ope_coupon_quota"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FF2C2C"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:text="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/m4399_ope_yuan"
                    android:textColor="#FF2C2C"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/m4399_ope_coupon_min_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aaaaaa"
                android:textSize="14sp"
                tools:text="满115元可用" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:background="@color/m4399_color_line" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/m4399_ope_limit_games"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#333333"
                android:textSize="15sp"
                tools:text="去吧皮卡丘" />

            <TextView
                android:id="@+id/m4399_ope_coupon_expired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="#666666"
                android:textSize="@dimen/m4399_font_12"
                tools:text="使用期限：20121-12-04" />

            <TextView
                android:id="@+id/m4399_ope_coupon_how_to_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#666666"
                android:textSize="@dimen/m4399_font_12"
                tools:text="使用条件：4399帐号登录的游戏可用" />

        </LinearLayout>

        <ToggleButton
            android:id="@+id/m4399_ope_coupon_state_radio"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/m4399_ope_coupon_state_radio"
            android:clickable="false"
            android:textOff=""
            android:textOn="" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/m4399_ope_coupon_invalid_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80ffffff">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/m4399_pay_status_failure_ic" />

        <TextView
            android:id="@+id/m4399_ope_coupon_invalid_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:textColor="#666666"
            android:textSize="@dimen/m4399_font_12"
            tools:text="充值满100元可用" />

        <cn.m4399.operate.component.DashLineView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:tag="h,#bbbbbb, 6, 4" />
    </FrameLayout>

</LinearLayout>