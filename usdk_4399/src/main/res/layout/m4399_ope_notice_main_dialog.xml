<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/m4399_ope_dialog_width_big"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/m4399_ope_notice_dialog_shape_bg">

        <cn.m4399.operate.component.AlignTextView
            android:id="@+id/m4399_ope_id_atv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="26dp" />

        <ImageView
            android:id="@+id/m4399_ope_id_base_dialog_iv_close"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/m4399_ope_support_nav_icon_bg"
            android:padding="19dp"
            android:src="@drawable/m4399_ope_ic_close" />

        <cn.m4399.operate.account.notice.MaxHeightScrollView
            android:id="@+id/m4399_ope_id_scroll_tip_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/m4399_ope_id_atv_title"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="26dp"
            android:layout_marginBottom="28dp"
            android:fadeScrollbars="false"
            android:fadingEdge="none"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:scrollbarSize="4dp"
            android:scrollbarThumbVertical="@drawable/m4399_ope_notice_layer_scrollbar_vertical_thumb"
            android:scrollbarTrackVertical="@drawable/m4399_ope_notice_layer_scrollbar_vertical_track">

            <cn.m4399.operate.component.AlignTextView
                android:id="@+id/m4399_ope_id_atv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp" />

        </cn.m4399.operate.account.notice.MaxHeightScrollView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <CheckBox
            android:id="@+id/m4399_ope_id_cb_select_not_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:button="@drawable/m4399_ope_checkbox_selector_not_tip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/m4399_ope_account_notice_dialog_not_tip"
            android:textColor="@color/m4399_ope_announcement_dialog_not_tip"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>




