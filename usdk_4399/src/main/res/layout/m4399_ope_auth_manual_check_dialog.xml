<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/m4399_ope_aga_guest_auth_w"
    android:layout_height="wrap_content"
    tools:ignore="RtlHardcoded">

    <ImageView
        android:id="@+id/m4399_ope_id_iv_close"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/m4399_ope_support_nav_icon_bg"
        android:padding="20dp"
        android:src="@drawable/m4399_ope_ic_close" />

    <LinearLayout
        android:id="@+id/m4399_ope_id_ll_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/m4399_ope_ripple_borderless_grey"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="center"
            android:src="@drawable/m4399_ope_anti_change_account" />

        <TextView
            android:id="@+id/m4399_ope_id_tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:textColor="@color/m4399_ope_color_999999"
            android:textSize="14sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/m4399_ope_id_ll_account"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp">

            <cn.m4399.operate.component.AlignTextView
                android:id="@+id/m4399_ope_id_atv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:lineSpacingExtra="5dp"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/m4399_ope_id_ll_warn_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/m4399_ope_id_atv_title"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/m4399_ope_id_iv_warn_tip"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/m4399_ope_aga_visitor_auth_tips" />

                <cn.m4399.operate.component.AlignTextView
                    android:id="@+id/m4399_ope_id_atv_warn_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <cn.m4399.operate.component.AlignTextView
                android:id="@+id/m4399_ope_id_atv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m4399_ope_id_ll_warn_tip"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="20dp" />

            <TextView
                android:id="@+id/m4399_ope_id_tv_review"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_below="@id/m4399_ope_id_atv_tip"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/m4399_ope_aga_selector_btn_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/m4399_ope_id_ll_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m4399_ope_id_tv_review"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <cn.m4399.operate.component.AlignTextView
                    android:id="@+id/m4399_ope_id_atv_foreign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/m4399_ope_ripple_borderless_grey" />

                <View
                    android:id="@+id/m4399_ope_id_view_line"
                    android:layout_width="1dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#54ba3d" />

                <cn.m4399.operate.component.AlignTextView
                    android:id="@+id/m4399_ope_id_atv_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/m4399_ope_ripple_borderless_grey" />

            </LinearLayout>

            <cn.m4399.operate.component.AlignTextView
                android:id="@+id/m4399_ope_id_atv_destroy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/m4399_ope_id_ll_link"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>


