<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/m4399_pay_coupon_entry"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        style="@style/m4399.Pay.Label.Card"
        android:text="@string/m4399_pay_coupon_card" />

    <TextView
        android:id="@+id/m4399_pay_coupon_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="10dp"
        android:paddingTop="@dimen/m4399_pay_spacing_v"
        android:paddingBottom="@dimen/m4399_pay_spacing_v"
        android:textColor="@color/m4399_rec_color_blue_33bdfc"
        android:textSize="14sp"
        tools:text="10优惠券" />

</LinearLayout>

