<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/tn_common_cl_content_ly"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/enjoy_fw_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tn_common_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@android:string/dialog_alert_title"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tn_common_cl_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tn_common_title_tv"
            android:layout_marginTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/enjoy_fw_tiny_game"
            android:textColor="#505050"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tn_common_cl_tv"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tn_common_cl_cancel_btn"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:background="@drawable/enjoy_fw_btn_bg_tran"
                android:gravity="center"
                android:text="@string/enjoy_fw_common_cancel"
                android:visibility="gone"
                android:textColor="#d2d2d2"
                android:textSize="18dp" />

            <Button
                android:id="@+id/tn_common_cl_confirm_btn"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/enjoy_fw_btn_bg_tran"
                android:gravity="center"
                android:text="@string/enjoy_fw_common_confirm"
                android:textColor="#FB4F4F"
                android:textSize="18dp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>