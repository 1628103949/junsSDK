<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="353dp"
        android:layout_height="275dp"
        android:background="@drawable/enjoy_dialog_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="82dp"
                android:layout_height="20dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="65dp"
                android:background="@drawable/enjoy_realname_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="82dp"
                android:layout_marginTop="10dp"
                android:text="@string/enjoy_certification_tips"
                android:textColor="#747474"
                android:textSize="12sp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:id="@+id/name_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00ffffff">

                    <ImageView
                        android:id="@+id/name_img"
                        android:layout_width="57dp"
                        android:layout_height="19dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="55dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/enjoy_name_txt" />

                    <com.enjoy.sdk.framework.view.EditText.ClearEditText
                        android:id="@+id/name_et"
                        android:layout_width="188dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="57dp"
                        android:layout_toRightOf="@id/name_img"
                        android:background="@drawable/enjoy_edit_bg"
                        android:hint="@string/enjoy_name_tips"
                        android:imeOptions="flagNoEnterAction"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="#333333"
                        android:textColorHint="#747474"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/id_card_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_rl"
                    android:layout_marginTop="10dp"
                    android:background="#00ffffff">

                    <ImageView
                        android:id="@+id/id_card_img"
                        android:layout_width="57dp"
                        android:layout_height="19dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="55dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/enjoy_id_txt" />

                    <com.enjoy.sdk.framework.view.EditText.ClearEditText
                        android:id="@+id/id_card_et"
                        android:layout_width="188dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="57dp"
                        android:layout_toRightOf="@id/id_card_img"
                        android:background="@drawable/enjoy_edit_bg"
                        android:hint="@string/enjoy_id_card_tips"
                        android:imeOptions="flagNoEnterAction"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:textColor="#333333"
                        android:textColorHint="#747474"
                        android:textCursorDrawable="@null"
                        android:textSize="12sp" />
                </RelativeLayout>

            </RelativeLayout>

            <ImageButton
                android:id="@+id/commit_btn"
                android:layout_width="110dp"
                android:layout_height="33dp"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/enjoy_verify_txt"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/close_rl"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="57dp"
            android:background="@drawable/enjoy_fw_btn_bg_tran">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/enjoy_close" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>