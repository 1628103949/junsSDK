<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="50.0dip"
        android:layout_gravity="center"
        android:background="@drawable/xh_point_bg_l"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/iv_hide"
            style="@style/Sj_MyButton"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:background="@drawable/xh_point_hide_style"
            android:visibility="gone" />

        <!--
             <Button
            android:id="@+id/iv_msg"
            style="@style/Sj_MyButton"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_marginTop="1.0dip"
            android:background="@drawable/point_jin_style" />
        -->

        <Button
            android:id="@+id/iv_kefu"
            style="@style/Sj_MyButton"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_marginTop="1.0dip"
            android:background="@drawable/xh_point_ser_style" />

        <RelativeLayout
            android:layout_width="45.0dip"
            android:layout_height="45.0dip" >

            <Button
                android:id="@+id/iv_account"
                style="@style/Sj_MyButton"
                android:layout_width="45.0dip"
                android:layout_height="45.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@drawable/xh_point_ac_style" />

            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="7dip"
                android:layout_height="7dip"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/xh_point_background_enable"
                android:gravity="center"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>

        <Button
            android:id="@+id/iv_gift"
            style="@style/Sj_MyButton"
            android:layout_width="45.0dip"
            android:layout_height="45.0dip"
            android:layout_marginTop="1.0dip"
            android:background="@drawable/xh_point_gift_style"
            android:visibility="gone"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/xh_logo" />

        <View
            android:id="@+id/round_msg"
            android:visibility="gone"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_margin="2dp"
            android:background="@drawable/xh_draw_msg_view"/>
    </RelativeLayout>


</LinearLayout>