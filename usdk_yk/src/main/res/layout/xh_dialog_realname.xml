<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xh_sdk_shape_main"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/xh_realname_title_bg_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/action_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/xh_icon_back_black"
            android:visibility="gone"></ImageView>


        <ImageView
            android:id="@+id/iv_head_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/xh_logo"
            android:visibility="gone" />


        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="实名认证"
            android:textColor="#ffffff" />


        <ImageView
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:id="@+id/xh_close"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/xh_close" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/xh_line_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xh_realname_bg_color"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_and_Right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="@dimen/margin_left_and_Right"
            android:background="@drawable/xh_input_edittext_bg">

            <com.xh.sdk.widget.EditTextWithDel
                android:id="@+id/edit_xh_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:dropDownHeight="30dp"
                android:hint="请输入您的真实姓名"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:paddingRight="50dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textColor="@color/xh_ed_color"
                android:textCursorDrawable="@drawable/xh_dl_cursor_red"
                android:textSize="13dp" />

            <LinearLayout
                android:id="@+id/root"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img_user_logo"
                    style="@style/xh_StyleInputIcon"
                    android:src="@drawable/xh_name" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />

            </LinearLayout>

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_and_Right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/margin_left_and_Right"
            android:background="@drawable/xh_input_edittext_bg">

            <com.xh.sdk.widget.EditTextWithDel
                android:id="@+id/edit_xh_id_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:dropDownHeight="30dp"
                android:hint="请输入身份证号码"
                android:paddingLeft="35dp"
                android:paddingTop="10dp"
                android:paddingRight="50dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:textColor="@color/xh_ed_color"
                android:textCursorDrawable="@drawable/xh_dl_cursor_red"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img_pwd_logo"
                    style="@style/xh_StyleInputIcon"
                    android:src="@drawable/xh_id_card" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />


            </LinearLayout>

        </FrameLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="请输入正确的身份信息，一旦认证不可更改" />


        <Button
            android:id="@+id/bt_verification"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_left_and_Right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/margin_left_and_Right"
            android:layout_marginBottom="20dp"
            android:background="@drawable/xh_sdk_realname_button_bg"
            android:text="确认" />

    </LinearLayout>


</LinearLayout>