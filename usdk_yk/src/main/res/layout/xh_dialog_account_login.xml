<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xh_sdk_shape_main"
    android:orientation="vertical">

    <include layout="@layout/xh_dialog_head" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_and_Right"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/margin_left_and_Right"
        android:background="@drawable/xh_input_edittext_bg">

        <com.xh.sdk.widget.EditTextWithDel
            android:id="@+id/edit_xh_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:dropDownHeight="30dp"
            android:hint="@string/xh_hint_edit_account"
            android:paddingLeft="35dp"
            android:paddingTop="10dp"
            android:paddingRight="50dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textColor="@color/xh_ed_color"
            android:textCursorDrawable="@drawable/xh_dl_cursor_red"
            android:textSize="13dp" />

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_user_logo"
                style="@style/xh_StyleInputIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/xh_account" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <ImageView
                android:id="@+id/img_history"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="8dp"
                android:src="@drawable/kr_ic_allow_down" />


        </LinearLayout>

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_and_Right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/margin_left_and_Right"
        android:background="@drawable/xh_input_edittext_bg">

        <com.xh.sdk.widget.EditTextWithDel
            android:id="@+id/edit_xh_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:digits="@string/xh_password_digits"
            android:dropDownHeight="30dp"
            android:hint="@string/xh_hint_edit_pwd"
            android:paddingLeft="35dp"
            android:paddingTop="10dp"
            android:paddingRight="50dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textColor="@color/xh_ed_color"
            android:textCursorDrawable="@drawable/xh_dl_cursor_red"
            android:textSize="13dp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_pwd_logo"
                style="@style/xh_StyleInputIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/xh_password" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <ImageView
                android:id="@+id/xh_eye"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="8dp"
                android:src="@drawable/xh_dl_login_disobserve_btn_nromal" />


        </LinearLayout>

    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/tv_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/margin_left_and_Right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/margin_left_and_Right"
            android:text="账号或密码错误"
            android:textColor="@color/xh_error_text_color"
            android:textSize="10sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/margin_left_and_Right"
            android:text="忘记密码"
            android:textSize="15sp" />

    </RelativeLayout>


    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_left_and_Right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/margin_left_and_Right"
        android:background="@drawable/xh_sdk_shape_pay_list_bg"
        android:text="登录"
        android:textColor="#dece96" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_and_Right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/margin_left_and_Right"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_quick_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一键注册" />

        <TextView
            android:id="@+id/tv_phone_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="手机快捷登录" />


    </RelativeLayout>

</LinearLayout>