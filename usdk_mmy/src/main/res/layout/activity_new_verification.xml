<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/verification_new_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f2f6"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_new_name_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/pay_black_bg_normal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_back_onclick"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:src="@drawable/pay_return" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/pay_logo" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="2dp"
            android:text="实名认证"
            android:textColor="#949DA9"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_warning_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_new_name_layout"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:lineSpacingExtra="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       根据有关部门的规定，网络游戏用户需要使用有效身份信息进行实名注册，为享受健康游戏生活，请玩家尽快实名注册。"
            android:textColor="#bbc0c6"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="我们承诺严格保护您的个人信息，不会对外泄露。"
            android:textColor="#f6413d"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/view_first"
        android:layout_width="match_parent"
        android:layout_height="0.6dip"
        android:layout_below="@id/ll_warning_message"
        android:layout_marginTop="20dip"
        android:background="@drawable/pay_usercenter_main_body_dividing_line_deep" />

    <LinearLayout
        android:id="@+id/ll_new_name_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_first"
        android:layout_marginLeft="0dip"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="84dip"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="姓名"
            android:textColor="#999999"
            android:textSize="16sp"
            android:visibility="visible" />


        <EditText
            android:id="@+id/edt_new_name_verification"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center_vertical"
            android:hint="请输入您的姓名"
            android:imeOptions="actionNext"
            android:maxLength="16"
            android:singleLine="true"
            android:textColor="#606062"
            android:textColorHint="#bbc0c6"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_two"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/ll_new_name_layout2"
        android:background="@drawable/pay_diving_light_line" />

    <LinearLayout

        android:id="@+id/ll_new_number_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_two"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="90dip"
            android:layout_height="match_parent"
            android:layout_marginRight="6dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="身份证号"
            android:textColor="#999999"
            android:textSize="16sp"
            android:visibility="visible" />

        <EditText
            android:id="@+id/edt_new_code_verification"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center_vertical"
            android:hint="请输入您的身份证号"
            android:imeOptions="actionDone"
            android:maxLength="30"
            android:singleLine="true"
            android:textColor="#606062"
            android:textColorHint="#bbc0c6"
            android:textSize="20sp" />
    </LinearLayout>


    <View
        android:id="@+id/view_thr"
        android:layout_width="match_parent"
        android:layout_height="0.6dip"
        android:layout_below="@id/ll_new_number_layout"
        android:background="@drawable/pay_usercenter_main_body_dividing_line_deep" />


    <LinearLayout
        android:id="@+id/ll_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_thr"
        android:layout_marginLeft="22dip"
        android:layout_marginRight="22dip"
        android:layout_marginTop="40dip">

        <Button
            android:id="@+id/bt_new_sure1_verification"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/bt_dialog_shape"
            android:text="提交"
            android:textColor="#fff"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_divider_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_confirm_button"
        android:layout_marginTop="18dip"
        android:background="@null"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0dip"
            android:layout_height="1dip"
            android:layout_marginLeft="22dip"
            android:layout_weight="1"
            android:background="@drawable/pay_diving_light_line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dip"
            android:layout_marginRight="14dip"
            android:textColor="#bbc0c6"
            android:textSize="13sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dip"
            android:layout_marginRight="22dip"
            android:layout_weight="1"
            android:background="@drawable/pay_diving_light_line" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_new_cancel_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_divider_"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="22dip"
        android:layout_marginRight="22dip"
        android:layout_marginTop="20dip">

        <TextView
            android:id="@+id/bt_new_cancel_verification"
            android:layout_width="match_parent"
            android:layout_height="44dip"
            android:background="@drawable/pay_button_selector_gray"
            android:clickable="true"
            android:gravity="center"
            android:text="稍后认证"
            tools:visibility="visible"
            android:textColor="#bbc0c6"
            android:textSize="14sp"
            android:visibility="gone"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="木蚂蚁游戏中心"
        android:textColor="#bbc0c6" />
</RelativeLayout>