<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/la_usercenter_title_login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/pay_black_bg_normal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_top_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:src="@drawable/pay_return" />

        <ImageView
            android:id="@+id/iv_top_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/pay_logo" />

        <TextView
            android:id="@+id/tv_top_title_login_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="2dp"
            android:text="登录"
            android:textColor="#949DA9"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/la_login_divider_title"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/la_usercenter_title_login"
        android:background="#000"
        android:orientation="vertical"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scroll_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/la_login_divider_title"
        android:background="#f1f2f6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dip"
            android:layout_marginLeft="2dip"
            android:layout_marginRight="2dip"
            android:background="#f1f2f6"
            android:orientation="vertical"
            android:paddingBottom="30dip">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dip"
                android:layout_marginTop="40dip"
                android:background="@drawable/pay_usercenter_main_body_dividing_line_deep" />

            <LinearLayout
                android:id="@+id/la_login_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dip"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_login_type"
                    android:layout_width="84dip"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="账号 "
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/iv_login_user_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="3dip"
                    android:src="@drawable/pay_down_arrow_normal"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/et_login_user_name"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:gravity="center_vertical"
                    android:hint="木蚂蚁账号"
                    android:imeOptions="actionNext"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:textColor="#606062"
                    android:textColorHint="#bbc0c6"
                    android:textSize="20sp" />


                <ImageView
                    android:id="@+id/iv_login_user_show_popwindow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:padding="3dip"
                    android:src="@drawable/pay_down_arrow_normal" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@drawable/pay_diving_light_line" />

            <LinearLayout
                android:id="@+id/la_login_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="84dip"
                    android:layout_height="match_parent"
                    android:layout_marginRight="6dip"
                    android:gravity="center"
                    android:text="密码"
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:visibility="visible" />

                <EditText
                    android:id="@+id/et_login_password"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM-_.@"
                    android:gravity="center_vertical"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="#606062"
                    android:textColorHint="#bbc0c6"
                    tools:text="1234565"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/iv_login_display_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:layout_gravity="right|center_vertical"
                    android:padding="3dip"
                    android:paddingRight="6dp"
                    android:src="@drawable/pay_undisplay_password" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dip"
                android:background="@drawable/pay_usercenter_main_body_dividing_line_deep" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dip"
                android:orientation="horizontal"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_find_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="24dip"
                    android:background="@drawable/pay_usercenter_icon_problem" />

                <TextView
                    android:id="@+id/tv_login_find_password1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_login_find_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="8dip"
                    android:text="忘记密码"
                    android:textColor="#99cc33"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_login_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dip"
                android:layout_marginRight="22dip"
                android:layout_marginTop="24dip">

                <Button
                    android:id="@+id/btn_login_login"
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:background="@drawable/pay_btn_paycenter_login_style"
                    android:text="登录"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_xks_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dip"
                android:layout_marginRight="22dip"
                android:layout_marginTop="24dip"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_xks_login"
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:background="@drawable/pay_usercenter_btn_xks"
                    android:text="小咖秀帐号登录"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_login_divider_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dip"
                android:background="@null"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dip"
                    android:layout_height="1dip"
                    android:layout_marginLeft="22dip"
                    android:layout_weight="1"
                    android:background="@drawable/pay_diving_light_line" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dip"
                    android:layout_marginRight="14dip"
                    android:textColor="#bbc0c6"
                    android:textSize="13sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dip"
                    android:layout_marginRight="22dip"
                    android:layout_weight="1"
                    android:background="@drawable/pay_diving_light_line" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/la_login_regist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:layout_marginLeft="22dip"
                android:layout_marginRight="22dip"
                android:layout_marginTop="20dip"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_login_regist"
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:background="@drawable/pay_button_selector_gray"
                    android:gravity="center"
                    android:text="我也注册"
                    android:textColor="#bbc0c6"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/la_login_divider_virtual"
                    android:layout_width="2dip"
                    android:layout_height="52dip"
                    android:background="@drawable/pay_dividing_virtual"
                    android:orientation="vertical"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_login_autoregist"
                    android:layout_width="match_parent"
                    android:layout_height="44dip"
                    android:layout_marginTop="14dip"
                    android:background="@drawable/pay_button_selector_gray"
                    android:gravity="center"
                    android:text="体验试玩"
                    android:textColor="#bbc0c6"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:text="V3.0   客服邮箱: cz@mumayi.com"
        android:textColor="#a3a3a3"
        android:textSize="12sp"
        android:visibility="gone" />

    <include
        layout="@layout/paycenter_activity_foot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="visible" />

</RelativeLayout>