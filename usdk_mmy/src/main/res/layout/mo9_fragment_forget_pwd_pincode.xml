<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mo9_bg_white_with_frame_corners"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mo9_row_margin_top_small"
        android:layout_marginRight="@dimen/mo9_row_margin_top_small"
        android:layout_marginTop="@dimen/mo9_error_margin_top" >

        <ImageButton
            android:id="@+id/mo9_btn_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/mo9_btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/mo9_title_forget_pwd"
            android:textColor="@color/btn_blue_normal"
            android:textSize="@dimen/mo9_title_size" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/mo9_error_margin_top"
            android:orientation="vertical"
            android:paddingLeft="@dimen/mo9_row_margin_top_small"
            android:paddingRight="@dimen/mo9_row_margin_top_small" >

            <TextView
                android:id="@+id/mo9_error_msg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mo9_bg_error_msg"
                android:paddingBottom="3dp"
                android:paddingLeft="@dimen/mo9_row_margin_top_small"
                android:paddingTop="3dp"                android:text="@string/mo9_errormsg_unvalidate_phone_num"
                android:textColor="@color/mo9_error_text_color" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mo9_error_margin_top"
                android:text="@string/mo9_tip_forget_pwd_1"
                android:textColor="@color/mo9_text_color_grey" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/mo9_input_frame_height"
                android:layout_marginTop="@dimen/mo9_error_margin_top"
                android:background="@drawable/mo9_bg_input"
                android:gravity="center" >

                <com.mumayi.paymentpay.ui.TryEditText
                    android:id="@+id/mo9_forget_pwd_pin_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mo9_edit_margin_left"
                    android:background="@null"
                    android:hint="@string/mo9_enter_hint_pincode"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/mo9_text_color_grey" />

                <ImageButton
                    android:id="@+id/mo9_forget_pwd_pin_code_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/mo9_edit_margin_left"
                    android:background="@drawable/mo9_btn_clear"
                    android:src="@drawable/mo9_btn_clear" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/mo9_input_frame_height"
                android:layout_marginTop="@dimen/mo9_error_margin_top"
                android:background="@drawable/mo9_bg_input"
                android:gravity="center" >

                <com.mumayi.paymentpay.ui.TryEditText
                    android:id="@+id/mo9_forget_pwd_new_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/mo9_edit_margin_left"
                    android:background="@null"
                    android:hint="@string/mo9_enter_hint_new_pwd"
                    android:inputType="phone"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:textColor="@color/mo9_text_color_grey" />

                <ImageButton
                    android:id="@+id/mo9_forget_pwd_new_pwd_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/mo9_edit_margin_left"
                    android:background="@drawable/mo9_btn_clear"
                    android:src="@drawable/mo9_btn_clear" />
            </RelativeLayout>

            <Button
                android:id="@+id/mo9_forget_pwd_update_pwd"
                style="@style/mo9_btn_register_txt"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/mo9_input_frame_height"
                android:layout_marginBottom="@dimen/mo9_button_padding"
                android:layout_marginTop="@dimen/mo9_button_padding"
                android:text="@string/mo9_ensure" />

            <TextView
                android:id="@+id/mo9_tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mo9_button_padding"
                android:text="@string/mo9_tip_forget_pwd_2"
                android:textColor="@color/mo9_text_color_grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_padding_middle"
                android:layout_marginTop="@dimen/mo9_button_padding"
                android:text="@string/mo9_tip_cusmer_phone"
                android:textColor="@color/mo9_text_color_grey"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>