<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:background="#ffffff"
    android:layout_centerInParent="true">

    <LinearLayout
        android:layout_marginTop="23dp"
        android:layout_marginBottom="23dp"
        android:id="@+id/detail_roll_left"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_roll_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="300"
            android:layout_marginTop="2dp"
            android:textColor="@color/pay_button_pressed"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_roll_price"
            android:gravity="center_horizontal"
            android:text="余额"
            android:textColor="@color/textColorTip"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout


        android:id="@+id/detail_roll_min_ll"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/detail_roll_left"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:textSize="14sp"
            android:textColor="@color/textColorBlack"
            android:id="@+id/start_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500面券额" />

        <TextView
            android:layout_marginTop="2dp"
            android:textSize="11sp"
            android:id="@+id/detail_roll_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorTip"
            android:text="蚂蚁券：myj8892895419375" />

        <TextView
            android:layout_marginTop="2dp"
            android:textSize="11sp"
            android:id="@+id/roll_expiration_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorTip"
            android:text="过期时间：2017-10-17 11:03:20" />
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/detail_roll_residue_time_tv"
            android:textColor="@color/textColorRed"
            android:text="剩 8 天"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>