<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"   
    android:orientation="vertical"
    android:background="@drawable/jolo_white_shape_rect5"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">
    
    <TextView
        android:id="@+id/jolopay_gbao_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:text="@string/jolopay_gbao_pay_dialog_tip"
        android:textColor="@color/jolo_takeout_color" />
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/jolo_tipdown"
    	android:orientation="horizontal">
    	<Button
	        android:id="@+id/dlg_cancel_btn"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:textSize="18sp"
	        android:padding="10dp"
	        android:visibility="gone"
	        android:background="@color/cmmn_gray"
	        android:text="@string/jolo_cancel"
	        android:textColor="@color/jolo_white" />
    	
	    <Button
	        android:id="@+id/dlg_ok_btn"
	        android:layout_width="0dp"
	        android:padding="10dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:textSize="18sp"
	        android:background="@drawable/jolo_bottom_lr_blue_shape_rect5"
	        android:text="我知道了"
	        android:textColor="@color/jolo_white" />
    </LinearLayout>

</LinearLayout>