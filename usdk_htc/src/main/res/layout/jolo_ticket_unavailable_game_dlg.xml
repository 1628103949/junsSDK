<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="324dp"
    android:layout_height="244dp"
    android:background="@drawable/jolo_white_shape_rect10" >

    <TextView
        android:id="@+id/jolo_unavailable_game_title_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:background="@drawable/jolo_top_lr_blue_shape_rect10"
        android:text="@string/jolo_game_mainpage"
        android:textColor="@color/jolo_white"
        android:textSize="16sp" />

    <ScrollView
        android:id="@+id/sl"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/jolo_unavailable_game_title_tv" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/jolo_white"
                android:text="目前暂时不支持以下游戏使用："
                android:textColor="@color/jolo_light_black22"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/jolo_unavailable_game_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:lineSpacingMultiplier="1.2"
                android:background="@color/jolo_white"
                android:textColor="@color/jolo_light_black66"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/jolo_unavailable_game_sure_tv"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_blue_shape_rect20"
        android:gravity="center"
        android:text="@string/jolo_ok"
        android:textColor="@color/jolo_white"
        android:textSize="16sp" />

</RelativeLayout>