<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/jolo_ticket_ll"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="112dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/jolo_ticket_left_background"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jolo_ticket_unit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="@color/jolo_white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/jolo_ticket_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/jolo_ticket_unit_tv"
                android:text="0"
                android:textColor="@color/jolo_white"
                android:textSize="37sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/jolo_ticket_boundary_tv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="无门槛"
            android:textColor="@color/jolo_white"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/jolo_ticket_right_background" >

        <Button
            android:id="@+id/jolo_ticket_gettable_btn"
            android:layout_width="61dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/jolo_ticket_btn_blue_solid_rect"
            android:text="@string/ticket_getatable"
            android:textColor="@color/jolo_white"
            android:textSize="12sp" />
        
        <TextView 
            android:id="@+id/jolo_ticket_last_count"
            android:layout_below="@id/jolo_ticket_gettable_btn"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余10张"
            android:textColor="#BAB9B9"
            android:textSize="8sp"/>

        <TextView
            android:id="@+id/jolo_ticket_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:text="代金券"
            android:textColor="@color/jolo_light_black22"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/jolo_ticket_des_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jolo_ticket_title_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/jolo_ticket_gettable_btn"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:text="代金券"
            android:textColor="@color/jolo_light_black33"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/jolo_ticket_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/jolo_ticket_des_tv"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@id/jolo_ticket_gettable_btn"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:text="代金券"
            android:textColor="@color/jolo_light_black99"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>