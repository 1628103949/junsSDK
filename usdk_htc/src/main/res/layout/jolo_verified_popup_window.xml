<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/jolo_verified_type_shape_rect"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingBottom="5dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/jolo_verified_id_card"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:text="@string/jolo_verified_id_card"
        android:textColor="@color/jolo_account_color"
        android:textSize="14sp" />
    
    <TextView
        android:id="@+id/jolo_verified_hk_and_macau_pass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:text="@string/jolo_verified_hk_and_macau_pass"
        android:textColor="@color/jolo_light_black99"
        android:textSize="14sp" />
    
    <TextView
        android:id="@+id/jolo_verified_mtps"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:text="@string/jolo_verified_mtps"
        android:textColor="@color/jolo_light_black99"
        android:textSize="14sp" />
    
    <TextView
        android:id="@+id/jolo_verified_over_sea"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="7dp"
        android:gravity="center_vertical"
        android:text="@string/jolo_verified_over_sea"
        android:textColor="@color/jolo_light_black99"
        android:textSize="14sp" />

</LinearLayout>