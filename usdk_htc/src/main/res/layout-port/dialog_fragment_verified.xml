<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/jolo_white_shape_rect10" >

        <RelativeLayout
            android:id="@+id/jolo_verified_title_rl"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/jolo_verified_top_lr_shape_rect10" >

            <TextView
                android:id="@+id/jolo_verified_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/jolo_safe_verified"
                android:textColor="@color/jolo_light_black22"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/jolo_jump_verified_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="@string/jolo_jump_bindphone"
                android:textColor="@color/jolo_light_black22"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/jolo_verified_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jolo_verified_title_rl"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/jolo_verified_tip"
            android:textColor="@color/jolo_light_black22"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/jolo_verified_card_type_ll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/jolo_verified_tip_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/jolo_gray_edit_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jolo_verified_card_type_tv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="身份证"
                android:textColor="@color/jolo_account_color"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/more_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:src="@drawable/jolo_more_down" />
        </LinearLayout>

        <EditText
            android:id="@+id/jolo_verified_name_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/jolo_verified_card_type_ll"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/jolo_gray_edit_bg"
            android:gravity="center_vertical"
            android:hint="@string/jolo_verified_real_name"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/jolo_light_black22"
            android:textColorHint="@color/jolo_light_black99"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/jolo_verified_card_number_tv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/jolo_verified_name_tv"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/jolo_gray_edit_bg"
            android:digits="@string/jolo_register_digits"
            android:gravity="center_vertical"
            android:hint="@string/jolo_verified_card_number"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="20"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:textColor="@color/jolo_light_black22"
            android:textColorHint="@color/jolo_light_black99"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

        <Button
            android:id="@+id/jolo_verified_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/jolo_verified_card_number_tv"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_gray_shape_rect5"
            android:gravity="center"
            android:text="@string/jolo_verified"
            android:textColor="@color/jolo_white"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>