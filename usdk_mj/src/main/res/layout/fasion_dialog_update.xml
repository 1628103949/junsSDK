<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/fusion_gray_frame_login"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:text="请进行更新下载!"
        android:textColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fusion_update_dialog_exit"
            android:text="退出游戏"
            android:textColor="#FFFFFF"
            android:layout_marginRight="50dp"
            android:background="@drawable/fusion_btn_color_blue"
            android:layout_width="90dp"
            android:textSize="14sp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/fusion_update_dialog_confirm"
            android:textColor="#FFFFFF"
            android:text="更新游戏"
            android:background="@drawable/fusion_btn_color_org"
            android:layout_width="90dp"
            android:textSize="14sp"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
