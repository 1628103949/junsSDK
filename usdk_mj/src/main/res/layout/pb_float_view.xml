<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#88000000"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pb_log_title_rl"
        android:layout_width="320dp"
        android:layout_height="30dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/pb_flaot_log_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/pb_dialog_close" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/pb_hot_time"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pb_search_content_et"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="搜索"
                android:paddingLeft="6dp"
                android:maxWidth="120dp"
                android:minWidth="100dp"
                android:singleLine="true"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#a8a8a8" />

            <ImageView
                android:id="@+id/pb_search_enter_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="4dp"
                android:src="@drawable/pb_search" />
        </LinearLayout>

        <TextView
            android:id="@+id/pb_float_log_save_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:gravity="center"
            android:padding="4dp"
            android:text="保存"
            android:textColor="#ffffff"
            android:textSize="14sp" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="320dp"
        android:layout_height="220dp">

        <TextView
            android:id="@+id/pb_float_log_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadeScrollbars="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center|left"
            android:padding="5dp"
            android:scrollbars="vertical"
            android:textColor="#f5f5f5"
            android:textSize="13sp" />
    </ScrollView>
</LinearLayout>