<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mpg_mask_round_rect_black"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/packTv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:drawableTop="@drawable/mpg_icon_pack_info"
            android:gravity="center"
            android:text="@string/mpg_pack"
            android:textColor="#FF5A4C"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/voucherTv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:drawableTop="@drawable/mpg_icon_voucher_info"
            android:gravity="center"
            android:text="@string/mpg_voucher"
            android:textColor="#FF9017"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/activityTv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:drawableTop="@drawable/mpg_icon_activity_info"
            android:gravity="center"
            android:text="@string/mpg_activity"
            android:textColor="#507DFF"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/nullLayout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/packNullIv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/mpg_icon_up_arrow"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/voucherNullIv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/mpg_icon_up_arrow"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/activityNullIv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/mpg_icon_up_arrow"
                android:visibility="invisible" />

        </LinearLayout>

        <TextView
            android:id="@+id/nullTv"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/mpg_mask_round_rect_black"
            android:gravity="center"
            android:text="@string/mpg_voucher_null"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>