<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/mpg_dialog_background_round_white"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="35dp"
    android:paddingTop="24dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp">

    <TextView
        android:id="@+id/tv_account_user_locked_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_account_user_locked_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="26dp"
        android:scrollbars="vertical"
        android:textColor="#666666"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_account_user_locked_positive"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:background="@drawable/mpg_selector_btn_big_round_rect_orange_deep"
        android:gravity="center"
        android:text="@string/mpg_known"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

</LinearLayout>