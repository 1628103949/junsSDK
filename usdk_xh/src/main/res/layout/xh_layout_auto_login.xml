<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/xh_sdk_shape_main"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgHead"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/xh_account" />

        <TextView
            android:id="@+id/txtTip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="6"
            android:singleLine="true"
            android:textColor="#393D40"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=", 欢迎进入游戏!"
            android:textColor="#393D40"
            android:textSize="16sp" />

        <Button xmlns:fancy="http://schemas.android.com/apk/res-auto"
            android:id="@+id/btnChange"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/xh_sdk_shape_pay_list_bg"
            android:text="切换账号"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>
</FrameLayout>
