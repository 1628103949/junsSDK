<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xh_sdk_shape_main"
    android:orientation="vertical">

    <include layout="@layout/xh_dialog_head" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_and_Right"
        android:layout_marginTop="30dp"
        android:layout_marginRight="@dimen/margin_left_and_Right"
        android:background="@drawable/xh_input_edittext_bg">

        <com.xh.sdk.widget.EditTextWithDel
            android:id="@+id/edit_xh_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:dropDownHeight="30dp"
            android:hint="@string/xh_hint_edit_phone"
            android:paddingLeft="35dp"
            android:paddingTop="10dp"
            android:paddingRight="50dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textColor="@color/xh_ed_color"
            android:textCursorDrawable="@drawable/xh_dl_cursor_red"
            android:textSize="13dp" />

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_user_logo"
                style="@style/xh_StyleInputIcon"
                android:src="@drawable/xh_phone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            />


        </LinearLayout>

    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_and_Right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="@dimen/margin_left_and_Right"
        android:background="@drawable/xh_input_edittext_bg">

        <com.xh.sdk.widget.EditTextWithDel
            android:id="@+id/edit_xh_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:digits="@string/xh_password_digits"
            android:dropDownHeight="30dp"
            android:hint="@string/xh_hint_edit_code"
            android:paddingLeft="35dp"
            android:paddingTop="10dp"
            android:paddingRight="50dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textColor="@color/xh_ed_color"
            android:textCursorDrawable="@drawable/xh_dl_cursor_red"
            android:textSize="13dp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_pwd_logo"
                style="@style/xh_StyleInputIcon"
                android:src="@drawable/xh_verificationcode" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/bt_get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="获取验证码"
                android:textColor="@color/xh_code_text_color" />

        </LinearLayout>

    </FrameLayout>


    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_left_and_Right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/margin_left_and_Right"
        android:background="@drawable/xh_sdk_shape_pay_list_bg"
        android:text="登录"
        android:textColor="#ddcf96" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_and_Right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/margin_left_and_Right"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phone_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机注册" />

        <TextView
            android:id="@+id/tv_account_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="账号登录登录" />


    </RelativeLayout>

</LinearLayout>