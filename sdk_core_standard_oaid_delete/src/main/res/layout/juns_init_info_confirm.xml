<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="450dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:background="@drawable/juns_exit_dialog_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/juns_warm_prompt"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/init_info_confirm_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/juns_init_info_confirm_first"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/init_info_confirm_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/juns_init_info_confirm_second"
            android:textColor="@android:color/black"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/init_disagree"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@drawable/btn_init_disagree"
                android:text="拒绝授权"
                android:textColor="#FF8000"
                android:paddingLeft="-13dp"
                android:textSize="15sp"/>

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/init_agree"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:background="@drawable/btn_init_agree"
                android:text="我再想想"
                android:textColor="#ffffff"
                android:paddingRight="-13dp"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>