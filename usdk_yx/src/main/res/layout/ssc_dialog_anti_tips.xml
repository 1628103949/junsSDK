<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ssc_bg_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="@string/ssc_real_name_tips2"
        android:textColor="@color/ssc_edit"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_left"
            android:layout_width="0.0dip"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1.0"
            android:background="@drawable/ssc_sel_neg_btn"
            android:stateListAnimator="@null"
            android:text="@string/ssc_cancel"
            android:textColor="@drawable/ssc_sel_neg_btn_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="0.0dip"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1.0"
            android:background="@drawable/ssc_sel_pos_btn"
            android:stateListAnimator="@null"
            android:text="@string/ssc_positive"
            android:textColor="@color/ssc_edit"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_read_anti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/ssc_real_name_tips3"
        android:textSize="12sp"
        android:textColor="@drawable/ssc_sel_oth_btn_text"/>

</LinearLayout>