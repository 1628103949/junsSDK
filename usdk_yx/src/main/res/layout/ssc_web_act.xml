<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/ssc_web_sta_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="28dp">

        <ImageButton
            android:src="@drawable/ssc_ic_web_back"
            android:id="@+id/ssc_web_act_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:background="@null" />

        <TextView
            android:id="@+id/ssc_web_act_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="71dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:background="@drawable/ssc_bg_web_title_right">

            <ImageButton
                android:id="@+id/ssc_web_act_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@null"
                android:padding="10dp"
                android:src="@drawable/ssc_ic_web_about" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"
                android:background="#DCDCDC" />

            <ImageButton
                android:id="@+id/ssc_web_act_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:padding="10dp"
                android:src="@drawable/ssc_ic_web_close" />
        </RelativeLayout>
    </RelativeLayout>

    <com.sspyx.center.widget.LineProgressBar
        android:id="@+id/ssc_web_act_lpb"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <LinearLayout
        android:id="@+id/ssc_web_act_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>
