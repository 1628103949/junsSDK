<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:background="@drawable/ssc_bg_dialog"
    android:orientation="vertical">

    <include layout="@layout/ssc_layout_title"/>


    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/ssc_real_name_tips"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ssc_bg_edit"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ssc_real_name"
                android:textSize="12sp"
                android:textColor="#282828"
                android:layout_marginStart="5dp"/>

            <EditText
                android:id="@+id/ssc_et_name"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="@string/ssc_real_name_hint"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="text"
                android:maxLength="8"
                android:padding="10dp"
                android:textColor="@color/ssc_edit"
                android:textColorHint="@color/ssc_edit_hint"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.33dp"
            android:background="#E8E8E8" />

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="36dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ssc_id_card"
                android:textColor="@color/ssc_edit"
                android:textSize="12sp"
                android:layout_marginStart="5dp"/>

            <EditText
                android:id="@+id/ssc_et_id_num"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:hint="@string/ssc_id_card_hint"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:maxLength="18"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/ssc_edit"
                android:textColorHint="@color/ssc_edit_hint"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/ssc_btn_id_bind"
        android:layout_width="280dp"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/ssc_sel_pos_btn"
        android:stateListAnimator="@null"
        android:text="@string/ssc_real_name_do"
        android:textColor="@color/ssc_edit"
        android:textSize="16sp" />
</LinearLayout>