<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="326dp"
    android:layout_height="wrap_content"
    android:background="@drawable/ssc_bg_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="26dp"
        android:gravity="center"
        android:text="@string/ssc_del_user_tips"
        android:textColor="@color/ssc_edit"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_left"
            android:layout_width="0.0dip"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1.0"
            android:background="@drawable/ssc_sel_neg_btn"
            android:stateListAnimator="@null"
            android:text="@string/ssc_cancel"
            android:textColor="@drawable/ssc_sel_neg_btn_text"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_right"
            android:layout_width="0.0dip"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_weight="1.0"
            android:background="@drawable/ssc_sel_pos_btn"
            android:stateListAnimator="@null"
            android:text="@string/ssc_positive"
            android:textColor="@color/ssc_edit"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>