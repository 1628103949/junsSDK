<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="353dp"
            android:layout_height="275dp"
            android:layout_centerInParent="true"
            android:background="@drawable/juns_dialog_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="65dp"
                    android:background="@drawable/juns_reg_succes_txt" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="#00dddddd">

                    <ImageView
                        android:id="@+id/user_img"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/juns_account_txt_reg"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/user_name_tv"
                        android:layout_width="208dp"
                        android:layout_height="23dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="52dp"
                        android:layout_toRightOf="@id/user_img"
                        android:background="@drawable/juns_edit_bg"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="@string/juns_user_name_success"
                        android:textColor="#747474"
                        android:textSize="13sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/pwd_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/pwd_img"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="50dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/juns_pwd_txt_reg"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/user_pwd_tv"
                        android:layout_width="208dp"
                        android:layout_height="23dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="52dp"
                        android:layout_toRightOf="@id/pwd_img"
                        android:background="@drawable/juns_edit_bg"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:text="@string/juns_user_pwd_success"
                        android:textColor="#747474"
                        android:textSize="13sp" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="87dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/juns_account_store_tips"
                    android:textColor="#747474"
                    android:textSize="12sp" />

                <ImageButton
                    android:id="@+id/enter_game_btn"
                    android:layout_width="110dp"
                    android:layout_height="33dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/juns_enter_game"
                    android:scaleType="centerCrop" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>