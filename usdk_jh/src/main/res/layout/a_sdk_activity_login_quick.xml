<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="306.67dp"
    android:layout_height="306.67dp"
    android:background="@drawable/a_sdk_bt_in_bg_whi"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/tv_quick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:includeFontPadding="false"
        android:textSize="14dp"
        android:textStyle="bold"
        android:textColor="#2D1F1F"
        android:layout_marginTop="33.33dp"
        android:text="快速登录"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/tv_quick"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37.67dp"
        android:src="@drawable/a_sdk_login_logo"/>

    <Button
        android:id="@+id/login"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:background="@drawable/a_sdk_normal_button"
        android:layout_marginTop="23.33dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logo"
        android:textColor="@drawable/a_sdk_normal_button"
        android:text="BUFF授权快速登录"/>

    <TextView
        android:id="@+id/other_login"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:padding="15dp"
        android:layout_marginTop="26.33dp"
        android:includeFontPadding="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/login"
        android:textColor="#2D1F1F"
        android:textSize="12dp"
        android:text="其它登录方式>"/>

</RelativeLayout>