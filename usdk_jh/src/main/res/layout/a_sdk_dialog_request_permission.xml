<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="254dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/a_sdk_bt_in_bg_whi"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示"
            android:textColor="@color/yiyuan_sdk_font_black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="22dp"
            android:lineSpacingMultiplier="1.2"
            android:text="本应用将获得以下权限以提供更好地服务哦："
            android:textColor="#FF333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_phone_storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/a_sdk_ffc936_circle"
            android:drawablePadding="7dp"
            android:text="手机存储权限"
            android:textColor="#FF333333"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_phone_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="12dp"
            android:drawableLeft="@drawable/a_sdk_ffc936_circle"
            android:drawablePadding="7dp"
            android:text="设备信息权限"
            android:textColor="#FF333333"
            android:textSize="12sp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="22dp"
            android:background="#FFE5E5E5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#999"
                android:textSize="15sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#FFE5E5E5" />

            <TextView
                android:id="@+id/tv_open"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="去开启"
                android:textColor="@color/yiyuan_sdk_50B9C0_circle"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>