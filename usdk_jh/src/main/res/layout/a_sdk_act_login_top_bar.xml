<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="306.67dp"
    android:paddingTop="23.67dp"
    android:paddingBottom="16.83dp"
    android:paddingLeft="26.67dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/login_topbar_ll1"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_topbar_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="手机登录"
            android:textColor="@color/yxf_sdk_nav_bar"
            android:textSize="14dp" />

        <View
            android:id="@+id/login_topbar_v1"
            android:layout_width="15.67dp"
            android:layout_height="2.67dp"
            android:layout_marginTop="3.5dp"
            android:background="@drawable/a_sdk_normal_button"
            android:enabled="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_topbar_ll2"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_topbar_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="账号登录"
            android:textColor="@color/yxf_sdk_nav_bar"
            android:textSize="14dp" />

        <View
            android:id="@+id/login_topbar_v2"
            android:layout_width="15.67dp"
            android:layout_height="2.67dp"
            android:layout_marginTop="3.5dp"
            android:background="@drawable/a_sdk_normal_button"
            android:enabled="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_topbar_ll3"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/login_topbar_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="快速注册"
            android:includeFontPadding="false"
            android:textColor="@color/yxf_sdk_nav_bar"
            android:textSize="14dp" />

        <View
            android:id="@+id/login_topbar_v3"
            android:layout_width="15.67dp"
            android:layout_height="2.67dp"
            android:layout_marginTop="3.5dp"
            android:background="@drawable/a_sdk_normal_button"
            android:enabled="true" />
    </LinearLayout>

    <ImageView
        android:id="@+id/login_topbar_right_tip"
        android:visibility="visible"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginLeft="13dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/a_sdk_wenhao" />
</LinearLayout>