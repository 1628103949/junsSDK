<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/yxf_sdk_white"
    android:layout_height="57dp">

    <LinearLayout
        android:id="@+id/check_area"
        android:layout_width="wrap_content"
        android:paddingRight="10dp"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:button="@drawable/a_sdk_cb"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/checkbox"
            android:gravity="center"
            android:textColor="@color/yxf_sdk_gray_title"
            android:textSize="12sp"
            android:text="自动" />

    </LinearLayout>

    <ImageView
        android:id="@+id/into"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/a_sdk_voucher_right"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/check_area"
        android:layout_toLeftOf="@id/into"
        android:layout_marginHorizontal="23dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"
            android:textColor="@color/yxf_sdk_gray_title"
            android:textSize="12sp"
            tools:text="Where to ellipsize text. Makes the TextView be at most this many ems wide"/>

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10.67sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="6.67dp"
            android:textColor="@color/yxf_sdk_gray_result"
            tools:text="最近登录：散人" />
    </LinearLayout>

</RelativeLayout>